.verification-code {
  position: relative;
  display: block;
  background: #f7f9fa;
  border-radius: 4px;
  border: 1px solid #e4e7eb;
}

.verification-code view {
  float: none;
  width: auto;
  height: auto;
  display: block;
  padding: 0;
  margin: 0;
  border: 0;
  line-height: 1.428571429;
  box-sizing: content-box;
  -moz-box-sizing: content-box;
  -webkit-box-sizing: content-box;
}

.verification-code .cpt-loading-box {
  position: absolute;
  top: -1px;
  left: -1px;
  width: 100%;
  z-index: 10;
  font-size: 12px;
  text-align: center;
  -moz-user-select: none;
  overflow: hidden;
  -webkit-user-select: none;
  -ms-user-select: none;
  -khtml-user-select: none;
  user-select: none;
  border-radius: 4px;
  font-weight: bold;
  display: block;
}

.verification-code .cpt-loading-info-box {
  overflow: hidden;
  white-space: nowrap;
}

.verification-code .cpt-loading-icon-content {
  height: 17px;
  width: 17px;
  overflow: hidden;
  margin-right: 5px;
}

.verification-code .cpt-loading-right {
  line-height: 38px;
  background-position: -111px 0px !important;
}

.verification-code .cpt-loading-error {
  line-height: 38px;
  background-position: -129px 0px !important;
}

.verification-code .cpt-loading-text {
  display: inline-block;
  white-space: nowrap;
  vertical-align: top;
}

.verification-code .cpt-loading-img {
  width: 30px;
  height: 30px;
  min-width: 20px;
  min-height: 10px;
}
