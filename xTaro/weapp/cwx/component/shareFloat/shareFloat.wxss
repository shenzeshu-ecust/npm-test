/* pages/demo/demo.wxss */
.fullscreen {
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
}
.pop {
  z-index: 10000;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
}
.share-wrapper {
  font-size: 30rpx;
  background-color: #ffffff;
}
.share-head {
  display: flex;
  justify-content: center;
  align-items: center;
}

.share-head .title {
  padding: 30rpx 0;
}

.share-head .close {
  position: absolute;
  right: 30rpx;
  height: 30rpx;
  width: 30rpx;
}

.share-content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.share-content .timeline,
.friend {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.share-content .icon {
  margin: 0 0 20rpx;
  width: 80rpx;
  height: 80rpx;
}
.reset-button {
  width: 100%;
  line-height: inherit;
  background: #fff;
  font-size: inherit;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.reset-button:after {
  display: none;
}
.center {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.pad {
  padding: 30rpx 0 60rpx;
}
.timeline:hover {
  background-color: #ccc;
}
.friend:hover {
  background-color: #ccc;
}
.friend:hover .reset-button {
  background-color: #ccc;
}