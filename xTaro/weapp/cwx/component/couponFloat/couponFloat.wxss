.ellipsis {
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;
}
button {
  margin: 0;
  padding: 0;
  background: transparent;
  font-size: 30rpx;
  border: none;
}
button::after {
  border: none;
}
.float-wrapper {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 580rpx;
  z-index: 1000;
}
.res-envelope {
  width: 580rpx;
  height: 762rpx;
  background: red;
}
.res-envelope button {
  width: 100%;
  height: 100%;
  background: transparent;
}
.float-wrapper .bg {
  width: 100%;
  height: auto;
  padding-top: 214rpx;
  padding-bottom: 20rpx;
  margin-bottom: 78rpx;
}
.coupons-wrapper {
  width: 540rpx;
  margin: 0 auto;
  min-height: 168rpx;
  max-height: 390rpx;
  overflow-x: scroll;
}
.coupon-item {
  position: relative;
  height: 80rpx;
  padding-top: 30rpx;
  padding-bottom: 26rpx;
  width: 508rpx;
  background-image: url('https://images3.c-ctrip.com/marketing/2020/10/commonFloat/bg_coupon.png');
  background-size: 100% 100%;
  margin: 0 auto 10rpx;
  overflow: hidden;
}
.coupon-item .left {
  width: 154rpx;
  text-align: center;
  float: left;
  color: #FF9800;
}
.coupon-item .left .condition {
  font-size: 18rpx;
}
.coupon-item .left .discount {
  font-size: 66rpx;
}
.coupon-item .left .discount span {
  font-size: 24rpx;
}
.coupon-item .middle {
  width: 208rpx;
  padding-left: 24rpx;
  padding-right: 36rpx;
  float: left;
}
.coupon-item .middle .title{
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 28rpx;
  height: 56rpx;
}
.coupon-item .middle .time{
  margin-top: 6rpx;
  color: #cccccc;
  font-family: PingFangSC-Regular;
  font-size: 18rpx;
  color: #999999;
  text-align: left;
  line-height: 19.2rpx;
}
.coupon-item .right {
  float: right;
  text-align: center;
  padding-right: 20rpx;
}
.coupon-item .icon {
  position: absolute;
  width: 105rpx;
  height: 80rpx;
  bottom: -12rpx;
  right: 71rpx;
  background-image: url('https://images3.c-ctrip.com/marketing/2020/10/commonFloat/lable_1.png');
  background-size: 100% 100%;
}
.coupon-item .icon.icon-none {
  background-image: url('https://images3.c-ctrip.com/marketing/2020/10/commonFloat/lable_2.png');
  background-size: 100% 100%;
}
.coupon-item .icon-new {
  position: absolute;
  width: 60rpx;
  height: 62.5rpx;
  top: 0;
  right: 0;
  background-image: url('https://images3.c-ctrip.com/marketing/2020/10/commonFloat/lable_3.png');
  background-size: 100% 100%;
}
.coupon-item .right button {
  text-align: center;
  height: 72rpx;
  line-height: 36rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FF9800;
  z-index: 1;
}
.bottom-bg {
  width: 100%;
  height: 118rpx;
  background: red;
  z-index: 9;
  position: absolute;
  bottom: 0;
}
.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  position: fixed;
  top: 0;
  z-index: 999;
}
.close_btn {
  width: 68rpx;
  height: 68rpx;
  border: 3rpx solid #FFFFFF;
  border-radius: 50%;
  position: absolute;
  bottom: -136rpx;
  left: 50%;
  transform: translateX(-34rpx);
}
.close_btn::before,
.close_btn::after {
  content: '';
  position: absolute;
  height: 40rpx;
  width: 3rpx;
  top: 15rpx;
  right: 34rpx; 
  background: #FFFFFF;
}
.close_btn::before{
  transform: rotate(45deg);
}
.close_btn::after{
  transform: rotate(-45deg);
}