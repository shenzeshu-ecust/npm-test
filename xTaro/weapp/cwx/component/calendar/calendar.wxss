}

.body_tips {
    top: 60px;
}

.calendar-module {
    position: relative;
    padding-top: 30px;
    background-color: #fff;
    box-sizing: border-box;
    min-height: 100%;
}
.calendar-week {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 30px;
    font-size: 14px;
    line-height: 30px;
    overflow: hidden;
    color: #666;
    background-color: #F5F5F5;
    border-bottom: 1px solid #D0D0D0;
    z-index: 99;
}
.calendar-module_tips {
    padding-top: 60px;
}
.calendar-week_tips {
    height: 60px;
}
.calendar-module_tips-show {
    width: 100%;
    height: 30px;
    overflow: hidden;
    padding: 0 10px;
    text-align: center;
    line-height: 30px;
    white-space: nowrap;
    text-overflow: ellipsis;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #666;
    background-color: #FFF8BD;
}
.calendar-week_item {
    float: left;
    width: 14.25%;
    height: 30px;
    text-align: center;
}
.calendar-week_sun,
.calendar-week_sat {
    color: #099FDE;
}
.calendar-month {
    padding: 15px 0 10px;
    text-align: center;
    font-size: 14px;
    color: #333;
}
.calendar-month_items {
    overflow: hidden;
    padding: 10px 0;
    color: #333;
}
.calendar-day {
    float: left;
    position: relative;
    width: 14.25%;
    box-sizing: border-box;
    overflow: hidden;
}
.calendar-day:after {
    content: "";
    display: block;
    padding-bottom: 120%;
}
.calendar-info_box {
    position: absolute;
    top: 27rpx;
    right: 0;
    left: 0;
}
.calendar-txt {
    display: block;
    font-size: 32rpx;
    text-align: center;
    line-height: 32rpx;
}
.calendar-txt_checkin {
    color: #fff;
}
.calendar-price {
    display: block;
    font-size: 22rpx;
    color: #FF7D13;
    text-align: center;
}
.calendar-price_checkin {
    display: block;
    font-size: 22rpx;
    color: #fff;
    line-height: 1.3;
    opacity: 0.8;
    text-align: center;
}
.calendar-work,
.calendar-rest {
    position: absolute;
    top: 1px;
    right: 1px;
    width: 24rpx;
    height: 24rpx;
    overflow: hidden;
    text-align: center;
    line-height: 1.1;
    font-size: 20rpx;
    color: #666;
    border: 1px solid #666;
    border-radius: 2px;
    box-sizing: border-box;
}
.calendar-rest {
    color: #52BCE8;
    border-color: #52BCE8;
}
.calendar-item_rest {
    color: #ccc;
}
.calendar-item_checkin {
    color: #fff;
    background-color: #099FDE;
}
.calendar-work_checkin,
.calendar-rest_checkin {
    color: #fff;
    border-color: #fff;
}
.calendar-checkin {
    position: absolute;
    top: 68rpx;
    left: 0;
    right: 0;
    font-size: 20rpx;
    text-align: center;
    opacity: 0.6;
}

.calendar-bg {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    color:#fff;
}

.out-of-range {
    color: #ccc;
}