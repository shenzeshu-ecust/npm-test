page{width: 100%;height:100%;}
button::after {border:none;}

.wx_mdcp_common_wrap{height:100%;font-family: "Source Han Sans CN","Hiragino Sans GB","Microsoft Yahei",sans-serif;background-color: #fff;}
.wx_mdcp_common_wrap .btn_group{position: relative;width: 65%;margin: 10px auto;text-align:center;line-height: 0;}
.wx_mdcp_common_wrap .btn_group:before{content: "";display: inline-block;width: 50%;padding-bottom: 32%;background: url(https://images4.c-ctrip.com/img3/marketing/2017/06/wx_coupon_pop/yoyo.png) no-repeat;background-size: 100%;}
.wx_mdcp_common_wrap .btn_group .t_btn{height: 47px;line-height: 47px;box-sizing: border-box;border:1px #e4e4e4 solid;color: #666;font-size: 20px;background-color: #fff;border-radius: 5px;text-align: center;}
.wx_mdcp_common_wrap .btn_group .t_btn.red{border-color:#e43e3e;background-color: #e43e3e;color: #fff;margin-bottom: 10px;}

/** 默认点击领取页 **/
.wx_mdcp_common_wrap .send_wrap{width: 100%; height: 100%; background: url(https://images4.c-ctrip.com/img3/marketing/2018/01/all_single_pic/coupon_pop_bg.png) repeat;}
.wx_mdcp_common_wrap .send_main{position: fixed;top: 50%;left: 5%;width: 90%;-webkit-transform: translateY(-50%);transform: translateY(-50%);}
.wx_mdcp_common_wrap .send_btn{position: absolute;top: 32%;left: 32%;width: 36%;padding-bottom: 36%;}
.wx_mdcp_common_wrap .send_pic{display: block;width: 100%;margin-top: -2px;}

/** 优惠券展示页 **/
.wx_mdcp_common_wrap .coupon_main{position: fixed;top: 0;left: 0;width: 100%;height: 81%;}
.wx_mdcp_common_wrap .coupon_main:after{content: "";position: absolute;bottom: 0;left: 0;width:100%;padding-bottom: 35%;background: url(https://images4.c-ctrip.com/img3/marketing/2018/01/all_single_pic/coupon_bg02.png) no-repeat;background-size: 100%;z-index: 2;}
.wx_mdcp_common_wrap .coupon_list{height: 100%;padding: 0 25px 35%;background-color: #e43e3e;box-sizing: border-box;overflow-y: auto;}
.wx_mdcp_common_wrap .coupon_list .tips{padding: 25px 0;}
.wx_mdcp_common_wrap .coupon_item{position: relative;display: -webkit-box;display: -webkit-flex;display: flex;-webkit-box-align: center;-webkit-align-items: center;align-items: center;height: 92px;border-bottom: 2px #e4e4e4 dotted;border-radius: 5px;background-color: #fff;}
.wx_mdcp_common_wrap .coupon_item:before,.wx_mdcp_common_wrap .coupon_item:after{content: "";position: absolute;right: -8px;top: 100%;z-index: 1;width: 16px;height: 16px;background-color: #e43e3e;border-radius: 50%;margin-top: -8px;}
.wx_mdcp_common_wrap .coupon_item:before{left: -8px;}
.wx_mdcp_common_wrap .coupon_item:last-of-type{border-bottom: 0;}
.wx_mdcp_common_wrap .coupon_item:last-of-type:before,.wx_mdcp_common_wrap .coupon_item:last-of-type:after{display: none;}
.wx_mdcp_common_wrap .coupon_item .i_price{width:35%;font-size: 50px;font-size: 11vw;color: #ff6464;text-align: center;}
.wx_mdcp_common_wrap .coupon_item .i_price .currency{font-size: 18px;}
.wx_mdcp_common_wrap .coupon_item .i_price .price{font-weight: bold;}
.wx_mdcp_common_wrap .coupon_item .i_detail{-webkit-box-flex:1;-webkit-flex:1;flex:1;font-size: 16px;color: #333;width:40%;}
.wx_mdcp_common_wrap .coupon_item .i_detail .bu {padding: 2px 0 2px 0;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;width:90%;}
.wx_mdcp_common_wrap .coupon_item .i_detail .sm{font-size: 12px;color: #999;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;width:90%;}
.wx_mdcp_common_wrap .coupon_item .i_btn{font-size:14px;width: 65px;margin-right:20px;line-height: 26px;color: #fff;background-color: #ff6464;text-align: center;border-radius: 4px;}
.wx_mdcp_common_wrap .yoyo_ye{position: fixed;bottom:0;left:40%;width: 38%;padding-bottom: 27%;background: url(https://images4.c-ctrip.com/img3/marketing/2018/01/all_single_pic/yoyo_ye.png) 0 0/100% no-repeat;}

/** 错误提示页 **/
.wx_mdcp_common_wrap .tips{padding:55px 0 25px;color: #fff0b7;font-size: 20px;text-align: center;background-color: #e43e3e;}
.wx_mdcp_common_wrap .tips_bf{font-size: 22px;font-weight: bold;padding: 7px 0 7px 0;}
.wx_mdcp_common_wrap .tips_bg{width: 100%;}
.wx_mdcp_common_wrap .tips_desc {font-size: 16px;}

@media screen and (max-width: 375px) {
  .wx_mdcp_common_wrap .coupon_item .i_price{font-size: 38px;font-size: 11vw;}
}
@media screen and (min-width: 450px) {
  .wx_mdcp_common_wrap .coupon_item .i_price{font-size: 50px;}
}