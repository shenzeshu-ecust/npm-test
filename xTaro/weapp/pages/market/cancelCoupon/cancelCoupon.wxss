  width: 100%;
  height: 11.46667rem;
}
.btn-image{
  width: 100%;
  height:50px;
}
.mainBody-con>image,.result-content>image {
  width: 100%;

}

.mc-inputContainer {
  position: absolute;
  top: 0;
  width: 100%;
  height: 8.66667rem;
  text-align: center;
}

.mci-vendorInfo {
  font-size: 0.64rem;
  margin-top: 2.13333rem;
  margin-bottom: 0.53333rem;
}

.mci-input {
  position: relative;
  display: inline-block;
  height: 3.33333rem;
