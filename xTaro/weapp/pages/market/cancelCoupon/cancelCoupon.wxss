}

.mciv-name {
  margin-left: 0.26667rem;
}

.mci-input>input {
  height: 100%;
  padding: 0 3.2rem 0 0.8rem;
  font-size: 0.96rem;
}

.mci-input .icon-clear, .mci-input .icon-wxScan {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

.mci-input .icon-wxScan {
  right: 0.26667rem;
}

.icon-wxScan {
  background-position: 0 -4rem;
  width: 1.78667rem;
  height: 1.68rem;
}

.result {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #2577e3;
  z-index: 2;
  animation: zoomIn;
  animation-duration: 0.3s;

}

.title {
  height: 6.66667rem;
}

img {
  width: 100%;
}

.result-content {
  position: relative;
  width:100%;
  font-size: 0;
}

.rc-text {
  position: absolute;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 100%;
  height: 9.01333rem;
  padding: 0.53333rem 2.93333rem;
}

.icon-finished {
  position: absolute;
  top: 2.66667rem;
  right: 2.66667rem;
  background-position: 0 0;
  width: 3.28rem;
  height: 3.28rem;
}

.rc-title {
