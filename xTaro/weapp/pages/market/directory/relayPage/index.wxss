page {
  overflow-x: hidden !important;
  height: 100%;
}

.layout {
  height: 1464rpx;
  overflow-y: hidden !important;
  position: relative;
}

.bg_img {
  display: flex;
  width: 100%;
  height: auto;
  margin: 0 auto;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}

.buttom_img_box {
  position: relative;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 100%;
  height: 120rpx;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.buttom_img_box_share{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 100%;
  height: 100%;
  background-color: transparent !important;
  outline: none !important;
  border: none !important;
}
button::after{
  border: 0 !important;
}
.buttom_img_box .buttom_img {
  display: flex;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  position: relative;
}
.buttom_img image{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  width: 100%;
}
.buttom_img .warn {
  color: rgb(255, 255, 255);
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  z-index: 2;
  padding-bottom: 2rpx;
}

/*朋友圈*/
.share-bg {
  position: relative;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  z-index: 1100;
  text-align: center;
  padding: 30rpx 0 70rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.share-bg .popop_title {
  margin: 10rpx auto;
}

.share-wechat {
  display: flex;
  justify-content: center;
  border-radius: 24rpx 24rpx 0 0;
  align-items: center;
}

.share-bg .item {
  margin: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-right: 140rpx;
}

.share-bg .close {
  position: absolute;
  right: 0;
  top: 0;
  width: 24rpx;
  height: 24rpx;
  padding: 30rpx;
  background: url(https://pages.ctrip.com/hotel_h5/wechat/duanwu/dw-close2.png) center center no-repeat;
  background-size: 24rpx 24rpx;
}

.share-wechat .img {
  margin-top: 15rpx;
  margin-bottom: 10rpx;
}

.share-wechat .reset-button {
  line-height: inherit;
  background: #fff;
  font-size: inherit;
  border: none;
  padding: 0;
  margin: 0;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.share-wechat .reset-button:after {
  display: none;
}

/*分享二维码*/
.share-layer {
  z-index: 1100;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
}


.share-layer .img {
  position: absolute;
  top: 0rpx;
  left: 0;
  right: 0;
  width: 750rpx;
}

.share_poster {
  background: url('https://images4.c-ctrip.com/img3/marketing/2018/06/xcx_face/icon_detail.png') 0 0/320rpx no-repeat;
  width: 95rpx;
  height: 110rpx;
  background-position: 0 -242rpx;
  background-size: 280rpx;
}

.share_button {
  background: url(https://images4.c-ctrip.com/img3/marketing/2018/06/xcx_face/icon_detail.png) 0 0/320rpx no-repeat;
  width: 100rpx;
  height: 94rpx;
  background-position: -92rpx 10rpx;
  background-size: 280rpx;
}

/*  */
.post_canvas {
  width: 375px;
  position: fixed;
  top: 9999px;
}

/* QQ分享 */
.qq-share{
  position: fixed;
  width: 200rpx;
  height: 120rpx;
  top: 210rpx;
  right: 120rpx;
  z-index: 100000;
}
.qq-share-text1{
  position: relative;
  color: #fff;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.qq-share-image{
  width: 100rpx;
  height: 44.6rpx;
  margin-left: 60rpx;
}
.preview_down_btn{
  position: fixed;
  bottom: 0px;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview_down_btn_img{
  display: flex;
  width: 100%;
}
.preview_poster{
  display: flex;
  width: 100%;
}
.preview_video_box{
  display: flex;
  width: 100%;
}
