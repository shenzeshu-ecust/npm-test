@import "./../../utils//common.wxss";

.diyField_explainStatus_box{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;

  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 9999;
}
.diyField_explainStatus_box .diyField_explainStatus_one,.diyField_explainStatus_three {
  z-index: 777777;
  position: relative;
  bottom: 32rpx;
  left: 0;
  right: 0;
  width: 128rpx;
  height: 48rpx;
  border-radius: 44rpx;
  background: rgba(0,0,0,0.6);
  color: #FFF;
  font-size: 20rpx;

  display: flex;
  justify-content: center;
  align-items: center;


}
.diyField_explainStatus_one .diyField_explainStatus_icon{
  display: inline-flex;
  width: 24rpx;
  height: 24rpx;
}
.diyField_explainStatus_three{
  opacity: 0.6;
}
.diyField_explainStatus_three .diyField_explainStatus_icon{
  display: inline-flex;
  width: 24rpx;
  height: 24rpx;
}
.diyField_explainStatus_box .diyField_explainStatus_two{
  z-index: 77777;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 32rpx;

  background: linear-gradient(270deg, #FF001B, #FF6600);
  color: #FFF;  

  font-size: 20rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.diyField_explainStatus_two .diyField_explainStatus_icon{
  display: inline-flex;
  width: 24rpx;
  height: 24rpx;
  padding-right: 4rpx;
}
.diyField_explainStatus_four .diyField_explainStatus_icon{
  display: inline-flex;
  width: 30rpx;
  height: 30rpx;
  padding-right: 4rpx;
}
.live_status_text{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding-left: 4rpx;
}
.component_row_margin{
  margin: auto;
}





