.mt0{
    margin-top: 0 !important;
}

.db_rule{
    background: url("https://pages.c-ctrip.com/market/components/static/duobao/img_guidance_head.png") 0 0 / contain no-repeat, linear-gradient( rgb(255, 243, 182) 700rpx, rgb(255, 239, 208) 100%);
    padding: 200rpx 0;
}

.db_rule__head{
    display: flex;
    justify-content: center;
    align-items: center;
}

.db_rule__head_btn1, .db_rule__head_btn2{
    width: 279rpx;
    height: 100rpx;
    background-size: contain;
    background-position: 0 0;
    background-repeat: no-repeat;
}
.db_rule__head_btn1{
    background-image: url("https://pages.c-ctrip.com/market/components/static/duobao/img_tab_guide_unselected.png");
}
.db_rule__head_btn1.active{
    background-image: url("https://pages.c-ctrip.com/market/components/static/duobao/img_tab_guide_selected.png");
}
.db_rule__head_btn2{
    margin-left: 20rpx;
    background-image: url("https://pages.c-ctrip.com/market/components/static/duobao/img_tab_rule_unselected.png");
}
.db_rule__head_btn2.active{
    background-image: url("https://pages.c-ctrip.com/market/components/static/duobao/img_tab_rule_selected.png");
}

.db_rule__content{
    width: 702rpx;
    box-sizing: border-box;
    margin: 30rpx auto;
    background: #ffffff;
    box-shadow: 0px 14rpx 24rpx 0px rgba(235, 215, 177, 0.6);
    border-radius: 24rpx 24rpx 24rpx 24rpx;
}
.db_rule__content image:nth-child(1){
    width: 100%;
    height: 874.6rpx;
}
.db_rule__content image:nth-child(2){
    width: 100%;
    height: 622.34rpx;
}
.db_rule__content image:nth-child(3){
    width: 100%;
    height: 636rpx;
}
.db_rule__title{
    color: #ff6142;
    font-size: 34rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    text-align: center;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
}
.db_rule__text{
    color: #333333;
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
}

.db_rule__content_2{
    padding: 47rpx 40rpx 40rpx;
}
