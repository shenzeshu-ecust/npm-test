.touzhu{
    display: flex;
    flex-wrap: wrap;
    width: 650rpx;
    align-items: center;
}
.touzhu__item{
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 145rpx;
    height: 54rpx;
    background: linear-gradient(90deg, rgb(255, 243, 225) 0%, rgb(255, 235, 228) 100%);
    border: 1.5rpx solid rgb(255, 204, 160);
    border-radius: 10rpx;
    color: rgb(255, 105, 19);
    font-size: 30rpx;
    font-family: PingFangSC-Semibold;
    margin-bottom: 20rpx;
    margin-right: 18rpx;
}
.touzhu__item:nth-child(4n) {
    margin-right: 0;
}
.touzhu__item.active{
    background: linear-gradient(-234.87deg, rgb(255, 181, 0) 0%, rgb(255, 70, 168) 100%);
    color: rgb(255, 255, 255);
}

.touzhu__item_placeholder{
  color: #ff6913;
font-size: 26rpx;
font-family: PingFangSC-Regular;
}
.touzhu__item_placeholder_error{
color: rgb(246,59,46);
font-size: 26rpx;
font-family: PingFangSC-Regular;
background-color: rgb(255,236,235);
}
.touzhu__item.error{
border-color: #F63B2E;
background-color: rgb(255,236,235);
}
.touzhu__item.noadd{
    opacity: 0.6;
    border: 1rpx dotted #ff8b26;
    color: #ff7700;
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    background: #fff;
}
.touzhu__item_error{
    color: #f63b2e;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
}
.touzhu__item.fouceItem{
  background: #fff;
    color: #ff7700;
    border: 1rpx dotted #ff8b26;
}
