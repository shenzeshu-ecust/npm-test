
.db_detail{
    background: url("https://pages.c-ctrip.com/market/components/static/duobao/img_guidance_head.png") 0 0 / contain no-repeat, rgb(255,239,208);
    min-height: 100vh;
    padding-bottom: 100rpx;
}

.db_detail__head{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 200rpx;
}
.db_detail__head_gold{
    width: 56rpx;
    height: 56rpx;
}
.db_detail__head_total{
    display: flex;
    align-items: flex-end;
}
.db_detail__head_number{
    color: #ffffff;
    font-size: 70rpx;
    font-family: 20TH_bold;
    font-weight: normal;
    line-height: 1;
}

.db_detail__head_btn{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rpx 20rpx;
    margin-top: 20rpx;
    color: rgb(255, 255, 255);
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    background: rgba(255,255,255,0.2);
    border: 1px solid #ffffff;
    border-radius: 28px 28px 28px 28px;
}


.db_detail__content{
    width: 702rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
    background: linear-gradient(-219.34deg, rgb(255, 255, 243) 0%, rgb(255, 248, 245) 100%);
    box-shadow: 0px 14px 24px 0px rgba(235, 215, 177, 0.5);
    border-radius: 15rpx;
    margin: 30rpx auto 0;
}

.db_detail__item{
    padding: 30rpx 0;
    border-top: 1.5rpx solid rgb(238, 238, 238);
}

.db_detail__item_top{
    display: flex;
    justify-content: space-between;
    color: rgb(51, 51, 51);
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: bold;
}
.db_detail__item_bottom{
    color: rgb(153, 153, 153);
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
}
.db_detail__plus{
    color: rgb(255, 119, 0);
}
.red{
    color: rgb(255, 119, 0);
} 

