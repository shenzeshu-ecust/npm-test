/* pages/market/directory/task/comps/taskLol/index.wxss */
.tasktu{
  width: 690rpx;
}
.tasktu__list{
  padding: 0 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tasktu__item{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 128rpx;
  height: 106rpx;
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/item_bg.png) center / contain no-repeat;
}
.tasktu__item_0{
  
}
.tasktu__item_0 .tasktu__item_img{
  width: 63rpx;
  height: 45rpx;
}
.tasktu__item_0 .tasktu__item_text{
  
}
.tasktu__item_1 .tasktu__item_img{
  width: 33rpx;
  height: 33rpx;
}
.tasktu__item_2{
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/item_bg2.png) center / contain no-repeat;
}
.tasktu__item_2 .tasktu__item_img{
  width: 77rpx;
  height: 93rpx;
}
.tasktu__item_img{
  width: 100rpx;
  height: 100rpx;
}
.tasktu__item_text{
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: -20rpx;
  font-size: 24rpx;
  padding: 5rpx 20rpx;
  color: #b35838;
  white-space: nowrap;
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/min-btn-bg2.png) center / contain no-repeat;
  box-sizing: border-box;
  width: 100%;
}
.tasktu__item.active .tasktu__item_text {
  color: #fff;
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/mmin-btn-bg.png) center / contain no-repeat;
}
.tasktu__item_headUrl{
  width: 88rpx;
    height: 88rpx;
    overflow: hidden;
    border-radius: 30rpx;
}
.tasktu__footer{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  width: 430rpx;
  height: 88rpx;
  margin: 40rpx auto 0;
}
.tasktu__footer_btn_0{
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/btn-0.png) center / contain no-repeat;
}
.tasktu__footer_btn_1{
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/btn-1.png) center / contain no-repeat;
}
.tasktu__footer_btn_2{
  background: url(https://images3.c-ctrip.com/marketing/task_components/lol/btn-22.png) center / contain no-repeat;
}
.tasktu__jaintou{
  width: 47rpx;
  height: 26rpx;
}

/* çº¿ */
.tasktu__item_line{
  position: absolute;
  bottom: -4rpx;
  width: 120rpx;
  height: 2rpx;     
  background-color: #f6c080;
  left: 96%;
}
.tasktu__item.active .tasktu__item_line {
  background-color: #fb544d;
}