.audit-box {
    display: flex;
    flex-direction: column;
    width: 710rpx;
    margin: 0 auto;
    background: #ffffff;
    border-radius: 16rpx;
    padding-top: 20rpx;
}

.audit-banner {
    display: block;
    width: 709rpx;
    height: 84rpx;
    margin: 40rpx auto 40rpx;
}

.audit-row {
    display: flex;
    flex-direction: column;
    margin-bottom: 50rpx;
}

.audit-tips {
    color: rgb(8, 31, 71, 0.5);
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    line-height: 24rpx;
    margin-left: 16rpx;
}

.audit-content {
    padding: 0 48rpx;
}

.audit-label {
    display: flex;
    color: #081F47;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    font-weight: 500;
    align-items: center;
    margin-bottom: 10rpx;
}

.audit-articleLabel {
    /* justify-content: space-between; */
}

.audit-articleInput {
    padding: 10px;
    box-sizing: border-box;
    height: 164rpx;
    background: #ffffff;
    border-radius: 4rpx;
    border: 1px solid #eeeeee;
    font-size: 12px;
    resize: none;
    -webkit-appearance: none;
}

.audit-articleInput::placeholder {
    color: #cccccc;
    font-family: PingFangSC-Regular;
    font-size: 12px;
}

.audit-footer {
    position: fixed;
    bottom: 0;
    padding: 20rpx 32rpx 40rpx;
    background-color: #fff;
    display: flex;
    width: 100vw;
    box-sizing: border-box;
    justify-content: space-between;
    box-shadow: 0rpx -2rpx 8rpx 0rpx rgba(0, 0, 0, 0.08);
}

.audit-cancelBtn {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 8rpx;
    border: 1px solid rgb(38, 152, 247);
    height: 88rpx;
    width: 327rpx;
    color: #0086f6;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
}

.audit-submitBtn {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 8rpx;
    border: 1rpx solid rgb(0, 134, 246);
    background-color: rgb(0, 134, 246);
    height: 88rpx;
    width: 327rpx;
    color: #ffffff;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
}

.audit-imgList {
    margin-top: 10px;
}

.audit-star::before {
    content: '*';
    vertical-align: middle;
    margin-right: 5px;
    color: #F5190B;
}

.bottom-tips {
    display: flex;
    justify-content: center;
    align-items: center;
    color: rgb(8, 31, 71);
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    background: rgb(248, 250, 253);
    border-radius: 0px 0px 16rpx 16rpx;
    height: 80rpx;
}

.tips-image {
    width: 21rpx;
    height: 26rpx;
    margin-right: 8rpx;
}

.audit-imgList{
    display: flex;
    flex-wrap: wrap;
}

.audit-displayImageBox{
    position: relative;
    width: 190rpx;
    height: 190rpx;
    margin-right: 10rpx;
}
.audit-displayImage{
    width: 100%;
    height: 100%;
}
.audit-closeBtn{
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    right: 10rpx;
    box-sizing: border-box;
    top: 10rpx;
    padding: 3rpx;
    background-color: #eee4e4;
    border-radius: 50%;
}
.audit-uploadbox {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 190rpx;
    height: 190rpx;
    background: rgb(245, 247, 251);
    border-radius: 8rpx;
    border: 2rpx solid rgb(229, 236, 250);
}


.audit-uploadPlus {
    font-size: 32rpx;
    font-weight: 300;
    color: rgba(0,0,0,0.65);
    transform: scale(1.5);
}

.audit-uploadText {
    font-size: 24rpx;
    color: rgba(56, 73, 111, 0.65);
    margin-top: 10rpx;
}

.audit-error{
  display: flex;
  align-items: center;
  color: rgb(245, 25, 10);
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.audit-error-icon{
  display: inline-block;
  text-align: center;
  font-size: 20rpx;
  line-height: 30rpx;
  color: #fff;
  background: rgb(245, 25, 10);
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.next-modal-close{
  position: absolute;
  bottom: -80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 50rpx;
}

.next-modal-img {
  width: 600rpx;
}