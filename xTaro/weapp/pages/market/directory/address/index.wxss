page{
  background-color: #F7F7F7;
}
image{
  width: 100%;
  height: 100%;
}
.head-wrap{
  font-size: 22rpx;
  color: #FF5400;
  width: 100%;
  height: 56rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #FFDEDE;
}
.head-wrap .icon{
  width: 30rpx;
  height: 30rpx;
  margin: 0 5rpx 0 20rpx ;
  background: url('https://images3.c-ctrip.com/marketing/2020/08/xcx_energy/icon-tips.png') 0 0/30rpx no-repeat;
}
.head-wrap .tips{

}
.content-wrap{
  width:710rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx 4rpx rgba(133,148,194,0.10);
  border-radius: 10rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  background: #FFF;
}
.m-item{
  width: 100%;
  height: 220rpx;
  display: flex; 
}

.m-item .m-pic{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  background-color: #efefef;
}
.m-item .m-detail{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.m-item .m-detail .m-name{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin: 20rpx 0 6rpx 0;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;
}
.m-item .m-detail .m-date{
  font-size: 22rpx;
  color: #999;
}
.info{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #ECECEC;
}
.info.textarea{
  border-bottom: none;
  padding-top: 30rpx;
  text-overflow: ellipsis;
}
.info .info-name{
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
}
.info .info-input{
  font-size: 26rpx;
  text-align: right;
  color: #000000;
  width: 450rpx;
}
.info .info-input.disabled {
  color: #C6C6C6;
}
.info.textarea .info-input{
  height: 1.4rem;
}
.btn-save{
  font-size: 36rpx;
  color: #FFF;
  width: 640rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 45rpx auto;
  background: linear-gradient(270deg, #38C6FF 1%, #1A94FF 100%);
  box-shadow: 0 5rpx 10rpx 0 rgba(54,171,255,0.30);
  border-radius: 50rpx;
}
