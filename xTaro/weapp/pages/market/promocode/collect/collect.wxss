/* pages/market/promocode/collect/collect.wxss */
page {font-family: "Hiragino Sans GB",Arial,"Microsoft YaHei","Lucida Grande",Verdana;}
.coupon_main{background:#cf3a50 url(//images3.c-ctrip.com/marketing/2017/01/coupon_h5/bg.jpg) no-repeat 0 0;width:100%;min-height:100%;background-size:100%;position:absolute}
.coupon_main .error-tip{font-size:24rpx;color:#fff;padding-top:26rpx;margin-bottom:26rpx;line-height:1;text-align:center}
.coupon_txt{color:#fff;font-size:24rpx;text-align:center;width:100%;margin:58% auto 30rpx}
.coupon_txt text {-webkit-margin-before: 1em;-webkit-margin-after: 1em;-webkit-margin-start: 0px;-webkit-margin-end: 0px;}
.coupon_txt .bold{font-size:26rpx;font-weight: bold;}
.coupon_input{width:88%;margin:0 auto;}
.captcha-box{width:100%;margin-bottom:12rpx}
.login_dl{text-align:center}
.login_dl .login_dd{margin:0 auto 12rpx;display:block;overflow:hidden;position:relative}
.login_dl .login_dd input{line-height:42px;height:42px;border-radius:4px;font-size:28rpx;padding-left:8px;background:#fff;font-family:"Hiragino Sans GB",Arial;text-align:left}
.login_dl .login_dd input[type=text]{color:#000}
.login_dl .login_dd  input:focus{color:#000}
.input_code_box{position:relative;width:-webkit-calc(100% - 126px);overflow:hidden}
.input_img{height:42px;width:130px;border-top-right-radius:4px;border-bottom-right-radius:4px;position:absolute;top:0;right:0}
.fr {float: right;}
.coupon_btn{border:0;width:100%;height:42px;border-radius:8px;color:#cf3a50;cursor:pointer;background:#fae8cf}
.coupon_btn.disabled{background-color:#b91c33;color: #cf3a50;}
 button[disabled][type="default"],button[disabled]:not([type]){background-color:#b91c33;color: #cf3a50;}
 button[type="default"] {background:#fae8cf;color:#cf3a50;}
::-webkit-scrollbar {width: 0;height: 0;color:transparent;}
/*支付宝 */
.login_dl .login_dd .wx-input{width:100%;}
.a-button.a-button-disabled{background-color:#b91c33;color: #cf3a50;}