.flt_bg_mask{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background: rgba(0,0,0,.6);z-index: 9999;transition: opacity .5s linear;}
.flt_dyninfo_wrap{position: fixed;top: 50%;left: 50%;width: 77.33%;height:70%;z-index: 10001;-webkit-transform:translate(-50%,-50%);transform:translate(-50%,-50%);}
.flt_close_btn{position: absolute;bottom: -68px;left:50%;margin-left:-14px;width: 28px;height: 28px;background: transparent top right no-repeat; border-radius:50%;text-align: center;color:#fff;border:2px solid #fff;box-sizing: border-box;font-size:25px;}
.flt_close_btn::before,.flt_close_btn::after{content: "";position: absolute;  height: 14px;width: 2px;top:50%;left:50%;margin-top:-7px;margin-left:-1px; background: #fff;}
.flt_close_btn::before{-webkit-transform:rotate(45deg);-moz-transform:rotate(45deg);-ms-transform:rotate(45deg);transform: rotate(45deg); }
.flt_close_btn::after{-webkit-transform:rotate(-45deg);-moz-transform:rotate(-45deg);-ms-transform:rotate(-45deg);transform: rotate(-45deg);}

/*收起展开动画*/
.boxout{transition: top .5s ease-in .2s,left .5s linear .2s,transform .2s linear,opacity .5s linear .2s;opacity: 0;transform: translate(-50%,-50%) scale(0);}
.boxin{transition: top .5s ease-in,left .5s linear,transform .2s linear .5s,opacity .5s linear;opacity: 1;transform: translate(-50%,-50%) scale(1);}