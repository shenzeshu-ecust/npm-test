.dw_main_wrap{background-color: #fff;font-family: "Hiragino Sans GB",Arial,"Microsoft Yahei",sans-serif;color: #333;}

.dw_mdpop_main{width:80%;max-width:414px;position:fixed;top:48%;left:50%;-webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);z-index:2002;font-size: 32px;font-size: 8.5vw;color: #fce389;}
.dw_mdpop_main .pop_pic{display: block;width: 100%;}
/* .dw_mdpop_main .dw_btn{width: 100%;font-size: 20px;line-height: 45px;height: 45px;background-color: transparent;color: #fff;} */


.dw_pop_mask{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background-color: rgba(0,0,0,.8);z-index: 1050;transition: opacity .2s linear;}
button.pop_close{position: absolute;bottom:-105rpx;left:50%;width: 40px;height: 40px;color: #fff;border:1px solid #fff;border-radius: 50%;transform: translateX(-50%);padding: 0;overflow: visible;background-color: transparent;}
button.pop_close:before,button.pop_close:after{content: "";position: absolute;top:50%;left:50%;width: 22px;height: 0;border-top: 1px solid;margin-left:-11px;-webkit-transform:rotate(-45deg);transform:rotate(-45deg);}
button.pop_close:after{-webkit-transform:rotate(45deg);transform:rotate(45deg);-webkit-transform-origin:center;transform-origin:center;}
.pop_close.swing{position: fixed;top:50%;z-index: 1051;opacity: 0;animation: scalein .8s steps(1) forwards;transform: translate(-50%,-50%);margin-top: 390rpx;}
