.animate_fadeout{display: none;}
.animate_boxout{-webkit-animation: boxout .5s ease-in forwards;animation: boxout .5s ease-in forwards;-webkit-transform-origin: left top;transform-origin: left top;}
.animate_boxin{-webkit-animation: .5s boxin .5s ease-out forwards;animation:.5s boxin .5s ease-out forwards;}
@-webkit-keyframes boxout{
    100%{top:100%;-webkit-transform: scale(.1);transform: scale(.1);opacity: 0}
}
@keyframes boxout{
    100%{top: 100%;-webkit-transform: scale(.1);transform: scale(.1);opacity: 0}
}
@-webkit-keyframes boxin{
    0%{-webkit-transform:rotate(0);transform:rotate(0);}
    50%{-webkit-transform:rotate(20deg);transform:rotate(20deg);}
    70%{-webkit-transform:rotate(-20deg);transform:rotate(-20deg);}
    90%{-webkit-transform:rotate(20deg);transform:rotate(20deg);}
    100%{-webkit-transform:rotate(0);transform:rotate(0);}
}
@keyframes boxin{
    0%{-webkit-transform:rotate(0);transform:rotate(0);}
    50%{-webkit-transform:rotate(20deg);transform:rotate(20deg);}
    70%{-webkit-transform:rotate(-20deg);transform:rotate(-20deg);}
    90%{-webkit-transform:rotate(20deg);transform:rotate(20deg);}
    100%{-webkit-transform:rotate(0);transform:rotate(0);}
}
@media screen and (max-width: 340px){
    .dw_mdpop_main{width: 80%;font-size: 27px;font-size: 8.5vw;}
    .dw_mdpop_main .dw_btn{margin-top: 3%;}
}
@media screen and (min-width: 375px){
    .dw_mdpop_main{font-size: 32px;}
}

