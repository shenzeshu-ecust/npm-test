/* pages/market/activity/result.wxss */

.hd-bg {
  width: 100%;
}

.list {
  background: #fff;
}

.item {
  position: relative;
  border-bottom: 1rpx solid #ccc;
  font-size: 28rpx;
}

.item .detail {
  display: flex;
  padding: 10rpx 140rpx 10rpx 10rpx;
}

.item .detail .fig {
  flex-shrink: 0;
  width: 170rpx;
  height: 170rpx;
  align-self: center;
}

.item .detail .desc {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 10rpx;
}

.item .btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  padding: 4rpx 16rpx;
  border: 2rpx solid #7fa7c3;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #7fa7c3;
  transform: translateY(-50%);
}

.item .btn.btn-addr {
  position: absolute;
  right: 20rpx;
  top: 50%;
}

.icon-arrow {
  position: absolute;
  right: 0rpx;
  top: 25%;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx;
  transform: rotate(0);
  transition: all 0.15s linear;
}

.icon-arrow.down {
  transform: rotate(180deg);
  transition: all 0.15s linear;
}

.icon-arrow::before {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  display: block;
  width: 8px;
  height: 8px;
  border-top: 1px solid #666;
  border-right: 1px solid #666;
  transform: translate(-50%, -50%) rotate(-45deg);
}

.child-cnt {
  background: #eee;
}

.child-cnt:first-child {
  box-shadow: 0 3px 6px 0 #ddd inset;
}

.child-cnt:last-child {
  box-shadow: 0 -3px 6px 0 #ddd inset;
}

.child-cnt:only-child {
  box-shadow: 0 0 6px 3px #ddd inset;
}

.ft {
  text-align: center;
  line-height: 3;
}

.btn-home {
  width: 80%;
  border: 1rpx #e3e3e3 solid;
  border-radius: 50rpx;
  margin: 20rpx auto 40rpx;
  line-height: 84rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.3);
  font-size: 16px;
}

.modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.modal .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99;
}

.modal .bd {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  min-height: 50rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background: #fff;
  z-index: 100;
  transform: translate(-50%, -50%);
}

.modal .qrcode {
}

.modal .qrcode {
  width: 300rpx;
  height: 300rpx;
}

.modal .barcode {
  width: 90%;
  height: 90rpx;
}

.modal .desc {
  margin: 20rpx auto;
}

.tc {
  text-align: center;
}

.hidden {
  display: none;
}

@keyframes bounceIn {
  0% {
    transform: scale(0);
  }

  80% {
    transform: scale(1.2);
  }

  100% {
    transform: scale(1);
  }
}
