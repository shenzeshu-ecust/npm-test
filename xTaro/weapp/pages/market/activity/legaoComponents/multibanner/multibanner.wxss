/* pages/market/legaoComponents/multibanner/multibanner.wxss */

.m-multibanner {
  min-height: 50px;
}

.m-multibanner .list .row {
  display: flex;
  width: 100%;
}

.m-multibanner .list {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}

.m-multibanner .list .item {
  flex: 1;
  overflow: hidden;
}

.m-multibanner .list .item image {
  display: block;
  width: 100%;
  height: 100%;
}

.m-multibanner .btn-expend {
  padding: 15px 0;
  border-top: 1px solid #e8e8e8;
  text-align: center;
  color: #666;
  background: #fff;
}

.m-multibanner .btn-expend.active .icon-arrow {
  transform: translate(-25%, -25%) rotate(-135deg);
}

.m-multibanner .icon-arrow {
  margin: 0 10px;
  display: inline-block;
  width: 9px;
  height: 9px;
  border-right: 1px solid #666;
  border-bottom: 1px solid #666;
  transform-origin: 75% 75%;
  transform: translate(-25%, -25%) rotate(45deg);
}
