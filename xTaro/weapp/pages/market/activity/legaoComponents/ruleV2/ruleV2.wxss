  color: #333;
  font-size: 28rpx;
}
.m-rule .tt {
	position: relative;
	font-size: 30rpx;
	text-align: center;
	font-weight: bold;
}
.m-rule .carrot {
	position: relative;
	left: 6rpx;
	top: 4rpx;
	display: inline-block;
	border: 10rpx solid transparent;
	border-top-color: #333;
}
.m-rule .carrot.active {
	transform: translateY(-50%) rotate(180deg);
}
