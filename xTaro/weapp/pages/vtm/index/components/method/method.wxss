@import '../../../common/common.wxss';

.gl_container {
  background-color: #fff;
  border-radius: 28rpx;
  margin-top: 24rpx;
  padding: 24rpx 24rpx 32rpx 24rpx;
  box-sizing: border-box;
  width: calc(100%);

}
.gl_header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.gl_icon {
  line-height: 36rpx;
  font-size: 36rpx;
  margin-right: 8rpx;
  color: #006FF6;
}

.gl_title{
  height: 48rpx;
  color: #111111;
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 0px;
  margin-right: 12rpx;
}

.gl_subtitle {
  margin-top: 6rpx;
  color: #888888;
  font-size: 22rpx;
}

.gl_content {
  display: flex;
  justify-content: space-between;
}

.gl_left {
  width: 361rpx;
  height: 208rpx;
  background-size: 100%;
  position: relative;
  background-color: #007aff;
  border-radius: 20rpx;
}
.gl_left_bg{
  width: 361rpx;
  height: 208rpx;
  background: linear-gradient(-180deg, rgba(157, 157, 157, 0.22) -23.27%, rgba(0, 0, 0, 0.48) 72.79%);
  border-radius: 20rpx;
}
.gl_right {
  width: 276rpx;
  height: 208rpx;
  background-image: url('https://pages.c-ctrip.com/car_dcs/vtm/kbbmax.png') ;
  background-size: 100% 100%;
  border-radius: 20rpx;
}
.gl_bg_one{
  width: 100%;
  height: 208rpx;
  background-image: url('https://pages.c-ctrip.com/dcs/images/0zm3t12000b8e2kz477B9.png') ;
}


.gl_text {
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
}


.gj_gl_container {
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 28rpx;
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
}

@keyframes skeleton-pulse {
  0% {
    opacity: 0.6;
  }

  50% {
    opacity: 0.8;
  }

  100% {
    opacity: 0.6;
  }
}

.gj_gl_row {
  display: flex;
  margin-bottom: 24rpx;
  width: 260rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 48rpx;
  background-color: #ccc;
  animation: skeleton-pulse 4s ease-in-out infinite;
  border-radius: 2rpx;
}

.gj_gl_block{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 12rpx;
}
.gj_gl_block .gj_gl_row{
  width: 361rpx;
  height: 208rpx;
}
.gj_gl_block .gj_gl_row:nth-child(2){
  width: 276rpx;
  height: 208rpx;
}