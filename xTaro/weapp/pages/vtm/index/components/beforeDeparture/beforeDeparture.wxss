.gj_xqs_container {
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 28rpx;
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
}

@keyframes skeleton-pulse {
  0% {
    opacity: 0.6;
  }

  50% {
    opacity: 0.8;
  }

  100% {
    opacity: 0.6;
  }
}

.gj_xqs_row {
  display: flex;
  margin-bottom: 12rpx;
  width: 260rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 48rpx;
  background-color: #ccc;
  animation: skeleton-pulse 4s ease-in-out infinite;
  border-radius: 2rpx;
}

.gj_xqs_row:nth-child(2) {
  width: 100%;
  height: 42rpx;
}

.gj_xqs_tags {
  display: flex;
  flex-direction: row;
}

.gj_xqs_tag {
  animation: skeleton-pulse 4s ease-in-out infinite;
  background-color: #ccc;
  width: 128rpx;
  height: 52rpx;
  margin-right: 16rpx;
}