@import '../../../common/common.wxss';

.ask_container {
  margin-top: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.4);
  border: 2rpx solid #ffffff;
  box-shadow: inset 0px 0px 7rpx 0px rgba(241, 241, 241, 0.5);
  border-radius: 28rpx;

}

.ask_header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.ask_header_left {
  display: flex;
  align-items: center;
}

.ask_icon {
  line-height: 36rpx;
  font-size: 36rpx;
  margin-right: 8rpx;
  color: #006FF6;
}

.ask_title {
  height: 48rpx;
  color: #111111;
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 0px;
  margin-right: 12rpx;
}

.ask_subtitle {
  margin-top: 6rpx;
  color: #888888;
  font-size: 22rpx;
}

.ask_all_right {
  margin-top: 8rpx;
  display: flex;
  justify-content: center;
  height: 30rpx;
  line-height: 30rpx;
  color: #111111;
  font-size: 22rpx;
}

.ask_all_right_icon {
  padding-left: 2rpx;
}

.ask_content_1_card {
  background-image: url('https://pages.c-ctrip.com/car_dcs/vtm/askcard2.png');
  background-size: 100% 100%;
  height: 178rpx;
}

.ask_content_2 {
  display: flex;
  flex-direction: column;
}

.ask_content_2_bg {
  min-height: 120rpx;
  background: rgb(255, 255, 255);
  box-shadow: 0px 0px 14rpx -4rpx rgba(241, 241, 241, 0.5);
  border-radius: 20rpx;
}

.ask_content_3 {
  display: flex;
  flex-direction: row;
}

.ask_content_card_bg {
  display: flex;
  align-items: flex-end;
  background: rgb(255, 255, 255);
  box-shadow: 0px 0px 14rpx -4rpx rgba(241, 241, 241, 0.5);
  border-radius: 20rpx;

}

.ask_content_3_card {
  position: relative;
  width: 328rpx;
  background: #ffffff;
  box-shadow: 0px 0px 14rpx -4rpx rgba(241, 241, 241, 0.5);
  border-radius: 20rpx;
}

.ask_content_3_card::before {
  position: absolute;
  left: 0;
  bottom: 0;
  content: ' ';
  width: 328rpx;
  height: 256rpx;
  background-image: url('https://pages.c-ctrip.com/car_dcs/vtm/miniaskcard.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: bottom;
}

.ask_content_3_right {
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
}

.ask_content_3_right_bg {
  width: 310rpx;
  background: rgb(255, 255, 255);
  box-shadow: 0px 0px 14rpx -4rpx rgba(241, 241, 241, 0.5);
  border-radius: 20rpx;
}

.ask_mt16 {
  margin-top: 16rpx;
}

.ask_content_1_card,
.ask_content_2_bg,
.ask_content_3_card,
.ask_content_3_right_bg {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}

.ask_content_top_text {
  color: rgb(17, 17, 17);
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  line-height: 34rpx;
  overflow: hidden;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}

.ask_content_bottom_text {
  height: 30rpx;
  color: rgb(17, 17, 17);
  margin-top: 16rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
}


.gj_ask_container {
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 28rpx;
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
}

@keyframes skeleton-pulse {
  0% {
    opacity: 0.6;
  }

  50% {
    opacity: 0.8;
  }

  100% {
    opacity: 0.6;
  }
}

.gj_ask_row {
  display: flex;
  margin-bottom: 24rpx;
  width: 260rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 48rpx;
  background-color: #ccc;
  animation: skeleton-pulse 4s ease-in-out infinite;
  border-radius: 2rpx;
}

.gj_ask_column {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.gj_ask_left {
  width: 328rpx;
  background-color: #ccc;
  animation: skeleton-pulse 4s ease-in-out infinite;
}

.gj_ask_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 256rpx;
}

.gj_ask_card1,
.gj_ask_card2 {
  width: 310rpx;
  height: 120rpx;
  background-color: #ccc;
  animation: skeleton-pulse 4s ease-in-out infinite;
}