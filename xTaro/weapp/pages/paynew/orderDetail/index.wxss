.detail-comp {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-modal {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.7);
}

.open-box{
  z-index: 1;
  height: 72vh;
  width: 100%;
  display: flex;
  align-items: center;
  animation: open .5s ease;
}

.main-box{
  max-height: 100%;
  margin: 0 40rpx;
  width: 100%;
  overflow-y: scroll;
  border-radius: 16rpx;
}

.main {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

@keyframes open {
  from {
    height: 1vh;
  }

  to {
    height: 72vh;
  }
}

.line{
  background: rgba(0,0,0,0.04);
  height: 1rpx;
  margin: 27rpx 0;
}

.detail-item{
  font-size: 26rpx;
  color: #666666;
}

.big{
  font-size: 34rpx;
  color: #333333;
  margin: 48rpx 0 30rpx
}

.item-fee{
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.top-num, normal-value{
  margin-bottom: 24rpx;
}

.bottom{
  font-size: 26rpx;
  color: #666666;
  display: flex;
  justify-content: space-between;
}

.bottom-num{
  color: #FF6600;
  font-size: 34rpx;
}

.bottom-r{
  color: #0086F5;
}

.icon{
  background-size: 110% 110%;
  background-position: center;
  border-radius: 100%;
  margin: 6rpx;
  width: 20rpx;
  height: 20rpx;
}
.up{
  background-image: url(https://pages.c-ctrip.com/Finance/miniprogram/up.png);

}

.top-title{
  font-size: 34rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.top-content{
  font-size: 26rpx;
  color: #666;
  margin-bottom: 31rpx;
}

.normalfont{
  font-size: 26rpx;
  color: #666;
}

.bigfont{
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
}

.title-1{
  margin-bottom: 24rpx;
}

.title-2{
  font-size: 26rpx;
  color: #666;
  font-weight: normal;
  margin-bottom: 24rpx;
}

.line-max-2{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.tip{
  background: #fff8f2;
  font-size: 24rpx;
  border: 17rpx solid #fff8f2;
  -webkit-line-clamp: 4;
}

.item-fee-r{
  min-width: 60%;
  text-align: right;
}