.sms-comp {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.back-modal {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.main {
  background-color: #fff;
  height: 75%;
  width: 100%;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx 16rpx 0 0;
}

.head{
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.icon{
  width: 28rpx;
  height: 28rpx;
  background-image: url(https://pages.c-ctrip.com/Finance/miniprogram/close.png);
  background-position: center;
  background-size: 100% 100%;
  position: absolute;
}

.title{
  width: 100%;
  text-align: center;
}

.tip-wrap{
  margin: 0 50rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  color: #9e9e9e;
}

.submit-btn{
  margin: 0 32rpx;
  background-color: #D2D5DB;
  border-radius: 12rpx;
  color: #fff
}

.submit-btn.active{
  background-color: #0086F6;
}

.resend{
  color: #0486F6;
  font-size: 26rpx;
}