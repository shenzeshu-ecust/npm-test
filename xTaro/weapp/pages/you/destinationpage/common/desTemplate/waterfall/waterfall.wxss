.waterfall-content {
  padding:0 24rpx;
  background: #F4F8FB;
  position: relative;
}
.waterfall-content::before{
  content:'';
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height:160rpx;
  background-image: linear-gradient(-180deg, rgba(255, 255, 255, 1) 0%, #F4F8FB 100%);
  z-index: 0;
}
.wf-item-inner-overflow{
    overflow : hidden;
}
.waterfall-content .wf-container{
  display: flex;
  justify-content: space-between;
  position: relative;
}

.waterfall-content .wf-item-1 {
  width: 332rpx;
  padding-bottom: 332rpx;
  margin-left: 20rpx;
}
.waterfall-content .wf-item-2 {
  width: 341rpx;
  border-radius: 8rpx;
}
.waterfall-content .wf-item .wf-item-inner{
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}
.waterfall-content .wf-item .wf-item-inner-overflow-margin{
   margin-bottom : 0;
}
.waterfall-content .itemimg {
  width: 100%;
  position: relative;
  border-radius: 8rpx 8rpx 0 0;
  max-height:600rpx;
  overflow: hidden;
}
.waterfall-content .itemimg.isvideo::after {
  content: '';
  width: 82rpx;
  height: 82rpx;
  position: absolute;
  left: 50%;
  margin-left: -40rpx;
  top: 50%;
  margin-top: -40rpx;
  background: url(https://pages.c-ctrip.com/you/livestream/lvpai_issue_videoplay1.png) no-repeat;
  background-size: 82rpx;
}
.waterfall-content .itemimg .itemimg-wapper{
  width: 100%;
  position: relative;
  border-radius:8rpx 8rpx 0 0;
  overflow: hidden;
  background:#eee url(https://pages.c-ctrip.com/you/component-local/default.png) no-repeat center;
  background-size: 50% auto;
}
.waterfall-content .itemimg .itemimg-wapper .img{
  width:100%;
  height: auto;
  display: block;
  border-radius:8rpx 8rpx 0 0;
}
.waterfall-content .pai-tag {
  height: 42rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  display: inline-block;
  padding: 0 16rpx;
  color: #fff;
  line-height: 42rpx;
  border-radius: 42rpx;
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
}
.waterfall-content .pai-tag::before {
  content: '';
  width: 32rpx;
  height: 32rpx;
  overflow: hidden;
  border-radius: 32rpx;
  margin: 2rpx 6rpx 0 0;
}

.waterfall-content .poiTag {
  position: absolute;
  left:16rpx;
  bottom:16rpx;
  max-width:293rpx;
  height: 36rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 0 16rpx 0 10rpx;
  color: #fff;
  line-height: 36rx;
  border-radius: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-indent: 36rpx;
}

.waterfall-content .poiTag::before{
  content: '';
  width: 32rpx;
  height: 32rpx;
  left: 10rpx;
  top: 2rpx;
  overflow: hidden;
  position: absolute;
  background: url(https://pages.c-ctrip.com/you/livestream/lvpai_waterfall_poi_white.png) no-repeat;
  background-size: 100%;
}

.waterfall-content .infotext {
  padding:0 16rpx 24rpx;
  background: #fff;
  border-radius: 0 0 8rpx 8rpx;
  overflow: hidden;
}
.waterfall-content .infotext .infotitle {
    font-size: 28rpx;
    line-height: 42rpx;
    color: #222;
    padding-top: 10rpx;
    -webkit-box-orient: vertical;
    /* display: -webkit-box;
    -webkit-line-clamp: 1; */
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.waterfall-content .infotext .linewrap{
  margin-top:8rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  position:relative;
}
.waterfall-content .infotext .linewrap .usertext{
  flex:1;
  width:0;
}
.waterfall-content .infotext .linewrap.singleline {
  padding-top: 32rpx;
}
.waterfall-content .infotext .linewrap .userhead {
  /* margin-right:32rpx; */
  position: relative;
  display: flex;
  flex:1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.waterfall-content .infotext .linewrap .userhead .img {
  margin-right: 16rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  border:2rpx solid #EAEAEA;
  box-sizing:border-box;
}
.waterfall-content .infotext .linewrap .userhead .hasvip{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  left: 34rpx;
  bottom: 0;
  background: url(https://pages.c-ctrip.com/you/livestream/lvpai_user_vip.png) no-repeat;
  background-size: 100%;
  z-index: 10;
}
.waterfall-content .infotext .linewrap .username {
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #222222;
  line-height: 50rpx;
  height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.waterfall-content .infotext .linewrap .praisecount {
  height:46rpx;
  display: flex;
  align-items: center;
  width:auto;
  padding:0 8rpx;
  line-height: 46rpx;
  font-size:0;
}
.waterfall-content .infotext .linewrap .praisecount .img {
  margin-right:4rpx;
  width: 36rpx;
  height: 36rpx;
}
.waterfall-content .infotext .linewrap .praisecount .text{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #222222;
  line-height: 46rpx;
}

.rel_head_img_wrap {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.rel_head_img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.rel_head_img_vIcon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 20rpx;
  height: 20rpx;
}
