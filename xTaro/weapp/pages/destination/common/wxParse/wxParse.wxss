/* 富文本 */
.inset-h2{
  padding-top: 40rpx;
  vertical-align: top;
  font: 600 34rpx/1.7 Arial, "Lucida Grande", Verdana, "Microsoft YaHei", hei;
  color: #c4853a;
  word-break: break-all;
  background: #fff;
}
.inset-p{
  padding-top: 40rpx;
  position: relative;
  font-size: 16px;
  color: #444;
  line-height: 1.7;
  word-break: break-all;
  background: #fff;
}
.inset-p-link{
  color: inherit !important;
  text-decoration: none;
  word-break: break-all;
}
.inset-p-strong{
  font-weight: bold;
  
}
.inset-img-view{
  margin-top: 40rpx;
  padding-top: 0;
  background: #fff;
  text-align:center;
}
.inset-img{
  width: 100%;
  background: #f0f1f5 url(https://pages.c-ctrip.com/you/common/default.png) no-repeat center;
}
.inset-vr-view{
  padding-top: 40rpx;
  position: relative;
}
.inset-vr-img{
  width: 100%;
  background: #f0f1f5 url(https://pages.c-ctrip.com/you/common/default.png) no-repeat center;
}
.inset-vr-tag{
  position: absolute;
  width: 74rpx;
  height: 42rpx;
  background-image: url(https://pages.c-ctrip.com/you/common/video_vr.png) no-repeat center;
  background-size: 74rpx auto;
  right: 16rpx;
  bottom: 16rpx;
  background-position-y: -40rpx;
}
.inset-video-view{
  padding-top: 40rpx;
  position: relative;
  height: 400rpx;
  overflow: hidden;
}
.inset-video{
  width: 100%;
  height: 400rpx;
  background-color: #000;
}
.inset-prompt{
  
}
.inset-prompt-box{

}
.inset-prompt-h3{
  padding-top: 4rpx;
  font: 100 34rpx/1 Arial, "Lucida Grande", Verdana, "Microsoft YaHei", hei;
  line-height: 1.6;
  color: #c4853a;
}
.inset-prompt-text{
  padding-top: 4rpx;
  position: relative;
  font-size: 16px;
  color: #444;
  line-height: 1.7;
  word-break: break-all;
}
.inset-list{

  font-size: 16px;
  list-style: none;
  background: #fff;
}
.inset-list-li{
  color: #444;
  line-height: 1.5;
  list-style: none;
}
.inset-icon-dot{
  margin-bottom: 4rpx;
  margin-right: 20rpx;
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: url(https://pages.c-ctrip.com/you/common/text-detail-icons.png) no-repeat center;
  background-size: 48rpx auto;
  background-position: -34rpx 0;
  content: '';
}
.inset-icon-count{
  margin-right: 10rpx;
  color: #fec71f;
  font-style: normal;
}

.inset-link-supported {
  color: #039CDD!important;
