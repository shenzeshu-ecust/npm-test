.bubble-tips{position:fixed;top:0;left:0;padding:16rpx;background:rgba(38,39,40,0.8);border-radius:8rpx;display:flex;flex-direction:column;align-items:flex-start}.bubble-tips-item{font-size:22rpx;color:#ffffff;line-height:28rpx;text-align:left}.bubble-tips-left-arrow{width:0;height:0;border-width:10rpx;border-style:solid;border-color:transparent transparent transparent rgba(38,39,40,0.8);position:absolute;top:50%;right:-18rpx;transform:translate(0, -50%)}.bubble-tips-right-arrow{width:0;height:0;border-width:10rpx;border-style:solid;border-color:transparent rgba(38,39,40,0.8) transparent transparent;position:absolute;top:50%;left:-18rpx;transform:translate(0, -50%)}.bubble-tips-up-arrow{width:0;height:0;border-width:10rpx;border-style:solid;border-color:rgba(38,39,40,0.8) transparent transparent transparent;position:absolute;top:50%;left:0;transform:translate(0, -50%)}.bubble-tips-down-arrow{width:0;height:0;border-width:10rpx;border-style:solid;border-color:transparent transparent rgba(38,39,40,0.8) transparent;position:absolute;top:50%;left:0;transform:translate(0, -50%)}.bubble-tips-mask{position:fixed;top:0;left:0;z-index:9998;width:100%;height:100%;opacity:0.3}.hide-dom{opacity:0;z-index:0}.show-dom{opacity:1;z-index:9997}
