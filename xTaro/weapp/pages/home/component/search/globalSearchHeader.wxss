
.search-header {
  width: 100%;
  height: 100%;
}

.search-box {
  position: relative;
  margin-left: 24rpx;
  height: 100%;
  padding: 0 24rpx;
  background: #F4F4F4;
  border-radius: 32rpx;
  background-clip: true;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.search-box-text {
  height: 36rpx;
  font-size: 28rpx;
  margin: auto;
  color: #666;
  line-height: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.search-icon {
  position: relative;
  margin-right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  top: -1.5rpx;
  background: url(//pic.c-ctrip.com/platform/h5/mini_programe/search.png) 0 0 no-repeat;
  -webkit-background-size: 32rpx 32rpx;
  background-size: 32rpx 32rpx;
}

.search-box-inner {
  display: flex;
  align-items: center;
}