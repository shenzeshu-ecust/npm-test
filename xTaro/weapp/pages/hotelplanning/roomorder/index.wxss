@import "../common/css/common.wxss";

page {
    height: 100%;
    background: #303030;
    display: flex;
}

.flex-center {
	justify-content: center;
	align-items: center;
}

.scroll-view {
    background-color: #f6f8fa;
}

.room-order-header {
    background-image: url(https://pages.c-ctrip.com/hotels/wechat/market/smz/aggregate/order_header.png);
    height: 364rpx;
    width: 100%;
    background-size: 100% 100%;
}

.room-order-body {
    border-radius: 24rpx 24rpx 0 0;
    background-color: #f6f8fa;
    position: relative;
    top: -20rpx;
    padding: 32rpx 24rpx 0;
}

.res-wrapper {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 24rpx 24rpx 0;
    box-shadow: 0rpx 4rpx 16rpx 1rpx rgba(0, 0, 0, 0.06);
    margin-bottom: 24rpx;
}

.res-wrapper .res-name {
    color: #333333;
    font-size: 32rpx;
    font-weight: 600;
    max-width: 270rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    margin-right: 8rpx;
}

.res-wrapper .service-time {
    font-size: 24rpx;
}

.res-wrapper .order-btn-1 {
    background: #0086f6;
    border-radius: 24rpx;
    color: #fff;
    font-size: 24rpx;
    height: 44rpx;
    width: 112rpx;
    line-height: 44rpx;
    text-align: center;
}

.order-btn-1 .wechat-font-phone {
    margin-right: 4rpx;
}

.order-btn-wrapper {
    padding: 16rpx 8rpx 40rpx;
}

.res-wrapper .order-btn-2 {
    border-radius: 12rpx;
    background: #0086f6;
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
}

.pro-wrapper {
    display: flex;
    padding: 24rpx 0;
}

.pro-wrapper:not(:last-child) {
    border-bottom: 1px solid #ececec;
}

.pro-wrapper .pro-img{
    width: 140rpx;
    height: 140rpx;
    border-radius: 8rpx;
    margin-right: 24rpx;
    display: flex;
    flex-shrink: 0;
}

.pro-wrapper .pro-price {
    color: #fd680a;
    line-height: 1.6;
    font-size: 28rpx;
}

.pro-wrapper .pro-name {
    font-size: 28rpx;
    line-height: 1.8;
}

.pro-wrapper .pro-unit {
    font-size: 20rpx;
}

.room-order-footer {
    height: 198rpx;
    display: flex;
    margin-bottom: 32rpx;
}

.room-order-footer image {
    width: 360rpx;
    height: 70rpx;
}
