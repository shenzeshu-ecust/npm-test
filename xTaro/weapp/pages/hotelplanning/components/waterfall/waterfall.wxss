.es-new .es-item-inner, .wf-new .wf-item-inner {
  background-color: #f6f8fa !important;
  border-radius: 24rpx;
}
.es-new .infotitle, .es-new .user-nickname, .es-new .like-count {
  color: #333 !important;
}
.wf-new {
  background-color: #fff !important;
}
.loading-blank {
  height: 120rpx;
}