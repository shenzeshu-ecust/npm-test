@import "../../common/css/common.wxss";
@import "../../common/css/theme.wxss";
@import "../roomlist/index.wxss";

/* 优惠bar */
.promotion-bar {
  padding: 32rpx 40rpx 24rpx;
  display: flex;
  align-items: center;
}

.promotion-bar .pro-img {
  width: 138rpx;
  height: 35rpx;
}

.promotion-bar .pro-tag-box {
  flex: 1;
  margin: 0 5rpx 0 16rpx;
  color: #f5190a;
}

.promotion-bar .pro-tag-box-nologin {
  flex: 1;
  color: #f5190a;
}

.pro-icon-box {
  background: linear-gradient(90deg, rgb(246, 59, 46) 0%, rgb(251, 130, 91) 100%);
  border-radius: 16.5rpx;
  height: 32rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 32rpx;
  padding: 3rpx 18rpx;
}

/* 优惠common */
.promotion-ctag {
  color: #f5190a;
  font-size: 24rpx;
}

.promotion-ctag-nologin {
  color: #f5190a;
  font-size: 32rpx;
}

.pro-ctag {
  border: 1rpx solid #f5190a;
  border-radius: 4rpx;
  color: #f5190a;
  font-size: 20rpx;
  font-weight: 500;
  padding: 2rpx 8rpx;
}

.promotion-ctag .divider {
  padding: 0 12rpx;
  height: 14rpx;
  line-height: 16rpx;
  color: #f63c2f;
}

.promotion-ctag:last-child .divider {
  display: none;
}

.global-layer .thead .wechat-font-close1 {
  font-size: 42rpx;
  padding: 32rpx 24rpx;
  right: 0;
  left: unset;
  height: unset;
  width: unset;
  font-weight: 600;
}

.global-layer .thead .tit1 {
  height: unset;
  padding: 32rpx 80rpx;
}

.ellips {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.continue-live-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 27rpx;
  height: 80rpx;
  width: 654rpx;
  background: linear-gradient(-230.09deg, rgb(255, 190, 92) 0%, rgb(255, 119, 0) 100%);
  border-radius: 40rpx;
  color: #fff;
  font-size: 36rpx;
}

.wifi-coupon{
  display: flex;
  flex-direction: column;
  border-radius: 24rpx;
}

.wifi-cl-wrapper {
  width: 702rpx;
  /* padding-top: 20rpx; */
  padding-bottom: 1rpx;
  position: relative;
  border-radius: 24rpx;
  background: linear-gradient(-186.83deg, rgb(255, 226, 218) 0%, rgb(255, 242, 231) 100%);
  box-sizing: border-box;
}

.wifi-cl-bg {
  width: 100%;
  height: 547rpx;
  position: absolute;
  top: 0;
}

.wifi-cl-bg image {
  width: 100%;
  height: 100%;
}

.wifi-cl-wrapper .cl-module {
  margin: 0rpx 4rpx 4rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
}

.wifi-cl-wrapper .cl-tags {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.wifi-cl-wrapper .cl-tag-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cl-tag-item text {
  color: #616b79;
  font-size: 26rpx;
  line-height: 26rpx;
  margin-left: 8rpx;
}

.cl-tag-item image {
  width: 30rpx;
  height: 30rpx;
}


.cl-module .cl-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}

.cl-module .cl-btn {
  position: relative;
  width: 630rpx;
  height: 90rpx;
  color: #fff;
  font-weight: 500;
  font-size: 34rpx;
  background: linear-gradient(90deg, rgb(255, 153, 0) 0%, rgb(255, 102, 0) 100%);
  border-radius: 16rpx;
  line-height: 90rpx;
  text-align: center;
}

.cl-tags-divider {
  height: 1rpx;
  background-color: #ebebeb;
  margin: 0 12rpx;
}

/* 优惠券 */
.continue-packet {
  display: flex;
  flex-direction: column;
  background: linear-gradient(-186.83deg, rgb(255, 226, 218) 0%, rgb(255, 242, 231) 100%);
  border-radius: 24rpx;
  margin-bottom: 18px;
} 

.continue-packet .coupon-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 20rpx 18rpx;
}

.coupon-header .coupon-header-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  color: #333;
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: 500;
}

.coupon-header-title .coupon-header-pop {
  background: url(https://pages.c-ctrip.com/hotels/wechat/market/smz/unionvip/can-add.png) left top/contain no-repeat;
  width: 84rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.coupon-header .receive-btn {
  color: #333;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.receive-btn .receive-arrow-right {
  margin: 2rpx 0 0 4rpx;
}

.continue-packet .benefit-list,
.wifi-coupon .benefit-list {
  height: 185rpx;
  display: flex;
  padding: 0 20rpx 24rpx;
}

.benefit-list .coupon-list {
  display: flex;
  margin-right: 24rpx;
}

.benefit-list .coupon-list-special {
  margin-right: 8rpx;
}

.coupon-list .benefit-info {
  color: #fff;
  font-size: 74rpx;
  line-height: 64rpx;
  display: flex;
  align-items: baseline;
  margin: 46rpx 0 32rpx 0;
}

.benefit-list .right-list {
  display: flex;
}

.benefit-list .benefit-wrapper {
  background-position: -345.3rpx -6.6rpx;
  border-radius: 16rpx;
  width: 156rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 33rpx;
  justify-content: flex-end;
  padding-bottom: 12rpx;
}

.benefit-list .benefit-wrapper:not(:last-child), .right-list .cright-item:not(:last-child) {
  margin-right: 8rpx;
}

.right-list .cright-item {
  background: linear-gradient(-180deg, rgb(255, 255, 255) 0%, rgb(255, 241, 229) 100%);
  color: #8e4a0d;
  line-height: 28rpx;
  padding: 0;
}

.cright-item image {
  height: 62rpx;
  width: 62rpx;
  margin: 17rpx 0 11rpx 0;
}

.cright-item .right-bottom {
  background: linear-gradient(-223deg, rgb(255, 119, 0) 0%, rgb(255, 51, 0) 100%);
  padding: 14rpx 0 12rpx;
  width: 156rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 0 16rpx 16rpx;
  margin-top: 14rpx;
}

.continue-packet .coupon-bottom,
.wifi-coupon .coupon-bottom {
  background: #fff;
  border-radius: 0 0 24rpx 24rpx;
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 4px 16px 1px rgba(0,0,0,0.04);
}
.wifi-coupon .coupon-header{
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 20rpx 18rpx;
}
.wifi-cl-wrapper .no-benefit-bar{
  margin: 0px;
}
.icon-item {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #616b79;
  font-size: 26rpx;
}

.icon-item image {
  height: 26rpx;
  width: 26rpx;
  margin-right: 8rpx;
}

.no-benefit-bar {
  margin: 0 24rpx;
  width: 422rpx;
  height: 74rpx;
  position: absolute;
  background: url(https://pages.c-ctrip.com/hotels/wechat/market/smz/unionvip/no-benefit-bg.png) left top/contain no-repeat;
  top: -8rpx;
  left: 0;
  z-index: 2;
}

.new-no-benefit {
    top: -17rpx;
    left: -26rpx;
}

/* 优惠券弹窗 */
.benefit-layer {
  background: #ebf3ff;
}

.benefit-layer .thead {
  height: 104rpx;
  width: 100%;
}

.benefit-layer .benefit-layer-title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 247rpx;
}

.benefit-layer-bg {
    background: url(https://pages.c-ctrip.com/hotels/wechat/market/smz/unionvip/benefit-layer-bg.png) left top/contain;
}

.benefit-layer-bg-new {
    background: url(https://pages.c-ctrip.com/hotels/wechat/market/smz/unionvip/benefit-layer-bg-order.png) left top/contain;
}

.benefit-layer .benefit-close {
  padding-top: 4rpx;
  color: #333;
}

.benefit-layer .benefit-scroll {
  max-height: 60vh;
  transition: top 200ms linear; 
  will-change:top;
}

.benefit-layer-wrapper {
  padding: 0 24rpx;
}

.benefit-layer-wrapper .package-wrapper{
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  padding: 24rpx 28rpx 32rpx;
  margin-bottom: 20rpx;
}

.benefit-layer-wrapper .right-wrapper {
  padding: 28rpx 28rpx 20rpx;
}

.benefit-layer-wrapper .benefit-title {
  color: #111;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
}

.benefit-layer-wrapper .benefit-title:first-child {
  margin-top: 0;
}

.benefit-layer-wrapper .benefit-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: linear-gradient(-193.85deg, rgb(255, 142, 67) 0%, rgb(255, 71, 25) 100%);
  border-radius: 16rpx;
  padding: 8rpx 8rpx 8rpx 0;
  min-height: 132rpx;
  width: 638rpx;
  margin-top: 20rpx;
}

.benefit-layer-wrapper .coupon-new-card {
  background: #ffeaea;
  width: 636rpx;
  border: 1rpx solid #ffd4d4
}

.benefit-card .benefit-info {
  color: #fff;
  width: 212rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: baseline;
  font-size: 60rpx;
  font-weight: 500;
  line-height: 58rpx;
}

.coupon-new-card .benefit-info {
  color: #ff4719;
}

.benefit-info .benefit-unit {
  font-size: 24rpx;
  font-weight: 500;
  line-height: 24rpx;
  position: relative;
  top: -2rpx;
  margin-left: 4rpx;
}

.benefit-card .benefit-detail {
  background: url(https://pages.c-ctrip.com/hotels/wechat/market/smz/unionvip/coupon-bg.png) left top/cover;
  background-size: 100% 100%;
  width: 100%;
  min-height: 76rpx;
  display: flex;
  padding: 28rpx 0 28rpx 28rpx;
  align-items: center;
  position: relative;
  border-radius: 8rpx;
}

.benefit-card .coupon-detail {
  background: #fff;
}

.benefit-card .coupon-detail::before, .benefit-card .coupon-detail::after {
  content: "";
  width: 16rpx;
  height: 8rpx;
  border-radius: 0 0 8rpx 8rpx;
  background: #ffeaea;
  position: absolute;
  right: 136rpx;
  top: 0;
}

.benefit-card .coupon-detail::after {
  border-radius: 8rpx 8rpx 0 0;
  bottom: 0;
  top: unset;
}

.benefit-detail .desc-wrapper {
  color: #222;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.desc-wrapper .benefit-desc {
  color: #666;
  font-size: 24rpx;
  font-weight: 300;
  line-height: 32rpx;
  margin-top: 8rpx;
  max-width: 300rpx;
}

.benefit-detail .to-receive {
  background: linear-gradient(-208.69deg, rgb(255, 142, 67) 0%, rgb(255, 71, 25) 100%);
  border-radius: 21rpx;
  border: 1px solid #f8532a;
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
  padding: 5rpx 30rpx;
  height: 42rpx;
  line-height: 32rpx;
  margin-right: 16rpx;
}

.benefit-detail .has-received {
  background-position: -6.6rpx -207.3rpx;
  height: 86rpx;
  width: 92rpx;
  margin-right: 22rpx;
}

.right-wrapper .rights {
  display: flex;
  flex-direction: row;
  margin-top: 28rpx;
}

.rights .right-module {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #111;
  font-size: 26rpx;
  line-height: 34rpx;
  width: 25%;
}

.rights image {
  height: 72rpx;
  width: 72rpx;
  margin-bottom: 10rpx;
}

.rights .right-value {
  color: #666;
  margin-top: 4rpx;
  font-size: 20rpx;
  line-height: 28rpx;
}

.right-wrapper .right-desc {
  color: #999;
  font-size: 20rpx;
  line-height: 28rpx;
  margin-top: 28rpx;
}

.right-wrapper .mt4 {
  margin-top: 4rpx;
}

.global-layer .tfooter {
  background: #fff;
  border-radius: 2rpx 2rpx 0 0;
  height: 217rpx;
  width: 100%;
  padding: 57rpx 33rpx 72rpx;
  box-sizing: border-box;
  z-index: 2;
}

.tfooter .continue-live-btn {
  background: linear-gradient(-221.79deg, rgb(255, 135, 29) 0%, rgb(255, 86, 44) 100%);
  border-radius: 16rpx;
  margin: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
