@import "../../../../common/css/common.wxss";
@import "../../icon.wxss";

.level-scroll-view {
    position: absolute;
    height: 524rpx;
    width: 100%;
    bottom: 50rpx;
    flex-direction: row;
    display: flex;
}

.cutprice-level {
    background-repeat: no-repeat;
    background-image: url(https://pages.c-ctrip.com/hotels/wechat/market/assistcutprice/red_package.png);
    transition: all .4s;
    flex-shrink: 0;
    position: relative;
    height: 524rpx;
    width: 420rpx;
    background-size: 420rpx 524rpx;
}

.no-title-background {
    background-image: url(https://pages.c-ctrip.com/hotels/wechat/market/assistcutprice/red_package_no_title.png);
}

.cutprice-level-active {
    transform: scale(1);
    transform-origin: center;
}

.cutprice-level-inactive {
    transform: scale(0.8) translateY(-65rpx);
    opacity: .78;
}

.cutprice-level-wrapper .cp-current {
    font-size: 28rpx;
    color: #ac6800;
    line-height: 40rpx;
    font-weight: 600;
}

.cutprice-level-wrapper .cp-info-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    height: 244rpx;
    transform: translateZ(1rpx);
    padding: 0 60rpx;
}

.cutprice-level-wrapper .cp-subtitle {
    background: #ac6800;
    border-radius: 100rpx;
    color: #fff;
    font-size: 24rpx;
    padding: 8rpx 24rpx;
    line-height: 30rpx;
    margin: 0 auto;
    width: fit-content;
    word-break: break-all;
    font-weight: 600;
}

.cutprice-level-wrapper .cp-reward {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    line-height: 120rpx;
}

.cutprice-level-wrapper .reward-num {
    color: #ff6600;
    font-size: 156rpx;
    font-weight: 600;
    letter-spacing: 0px;
}

.cutprice-level-wrapper .reward-unit {
    background-color: #ff6600;
    color: #fff;
    font-size: 24rpx;
    border-radius: 50%;
    padding: 8rpx;
    line-height: 1;
    margin-left: 8rpx;
    margin-bottom: 6rpx;
    font-weight: 600;
}

.cutprice-level-wrapper .invite-group {
    display: flex;
    flex-direction: row;
    position: absolute;
    bottom: 62rpx;
    justify-content: space-around;
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx;
    color: #fff;
}

.cutprice-level-wrapper .invite-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cutprice-level-wrapper .invite-item image, .cutprice-level-wrapper .invite-image {
    width: 75rpx;
    height: 75rpx;
    margin-bottom: 24rpx;
    border-radius: 50%;
}
.cutprice-level-wrapper .invite-item text {
    font-size: 24rpx;
    line-height: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 84rpx;
}
.cutprice-level-wrapper .invite-image {
    margin-bottom: 24rpx;
}

.cutprice-level-wrapper .cp-cancel-title {
    color: #ac6800;
    font-size: 28rpx;
    line-height: 1.3;
    font-weight: 500;
}

.checkpoint-stamp {
    position: absolute;
    right: 24rpx;
    top: 84rpx;
    z-index: 1;
}

.invite-group button {
    border: none !important;
    padding: 0 !important;
}