@import "../common/css/common.wxss";

page {
    height: 100%;
    background: #303030;
    display: flex;
}

/* 返回顶部按钮 */
.goTopBtn {
	position: fixed;
	z-index: 2;
	right: 40rpx;
	bottom: 224rpx;
	height: 100rpx;
	width: 100rpx;
	border-radius: 50%;
	background: rgba(0, 0, 0, 0.8);
	box-shadow: 0 10px 26px 2px rgba(0, 0, 0, 0.14);
	display: flex;
	justify-content: center;
	align-items: center;
}

.goTopBtn image {
	width: 38rpx;
	height: 38rpx;
}

.bottom-blank {
	height: 44rpx;
	width: 100%;
}

.weui-navigation-bar__center text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-align: left;
}

.top-mask {
	z-index: 9999;
	background: rgba(0, 0, 0, 0);
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
}

/* 头部样式 start */

.header-wrapper {
    width: 100%;
}

.header-bg {
    width: 100%;
    height: 816rpx;
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(to bottom, rgb(255, 255, 255) 13.21%, rgba(255, 255, 255, 0) 100%), radial-gradient(ellipse, rgb(0, 57, 255, 0.16) 0%, rgba(255, 255, 255, 0) 66%), radial-gradient(ellipse, rgb(0, 163, 249, 0.2) 0%, rgba(255, 255, 255, 0) 66%);
    background-size: 100% 816rpx, 100% 400rpx, 100% 400rpx;  
    background-position: left top, left -360rpx bottom 52rpx, right -360rpx bottom 52rpx;
    background-repeat: no-repeat;
}

.common-header {
    width: 100%;
    margin-top: 177rpx;
}

.service-wrapper {
    padding-top: 40rpx;
}

.swiper-wrapper {
    height: 61rpx;
    padding: 0 28rpx 0 20rpx;
    font-size: 24rpx;
    border-radius: 9rpx;
    background-color: #fff ;
    margin:0 25rpx 24rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0f4999;
    overflow: hidden;
}

.swiper {
    width: 100%;
    height: 100%;
}

.swiper-item-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.qrcode-entrance {
    display: flex;
    white-space: nowrap;
    align-items: center;
    max-width: 504rpx;
}

.last-qrcode-text {
    overflow: hidden;
    text-overflow: ellipsis;
}

.own-service {
    font-weight: 500;
}

.split-line {
    margin: 0 20rpx;
}

.meal-packs-wrapper {
    position: relative;
}

.bg-wrapper {
    width: 640rpx;
    min-height: 560rpx;
    position: absolute;
    right: 0;
    top: 0;
}

.nounion-top {
    margin-top: 196rpx;
}

.header-top {
    padding: 0 62rpx 0 40rpx;
}

.yoyo-font {
    margin-right: 8rpx;
    font-size: 32rpx;
    position: relative;
    top: -2rpx;
}

.unionvip-common {
    display: inline-flex;
    align-items: center;
    background: linear-gradient(-267.82deg, rgb(251, 221, 182) 0%, rgb(231, 170, 115) 100%);
    border-radius: 20rpx 22rpx 22rpx 2rpx;
    color: #272f47;
    font-size: 24rpx;
    font-weight: 500;
    line-height: 32rpx;
    padding: 6rpx 18rpx 6rpx 15rpx;
    margin-bottom: 16rpx;
}

.welcome {
    color: #fff;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-bottom: 8rpx;
}

.name-wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.hotel-name {
    color: #eef1f6;
    font-size: 36rpx;
    font-weight: 500;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 4rpx;
}

.common-arrow {
    color: #eef1f6;
}

.novip-func {
    position: relative;
}

.novip-func::before {
    content: "";
    position: absolute;
    left: 0;
    top: -64rpx;
    width: 100%;
    height: 64rpx;
    background: linear-gradient(-180deg, rgb(26, 32, 46, 0) 0%, rgb(26, 32, 46) 100%);
}
/* 头部样式 end */

.Coupon-BG {
	position: absolute;
	height: 340rpx;
	width: 750rpx;
}

.continue_title_v4 {
    position: relative;
    bottom: -10rpx;
    margin: 0 24rpx;
    background: linear-gradient(-180deg, rgb(255, 226, 212) 0%, rgb(255, 255, 255) 90.1%);
    border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.new-room {
    position: relative;
    top: -10rpx;
}

.waterflow {
    position: relative;
    top: -37rpx;
    z-index: 1;
    background-color: #fff;
}