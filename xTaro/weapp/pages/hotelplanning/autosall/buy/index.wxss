/* pages/hotelplanning//autosall/buy/index.wxss */
.buy-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}
.vend-bg{
    width: 100%;
    height: 100%;
}
.buy-btn{
    position: absolute;
    bottom: 22%;
    left: 50%;
    transform: translateX(-50%);
    width: 460rpx;
    height: 108rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.new-customer-pop {
    z-index: 1001;
    position: absolute;
    top: 55%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.new-coustomer{
    height: 750rpx;
}
.mask {
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .5);
}