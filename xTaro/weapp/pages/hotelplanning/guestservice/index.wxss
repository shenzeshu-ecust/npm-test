@import "../common/css/theme.wxss";
@import "../common/css/common.wxss";
.container {
  background: var(--container-bg);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
}

.guest-service {
  max-height: calc(100vh - 136rpx);
  transition: top 200ms linear;
  will-change: top;
}

.back-icon {
  width: 42rpx;
  height: 42rpx;
  padding: 5rpx;
}

.guest-header {
  height: 364rpx;
  position: relative;
}

.guest-img {
  height: 100%;
  background: var(--guest-img);
  background-size: cover;
}

.guest-body {
  position: relative;
  background: var(--guest-body-bg);
  border-radius: 16rpx 16rpx 0 0;
  padding: var(--guest-body-padding);
  top: var(--guest-body-top);
}

.service-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: var(--guest-service);
}

.service-item:last-child {
  border: none;
  padding-bottom: 0;
}

.right-detail {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  flex: 1;
}

.right-detail1 {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  padding-top: 12rpx;
}

.item-begin {
  width: 50rpx;
  color: var(--guest-begin);
  font-size: 24rpx;
  font-weight: 500;
  margin: 0 88rpx 0 46rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon {
  height: 36rpx;
  width: 36rpx;
  margin-bottom: 10rpx;
}

.item-detail {
  align-self: flex-start;
  color: var(--guest-detail);
  font-size: 24rpx;
  line-height: 40rpx;
  flex: 1;
  padding: 0 10rpx;
}

.service-btn {
  background: var(--guest-btn-bg);
  border-radius: 8rpx;
  height: 88rpx;
  color: var(--guest-btn-color);
  font-size: 32rpx;
  font-weight: bold;
  line-height: 88rpx;
  margin: 16rpx 45rpx 32rpx 45rpx;
}

.facility {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.facility-content {
  font-size: 24rpx;
  color: var(--guest-detail);
  padding-right: 12rpx;
  align-self: flex-start;
  margin-bottom: 32rpx;
}

.facility-content:last-child {
  margin-bottom: 0;
}

.facility-name {
  color: var(--guest-facility-name);
}

.open-time {
  margin-left: 24rpx;
}

.content-lay {
  margin-top: 8rpx;
  line-height: 30rpx;
  word-break: break-all;
}

.hot-facility {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  color: var(--guest-begin);
}
