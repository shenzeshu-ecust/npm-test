@import "../common/css/common.wxss";

.search-body {
    margin: 0;
}

.active-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
}

.active-bg {
    background: linear-gradient(-120deg, rgb(249, 90, 98) 20%, rgb(255, 157, 100) 40%);
    background-size: cover;
    width: 100%;
    padding-bottom: 40rpx;
}

.square-title-image {
    width: 100%;
    height: 400rpx;
}

.active-game-content{
    margin: -56rpx 24rpx 0;
 }

 .active-rights-content {
    margin: 0 24rpx 0;
    top: 102rpx;
}

.active-content {
    background: linear-gradient(-180deg, rgb(254, 213, 210) 0%, rgb(255, 255, 255) 17.41%);
    border-radius: 16rpx;
    padding: 24rpx;
}

.game-title {
    display: flex;
    align-items: center;
}

.game-image {
    width: 69rpx;
    height: 52rpx;
}

.right-image {
    width: 70rpx;
    height: 70rpx;
}

.game-title-text {
    margin-left: 16rpx;
    font-size: 40rpx;
    font-weight: bold;
    color: #ff4d5e;
}

.game-module {
    display: block;
    width: 100%;
    width: 654rpx;
    height: 220rpx;
    margin-top: 32rpx;
}

.right-wrapper{
    width: 100%;
    background: linear-gradient(-180deg, #ff9d64 0%, #fceccb 100%);
    padding-bottom: 28rpx;
}

.rights-item {
    position: relative;
    display: flex;
    align-items: center;
    padding: 16rpx 24rpx 16rpx 40rpx;
    background: #fff0e6;
    border-radius: 16rpx;
    margin-top: 24rpx;
}

.rights-icon-img {
    width: 70rpx;
    height: 70rpx;
    margin-right: 41rpx;
}

.rights-text {
    color: #000;
    font-size: 30rpx;
    font-weight: 500;
}

.rights-join-btn {
    position: absolute;
    right: 24rpx;
    padding: 12rpx 20rpx;
    text-align: center;
    color: #fff;
    font-size: 26rpx;
    background: linear-gradient(-90deg, rgb(255, 102, 0) 0%, rgb(255, 153, 0) 100%);
    border-radius: 7rpx;
}

.active-bubble {
    position: absolute;
    display: flex;
    align-items: center;
    right: 10rpx;
    top: 160rpx;
    width: 337rpx;
    background: #0066f6;
    border-radius: 8rpx;
    padding: 16rpx;
}

.active-bubble::before {
  content:'';
  width: 0;
  height: 0;
  border-width: 0 30rpx 30rpx;
  border-style: solid;
  border-color: transparent transparent #0066f6;
  position: absolute;
  left: 222rpx;
  top: -20rpx;
}

.bubble-tip {
    color: #fff;
    font-size: 24rpx;
}

.bubble-close {
    font-size: 40rpx;
    color: #fff;
}