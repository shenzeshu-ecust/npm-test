/* pages/index/index.wxss */
.page {
  width: 100%;
  height: 100%;
}

.page-image {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 0;
  background-repeat:no-repeat;
  background-attachment:fixed;
  background-position:center;
  background-size:cover;
}

.mask {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 0.2; 
  background: #000000;
}

.wrapper {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 99;
}

.top {
  margin-top: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.poi-image {
  width: 120rpx;
  height: 120rpx;
}

.food-image {
  width: 120rpx;
  height: 120rpx;
}

.middle {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.desc {
  font-weight: bold;
  font-size: 48rpx;
  color: #FFFFFF;
  line-height: 64rpx;
  text-shadow: 0 0 4rpx rgba(0,0,0,0.5);
}

.foot {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 44rpx;
}

.btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 100rpx;
  background-image: linear-gradient(-90deg, #38C4D9 0%, #61DED6 100%);
  border-radius: 9rpx;
}

.btn-desc {
  font-weight: bold;
  font-size: 38rpx;
  color: #FFFFFF;
  line-height: 64rpx;
  text-shadow: 0 0 4rpx rgba(0,0,0,0.2);
}
