@import "../common/components/BookPuc/BookPuc.wxss";
@import "../common/repeatCss/addpasgPassenger.wxss";

page {display: block}
.wrap{position: relative;z-index: 2;padding-top: 16rpx}
.wrap::after{position: absolute;left: 0;top:0;right:0;height:470rpx;content: "";background: -webkit-linear-gradient(top,#0086F6,#EEF1F6);z-index: -1}

.pasg-add-btn{display: flex;margin: 0 16rpx 16rpx;}
.pasg-add-btn .btn-submit{flex: 1;height: 96rpx;line-height: 96rpx;background: #fff;border-radius: 10px;background: #fff;color: #0088FF;font-size: 30rpx;font-weight: 600;margin-right: 16rpx;}
.pasg-add-btn .btn-submit:last-child{margin-right: 0;}
.pasg-add-btn .ifont-lead,.pasg-add-btn .ifont-invite, .pasg-add-btn .ifont-scan{font-weight: 400;margin: -2px 14rpx 0;}
.pasg-add-btn .ifont-lead{font-size: 30rpx;}
.pasg-add-btn .ifont-invite, .pasg-add-btn .ifont-scan{font-size: 32rpx;}
.add-box .labels-wrap{display: flex; flex-direction: column;align-items: center;}
.add-box .label.tiny{color: #666;font-size: 24rpx;}
.add-box .label{color: #666;line-height: 40rpx}
.add-box .label .ifont-detail{font-size: 30rpx;color: #999;margin:-2px 0 0 8rpx}
.add-box .label .s{font-size: 22rpx;line-height: 24rpx}
.add-box .child-txt{line-height: 96rpx;font-size: 26rpx;color: #0086F6;}
.add-box .item.bder{border-bottom: 0;}

.placeholder-color{
    color:#ddd;
}

.btns {
    padding: 40rpx 24rpx 16rpx;
}

.switch-country{
	position:absolute;
	top:20rpx;
	width: 96rpx;
	height: 48rpx;padding: 2px;
	right:0rpx;
    border-radius: 56rpx;
    background:-webkit-linear-gradient(-45deg,#EBECF0,#DCDCE0);
    overflow: hidden;
}
.switch-country .cn,
.switch-country .en{
	width: 48rpx;
	height: 48rpx;
	line-height:48rpx;
	text-align:center;
	color:#fff;
    font-size:24rpx;font-weight: 600;
}
.switch-country .en{float: left}
.switch-country .cn{float: right;}
.switch-country .cn.current,
.switch-country .en.current{

	background:#fff;
	color:#0086F6;
  border-radius: 48rpx;
}


.btn-blue{height: 88rpx;line-height: 88rpx;border-radius: 6px;background: -webkit-linear-gradient(left,#00A7FA,#0086F6);color: #fff;font-size: 34rpx;font-weight: 600;}

.pasg-tips{margin: 32rpx 40rpx 40rpx 38rpx;font-size: 24rpx;color: #666;line-height: 34rpx;}
.pasg-tips .item{  margin-top: 10rpx;  line-height: 36rpx;position: relative;color:#999999}
/* .pasg-tips .item::before{width: 6rpx;height: 6rpx;border-radius: 6rpx;position: absolute;content: "";background: #AAA;left: 0;top:14rpx} */
.pasg-tips .tit{color: #333333; font-size: 24rpx;margin-bottom: 16rpx;font-weight: bold;}
.child-tips{padding: 32rpx;}
.child-tips .tit{font-size: 34rpx;font-weight: 600;line-height: 36rpx;margin-bottom: 32rpx}
.child-tips .img{width: 100%}
.child-tips-list{background: #F8FAFD;border-radius: 4px;margin-top: 60rpx;padding: 32rpx 12rpx 32rpx 24rpx;}
.child-tips-list .item{padding-left: 22rpx;margin-bottom: 12rpx;position: relative;font-size: 26rpx;color: #666}
.child-tips-list .item:last-child{margin-bottom: 0}
.child-tips-list .item::before{width: 6rpx;height: 6rpx;border-radius: 6rpx;position: absolute;content: "";background: #AAA;left: 0;top:14rpx}

.pasg-type{display: flex;flex-flow: row wrap; justify-content:space-between;}
.pasg-type .type{font-size: 30rpx}
.pasg-type .type.cur{color: #0086F6}
.pasg-type .type .ifont-radio{margin: -2px 12rpx 0 0;}

.book-white .book-tips{margin: 16rpx 24rpx 0}

.book-white .tips-phone{margin: 0;position: relative;}
.book-white .tips-phone::before{height:0px;width:0px;line-height:0px;border-style: dashed dashed solid dashed;border-width:6px;border-color:transparent transparent #FFF8F2 transparent;position: absolute;content: "";top:-12px;left: 48rpx;}
