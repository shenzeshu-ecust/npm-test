.wrap{height:calc(100% -  108rpx);overflow-x:hidden;width:calc(100% - 32rpx);scrollbar-width: none;-ms-overflow-style: none;}
.wrap::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
}

