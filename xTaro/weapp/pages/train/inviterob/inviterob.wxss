.pop-share-qrcode .ifont-closed{position: absolute;bottom: -160rpx;font-size: 64rpx;color: #fff;width: 80rpx;height: 80rpx;text-align: center;line-height: 80rpx;left: 50%;transform: translateX(-50%)}

@-webkit-keyframes circle {
    0% {
      -webkit-transform: rotate(0deg);
      opacity: 1;
    }
    100%{
      -webkit-transform: rotate(-360deg);
      opacity: 0;
    }
  }
  @keyframes circle {
    0% {
      transform: rotate(0deg);
      opacity: 1;
    }
    100%{
      transform: rotate(-360deg);
      opacity: 0;
    }
  }

  @-webkit-keyframes light{
    0%{
      -webkit-transform: scale(.85);
    }
    50%{
      -webkit-transform: scale(1.05);
      opacity: 1;
    }
    75%{
      -webkit-transform: scale(1);
    }
    100%{
      -webkit-transform: scale(1);
      opacity: 0;
    }
  }
  @keyframes light{
    0%{
      transform: scale(.85);
    }
    50%{
      transform: scale(1.05);
      opacity: 1;
    }
    75%{
      transform: scale(1);
    }
    100%{
      transform: scale(1);
      opacity: 0;
    }
  }
