@import "../../pop-box.wxss";
@import "../../iconfont.wxss";

/* 230713 新客已领取礼包弹窗 */
.new-guest-received-pop {position: fixed;top: 50%;left: 50%;transform: translate(-50%, 0);background: linear-gradient(-40.18deg, rgb(255, 0, 117) 13.43%, rgb(255, 121, 0) 75.64%);border: 4rpx solid #fffb00;border-radius: 34rpx;width: calc(100vw - 88rpx);z-index: 3002;box-shadow: #fff 0 0 48rpx;transition: all 0.3s linear;opacity: 0;pointer-events: none;}
.new-guest-received-pop.active{transform: translate(-50%, -50%);opacity: 1;pointer-events: all;}
.new-guest-received-pop .y-box{position: relative;}
.new-guest-received-pop .y-box::after{content: '';position: absolute;top: 0;right: 0;width: 280rpx;height: 64rpx;background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/7yue/xinke/guang-shang.png) no-repeat;transform: translateY(-152rpx);background-size: 100% 100%;}
.new-guest-received-pop .y-bg {width: 634rpx;padding: 64rpx 16rpx 60rpx;transform: translateY(-120rpx);border-radius: 32rpx;background: #fff;box-sizing: border-box;margin: 0 auto;box-shadow: #fff 0 0 24rpx;position: relative;text-align: center;overflow: hidden;z-index: 1;padding-bottom: 60px;}
.new-guest-received-pop .y-bg .slogan{width: 208rpx;height: 46rpx;position: absolute;top: 0;left: 50%;transform: translateX(-50%);}
.new-guest-received-pop .y-bg .tit{font-size: 36rpx;font-weight: 600;line-height: 44rpx;margin-bottom: 26rpx;}
.new-guest-received-pop .y-bg .tit .p {color: #F73452;}
.new-guest-received-pop .y-bg .box{position: relative;padding: 30rpx 36rpx;background: linear-gradient(-0deg, rgb(255, 245, 231) 0%, rgb(255, 242, 237) 100%);border-radius: 12rpx;overflow: hidden;}
.new-guest-received-pop .y-bg .tag{position: absolute;top: 0;right: 0;background: #E7C09C;color: #fff;border-radius: 0 0 0 12rpx;font-size: 20rpx;padding: 2rpx 8rpx;}
.new-guest-received-pop .y-bg .list{display: flex;align-items: center;justify-content: space-between;}
.new-guest-received-pop .y-bg .item{width: 168rpx;color: #955D32;}
.new-guest-received-pop .y-bg .icon{width: 90rpx;height: 90rpx;margin-bottom: 4rpx;}
.new-guest-received-pop .y-bg .title{font-size: 28rpx;font-weight: 600;line-height: 36rpx;}
.new-guest-received-pop .y-bg .desc{font-size: 24rpx;line-height: 30rpx;}
.new-guest-received-pop .r-bg {width: 100%;height: 288rpx;position: absolute;bottom: -14rpx;left: 0;background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/7yue/xinke/hb-qian2.png) no-repeat;background-size: 100% 100%;background-position: center -4rpx;z-index: 1;}
.new-guest-received-pop .r-bg::after {content: '';position: absolute;bottom: 10rpx;left: 0;width: 280rpx;height: 64rpx;background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/7yue/xinke/guang-xia.png) no-repeat; transform: translateY(50%);background-size: 100% 100%;}
.new-guest-received-pop .ifont-close{position: absolute;bottom: -100rpx;left: 50%;transform: translateX(-50%);width: 60rpx;height: 60rpx;background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/7yue/xinke/Cancel.png) no-repeat;background-size: 100% 100%;}
.new-guest-received-pop .y-bg .cash-box{
    background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/7yue/xinke/yhq.png) no-repeat, linear-gradient(0deg, rgb(255, 245, 231) 6.62%, rgb(255, 237, 237) 97.82%);
    background-size: contain;
    background-position: bottom;
    margin-bottom: 10rpx;
    height: 136rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
    overflow: hidden;
    position: relative;
}
.new-guest-received-pop .y-bg .cash-box .tag {
    background: #fb899a;
}
.new-guest-received-pop .y-bg .cash-box .item {
    display: flex;
    width: 100%;
    align-items: center;
    width: 148px;
    height: 138rpx;
    margin: auto;
    padding-left: 24rpx;
}
.new-guest-received-pop .y-bg .cash-box .item .text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 20rpx;
}
.new-guest-received-pop .y-bg .add {
    width: 62rpx;
    height: 62rpx;
    position: absolute;
    z-index: 1;
    top: 244rpx;
    left: 50%;
    transform: translateX(-50%);
}