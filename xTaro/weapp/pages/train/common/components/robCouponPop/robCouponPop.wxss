.pop-mid-box{display: table-cell;vertical-align: middle;}
.rob-pop-shadow{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: black;
  opacity: 0.5;
  height: 100%;
  width: 100%;
  z-index: 999;
}
.task-reward-pop {
  background: #ffffff;
  border-radius: 8px 8px 8px 8px;
  width: calc(100% - 148rpx);
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: auto;
  z-index: 1000;
}
.task-reward-pop .pop-mid-box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}
.task-reward-pop .task-reward-background {
  position: absolute;
  height: 288rpx;
  background: url(https://images3.c-ctrip.com/train/2022/app/8.47/zengzhang/xiaochengxu_zhulirenwu/pic_gift.png) no-repeat;
  background-size: contain;
  width: 100%;
  top: -113rpx;
  left: 0;
}
.task-reward-pop .task-reward-title {
  color: #1f3c64;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  font-weight: 600;
  line-height: 52rpx;
  margin-top: 104rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.task-reward-pop .task-reward-subtitle {
  color: #666666;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: normal;
  letter-spacing: 0px;
  line-height: 44rpx;
  margin-bottom: 10rpx;
}
.task-reward-pop .task-reward-tags {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.task-reward-pop .task-reward-tags .tag-left {
  margin-right: 12rpx;
}
.task-reward-pop .task-reward-tags .tag-left text {
  color: #ffffff;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  font-weight: normal;
  letter-spacing: 0px;
  opacity: .8;
}
.task-reward-pop .task-reward-tags .tag-left .speed {
  opacity: 1;
  color: #ffffff;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 0px;
}
.task-reward-pop .task-reward-tags .kuaisu {
  margin-right: 14rpx;
}
.task-reward-pop .task-reward-tags .tisheng {
  margin: 0 8rpx 0 4rpx;
}
.task-reward-pop .task-reward-tags .sheng {
  margin-right: 14rpx;
}
.task-reward-pop .task-reward-tags .tag-right {
  color: #ffffff;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 0px;
  line-height: 44rpx;
}
.task-reward-pop .task-reward-tags .tag-container {
  display: flex;
  align-items: center;
  padding: 14rpx 24rpx 14rpx 14rpx;
  border-radius: 24rpx 6rpx 24rpx 6rpx;
}
.task-reward-pop .task-reward-tags .tag-container image {
  width: 40rpx;
  height: 40rpx;
}
.task-reward-pop .task-reward-tags .tag-left {
  background: linear-gradient(-90deg, rgb(255, 104, 70) 0%, rgb(255, 181, 32) 100%);
}
.task-reward-pop .task-reward-tags .tag-right {
  background: linear-gradient(-90deg, rgb(23, 200, 142) 0%, rgb(59, 230, 173) 100%);
}
.task-reward-pop .split-line {
  height: 1px;
  width: 460rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(270deg, #fff 0%, #0099f940 50%, #fff 100%);
  /* background: linear-gradient(270deg, rgba(255,241,230,0.00) 0%, #FFF1E6 100%); */
}
.task-reward-pop .task-reward-tip {
  color: #666666;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: normal;
  letter-spacing: 0px;
  line-height: 44rpx;
  margin-bottom: 16rpx;
}
.task-reward-pop .task-reward-ticket {
  margin-bottom: 32rpx;
  width: 100%;
  height: 136rpx;
  background: url(https://images3.c-ctrip.com/train/2022/app/8.47/zengzhang/xiaochengxu_zhulirenwu/kupon.png) no-repeat;
  box-sizing: border-box;
  border-radius: 5px;
  background-size: contain;
  display: flex;
  align-items: center;
}
.task-reward-pop .task-reward-ticket .ticket-left {
  color: #b54920;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  font-weight: 600;
  height: 136rpx;
  width: 136rpx;
  line-height: 136rpx;
  text-align: center;
}
.task-reward-pop .task-reward-ticket .ticket-stick {
  border-right: 1px dashed #bc2926;
  width: 1px;
  height: calc(100% - 20rpx);
}
.task-reward-pop .task-reward-ticket .ticket-left .discount {
  color: #b54920;
  font-family: PingFangSC-Semibold;
  font-size: 64rpx;
  font-weight: 600;
  padding-left: 4rpx;
}
.task-reward-pop .task-reward-ticket .ticket-right {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.task-reward-pop .task-reward-ticket .ticket-info {
  margin-left: 20rpx;
}
.task-reward-pop .task-reward-ticket .ticket-title {
  color: #b54920;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  font-weight: 600;
}
.task-reward-pop .task-reward-ticket .ticket-desc {
  color: #b54920;
  font-family: PingFangSC-Light;
  font-size: 24rpx;
  font-weight: 300;
}
.task-reward-pop .task-reward-btn {
  background: linear-gradient(-90deg, rgb(0, 118, 245) 0%, rgb(0, 167, 250) 100%);
  border-radius: 6px;
  color: #ffffff;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  font-weight: normal;
  letter-spacing: 0px;
  line-height: 42rpx;
  width: 100%;
  padding: 24rpx 0;
}

.task-reward-pop .countdown{
color: #999999;
font-size: 22rpx;
font-family: SFProText-Regular;
font-weight: normal;
margin: 16rpx 0 24rpx;
/* line-height: 14px; */
}
.task-receive-pop .pop-mid-box{
  padding-bottom: 0;
}