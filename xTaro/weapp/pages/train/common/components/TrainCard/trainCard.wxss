@import '../../iconfont.wxss';
@import '../../numberFont.wxss';
@import '../TransitCard/transitCard.wxss';
@import '../../repeatCss/listTrainCard.wxss';
@import '../thenByTicket/thenByTicket.wxss';

.x-sel-detail {
  background: #fff;
  margin-top: 26rpx;
}

.sel-detail .seat-item-box {
  background: #fff;
  width: 100%;
}

.sel-detail .seat-item-scroll-box {
  white-space: nowrap;
}

.sel-detail .seat-scroll-item-box {
  display: inline-block;
  width: 26%;
  background: #f6f8fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  position: relative;
}

.sel-detail .seat-scroll-item-box-border {
  border: 2rpx solid #0086f6;
}

.sel-detail .seat-scroll-item {
  height: 114rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.sel-detail .seat-item-box .seat-item {
  background: #f6f8fa;
  border-radius: 12rpx;
  height: 114rpx;
  width: 32%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx solid transparent;
  position: relative;
}

.sel-detail .seat-item-box .seat-item-border {
  border: 2rpx solid #0086f6;
  background-color: #f2f8fe;
}

.sel-detail .seat-item-box .seat-item-left {
  margin-left: 2.4%;
}

.sel-detail .seat-item-seatname {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 38rpx;
}

.sel-detail .seat-item-seatname .slient {
  border-radius: 4rpx;
  border: 1rpx solid #99e2c9;
  height: 32rpx;
  width: 32rpx;
  justify-content: center;
  margin-left: 8rpx;
}

.sel-detail .seat-item-seatname .slient .slienttxt {
  color: #00b87a;
  font-size: 20rpx;
}

.sel-detail .seat-item-seatprice {
  color: #333;
  font-size: 24rpx;
  line-height: 30rpx;
  font-weight: 400;
  margin-top: 6rpx;
}

.sel-detail .seat-item-box .seat-item-seatsplit {
  color: rgba(0, 0, 0, 0.1);
  margin: 0 8rpx;
}

.ifont-gou2 {
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  color: #fff;
  overflow: hidden;
  font-size: 20rpx;
}

.isurgent {
  color: #ff7700;
}

.seat-view::after {
  background-image: linear-gradient(
    to right,
    rgba(255, 255, 255, 0),
    rgb(255, 255, 255) 80%
  );
  position: absolute;
  content: '';
  top: 140rpx;
  right: 0;
  bottom: 0;
  width: 54rpx;
  height: 120rpx;
  z-index: 2;
}
.seat-view-outer {
  position: relative;
}

.sel-detail .seat-item-bottom {
  position: absolute;
  bottom: -1rpx;
  right: -1rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 0px 0px 10rpx 0px;
  overflow: hidden;
}

.sel-detail .seat-item-box .seat-item-two {
  width: 48.7%;
}
.sel-detail .sel-box-shadow {
  width: calc(100% + 48rpx);
  height: 24rpx;
  transform: translate(-24rpx, 0);
  margin-bottom: 30rpx;
  box-shadow: 0px 4px 12px 0px rgba(0, 53, 97, 0.05);
  border-radius: 0 0 24rpx 24rpx;
}

.sel-detail .seat-img {
  width: 50rpx;
  height: 50rpx;
  margin: 12rpx 24rpx auto 0;
}

.sel-detail .flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sel-detail .flex-column {
  display: flex;
  flex-direction: column;
}

.sel-detail .seat-booking-box-bottom {
  position: relative;
}
.seat-booking-box-margin-bottom {
  margin-bottom: 28rpx;
}
.sel-detail .btn-orage {
  background: -webkit-linear-gradient(left, #ffa50a, #ff7700);
}
.sel-detail .btn-blue {
  background: -webkit-linear-gradient(right, #0076f5, #00a7fa);
}

.sel-detail .booking-btn {
  border-radius: 8rpx;
  height: 88rpx;
  width: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  line-height: 34rpx;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
}

.sel-detail .booking-btn .button-name {
  margin: auto 0;
}

.sel-detail .booking-btn .button-price-tag {
  width: 84rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #ffffff;
  border-radius: 0rpx 0rpx 6rpx 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: normal;
  margin-bottom: 3rpx;
}

.sel-detail .booking-btn .btn-price-tag-blue {
  color: #2698f7;
}

.sel-detail .booking-btn .btn-price-tag-orange {
  color: #ff7700;
}

.sel-detail .booking-doudi-btn {
  top: 50rpx;
}

.sel-detail .seat-booking-box {
  width: 100%;
}
.sel-detail .seat-booking-box .booking-info-title {
  color: #222222;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 38rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
}

.booking-info-title-skeleton {
  background: #e3e7ed;
  border-radius: 3px 3px 3px 3px;
  height: 21px;
  width: 74px;
}

.booking-info-subtitle-skeleton {
  background: #e3e7ed;
  border-radius: 3px 3px 3px 3px;
  height: 15px;
  width: 167px;
  margin-top: 6px;
}

.sel-detail .booking-btn-skeleton {
  height: 40px;
  width: 40px;
  background: #e3e7ed;
  border-radius: 3px 3px 3px 3px;
}

.sel-detail .seat-booking-box .booking-vendor-txt {
  color: #222222;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 30rpx;
  margin-left: 8rpx;
}
.sel-detail .seat-booking-box .combi-cnl {
  margin-left: 8rpx;
  width: 76rpx;
  height: 32rpx;
}

.sel-detail .seat-booking-box .booking-info-subtitle {
  color: #999999;
  font-size: 24rpx;
  line-height: 30rpx;
}

.sel-detail .seat-booking-box .booking-omni-desc {
  padding: 14rpx 24rpx 0 0;
  margin-top: 16rpx;
  position: relative;
  z-index: 1;
}
.sel-detail .seat-booking-box .booking-omni-desc::before {
  content: '';
  position: absolute;
  width: 80%;
  height: 100%;
  left: -30rpx;
  top: 0;
  background: url(https://images3.c-ctrip.com/train/2023/xiaochengxu/qiangpiao/8.60/quannengqiangpiao/X-bg-plus.png)
    no-repeat;
  background-size: 100% 100%;
}
.booking-omni-desc .hd {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 16rpx;
  position: relative;
}
.booking-omni-desc .hd .tit {
  width: 148rpx;
  height: 54rpx;
  object-fit: contain;
}
.booking-omni-desc .hd .tag {
  border: 2rpx solid #ffc899;
  border-radius: 4rpx;
  padding: 4rpx;
  line-height: 1;
  font-size: 20rpx;
  color: #ff7700;
}
.booking-omni-desc .hd .desc {
  font-size: 24rpx;
  color: #8b4a12;
}
.booking-omni-desc .hd .desc .ifont-triangle {
  font-size: 16rpx;
  margin-left: 4rpx;
}
.booking-omni-desc .bd {
  display: flex;
  align-items: center;
  gap: 14rpx;
  font-size: 24rpx;
  letter-spacing: -0.2rpx;
  color: #8b4a12;
  line-height: 30rpx;
}
.booking-omni-desc .bd .bd-item {
  display: flex;
  align-items: center;
  line-height: 1;
}
.booking-omni-desc .bd .bd-item .item-icon {
  width: 24rpx;
  height: 24rpx;
  object-fit: contain;
  margin-right: 6rpx;
}

.sel-detail .seat-line {
  background-color: #eaedf2;
  height: 1rpx;
  margin: 28rpx 0;
}

.sel-detail .seat-line-two {
  margin: 32rpx 0 28rpx 0;
}

.sel-detail .blue {
  color: #0086f6;
}

.sel-detail scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.seat-item-top {
  background: #e3e7ed;
  border-radius: 3px 3px 3px 3px;
  height: 19px;
  width: 42px;
}

.seat-item-bom {
  height: 10px;
  width: 72px;
  margin-top: 8px;
}

.seat-img-doudi {
  background: #e3e7ed;
  border-radius: 3px 3px 3px 3px;
  height: 22px;
  width: 22px;
  margin-right: 10px;
}

.skeleton-breath {
  animation: breathing 2s infinite;
}

.booking-info-title .ifont-qus {
  color: #333;
  font-size: 12px;
  margin: 0 7px 0 3px;
}

.train-combi-remark {
  display: flex;
  flex-direction: row;
  background-image: url('https://images3.c-ctrip.com/train/2023-3/xiaochengxu/3.23/zhihuixilie/img-bg.png');
  margin-top: 16rpx;
  height: 42rpx;
  width: 100%;
  font-size: 24rpx;
  align-items: flex-end;
  background-size: cover;
  position: relative;
  z-index: 1;
}
.train-combi-remark-left {
  position: absolute;
  left: 0;
  top: 16rpx;
}
.train-combi-remark .first-triangle {
  left: 220rpx;
}
.train-combi-remark .second-triangle {
  left: 370rpx;
}
.train-combi-remark .detail-img {
  position: absolute;
  width: 40rpx;
  height: 54rpx;
  right: 98rpx;
  top: 6rpx;
}
.train-combi-remark .detail {
  justify-content: flex-end;
  flex: 1;
  display: flex;
  align-items: center;
  position: absolute;
  right: -30rpx;
  top: 0rpx;
  padding: 16rpx 30rpx; /* 添加边距，增加可点击范围 */
}
.train-combi-remark .detail .detail-triangle {
  margin-left: 6rpx;
  width: 16rpx;
  height: 10rpx;
}

.x-page-combi .journey-line {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 40rpx;
  justify-content: space-between;
  position: relative;
  z-index: 100;
}

.journey-line .journey {
  background: #ffffff;
  border: 2rpx solid #ccd6e5;
  border-radius: 18rpx;
  padding: 4rpx 14rpx;
  font-size: 22rpx;
  color: #333;
  line-height: 28rpx;
}
.journey-line .journey-two {
  background: #e2e9f2;
  font-weight: 500;
  border: 0;
}
.journey-line .journey-circle {
  width: 12rpx;
  height: 12rpx;
  border-radius: 100%;
  background: #aabbd3;
  position: absolute;
}
.journey-line .journey-circle-one {
  left: 0;
}
.journey-line .journey-circle-two {
  right: 0;
}
.journey-line .journey-btm-line {
  width: 100%;
  height: 4rpx;
  background: #aabbd3;
  position: absolute;
  left: 0;
  z-index: -1;
}
.combi-box {
  margin-top: 20rpx;
}
.x-page-combi {
  flex: 1;
}
.x-page-combi .combi-info-time {
  display: flex;
  flex-direction: row;
  color: #111111;
  justify-content: space-between;
}
.x-page-combi .station-info {
  font-size: 24rpx;
  line-height: 30rpx;
}
.combi-info-time .middle-time {
  color: #999;
}
.combi-detail {
  width: 94rpx;
}
.combi-detail .btn {
  margin-left: 30rpx;
  width: 48rpx;
  height: 48rpx;
  background-size: 100% 100%;
  background-image: url(https://images3.c-ctrip.com/train/2023-3/xiaochengxu/3.23/zhihuixilie/img-gd.png);
}
.combi-detail .ifont-arr {
  font-size: 20rpx;
  color: #8697b0;
}
.torage-left {
  margin-left: 6rpx;
}
.sel-info {
  position: relative;
  z-index: 2;
}
.sel-info .triangle {
  position: absolute;
  width: 22rpx;
  height: 12rpx;
  left: 50rpx;
  top: 32rpx;
}
.journey-line .detail-icon {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  margin-top: -2px;
}
@keyframes breathing {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}
