.bupiao-box{background: #fff;padding:28rpx 30rpx 40rpx;position: relative;}
.bupiao-box::after{left:30rpx;right:30rpx;bottom:0;height:1px;border-style: solid;border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;border-width: 0 0 1px 0;position: absolute;content: "";}
.bupiao-box:last-child::after{display: none;}
.bupiao-box .tit{font-size: 36rpx;position: relative}
.bupiao-box .tit text{font-size: 30rpx;margin-left: 30rpx;}
.bupiao-box-list{overflow: hidden;border-style: solid;border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;border-width: 0 0 1px 0;padding-bottom: 40rpx;}
.bupiao-box-list:last-child{border-bottom: 0;padding: 0}
.bupiao-box-bd{display: flex;width: 76%;float: left;margin-top: 40rpx;overflow: hidden;}
.bupiao-box-bd .item{flex:1;text-align: center;position: relative;}
.bupiao-box-bd .item::before{width: 16rpx;height: 16rpx;border:4rpx solid #4BB4F0;box-sizing: border-box;background: #fff;position: absolute;content: "";border-radius: 16rpx;top:50%;left:50%;margin: -8rpx 0 0 -8rpx;z-index: 5;}
.bupiao-box-bd .item::after{width: 100%;height: 4rpx;background: #4BB4F0;position: absolute;content: "";top:50%;margin-top: -2rpx;right: 50%;z-index: 2}
.bupiao-box-bd .item.bu::after{height: 1px;background: #fff;border-top:4rpx dashed #BAE4F6;}
.bupiao-box-bd .item:first-child{text-align: left;}
.bupiao-box-bd .item:first-child::before{left: 0;margin: -8rpx 0 0 0;}
.bupiao-box-bd .item:first-child::after{right: 0;}
.bupiao-box-bd .item:last-child{text-align: right;}
.bupiao-box-bd .item:last-child::before{left: auto;right: 0;margin: -8rpx 0 0 0;}
.bupiao-box-bd .item:last-child::after{width: 150%;z-index: 1;right:0;}
.bupiao-box-bd .item .time{font-size: 30rpx;}
.bupiao-box-bd .item .station{font-size: 26rpx;margin-top: 54rpx;color: #333;}
.bupiao-box-bd .item .station.station--notime{margin-top: 86rpx;}
.bupiao-box-bd .item .info{width: 100rpx;height: 32rpx;position: absolute;border:3rpx solid #4BB4F0;background:#fff;top:50%;box-sizing: border-box;border-radius: 32rpx;margin-top: -16rpx;font-size: 22rpx;text-align: center;color: #19a0f0;z-index: 10;line-height: 28rpx;}
.bupiao-box-bd .item:first-child .info{right: -25rpx;}
.bupiao-box-bd .item:last-child .info{left: -25rpx}

.bupiao-box-list .train-price{width: 24%;float:right;text-align: right;margin-top: 40rpx;}
.bupiao-box-list .train-price dfn{color: #FF6913;font-size: 24rpx;}
.bupiao-box-list .train-price .strong{font-size: 38rpx;color: #FF6913;}
.bupiao-box-list .train-price .small{font-size: 26rpx;color: #FF6913;}
.bupiao-box-list .train-price .em{font-size: 24rpx;color: #999;font-weight: lighter;}
.bupiao-box-list .bupiao-tick{width: 76%;float:left;display: flex;margin-top: 24rpx;}
.bupiao-box-list .bupiao-tick .item{flex: 1;text-align: center;font-size: 22rpx;color: #999;}
.bupiao-box-list .bupiao-tick .item:first-child{text-align: left}
.bupiao-box-list .bupiao-tick .item:last-child{text-align: right}
