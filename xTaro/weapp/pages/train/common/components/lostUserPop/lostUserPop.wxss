.pop-lost-sec {
    background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/6yue/liushi/hb-di2.png)no-repeat;
    background-size: cover;
    height: 750rpx;
    width: 644rpx;
    position: fixed;
    top: 43%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 998;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.pop-lost-sec .ifont-closed {
    position: absolute;
    bottom: -270rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 64rpx;
    color: #fff;
}

.pop-lost-sec .title {
    display: flex;
    align-items: center;
    margin-bottom: 22rpx;
    margin-top: 4rpx;
}

.pop-lost-sec .title text {
    color: #ff5210;
    font-size: 36rpx;
    font-family: AlibabaPuHuiTi-Medium;
    font-weight: 500;
    padding-right: 8rpx;
}

.pop-lost-sec .subtitle {
    color: #ff8a5d;
    font-size: 24rpx;
    font-family: AlibabaPuHuiTi-Medium;
    font-weight: 500;
    margin-bottom: 16rpx;
}
.pop-lost-sec .hidden {
    visibility: hidden;
}

.pop-lost-sec .pop-botm {
    background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/6yue/liushi/hb-qian.png)no-repeat;
    width: 100%;
    height: 348rpx;
    background-size: cover;
    position: absolute;
    bottom: -138rpx;
}

.pop-lost-sec .pop-botm button {
    background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/6yue/liushi/button@3x.png)no-repeat;
    width: 100%;
    height: 302rpx;
    background-size: contain;
    position: absolute;
    top: 63%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #a72f18;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    text-shadow: 0px 5px 6px 0px rgba(141, 63, 17, 0.17);
    padding-top: 72rpx;
}

.pop-lost-sec .pop-botm .tips {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 42rpx;
    left: 50%;
    color: rgba(255, 255, 255, .7);
    font-size: 24rpx;
    transform: translate(-50%, 0);
}

.pop-lost-sec .coupon-container {
    margin-bottom: 8rpx;
    background: url(https://images3.c-ctrip.com/train/2023-3/zengzhang/6yue/liushi/quan-da.png)no-repeat;
    background-size: contain;
    width: 532rpx;

    height: 150rpx;
    margin-bottom: 8rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.pop-lost-sec .coupon-list {
    height: 600rpx;
    overflow-y: auto;
    padding-bottom: 150rpx;
}

.pop-lost-sec .coupon-container .receive-tag {
    padding: 2rpx 20rpx;
    color: #ffffff;
    font-size: 20rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    background: #ff8a3c;
    border-radius: 0px 20rpx 0px 20rpx;
    top: 0;
    right: 0;
    position: absolute;

}

.pop-lost-sec .coupon-container .coupon-left .tag {
    position: absolute;
    color: #ffffff;
    font-size: 18rpx;
    font-family: AlibabaPuHuiTi_2_65_Medium;
    font-weight: 500;
    background: #ffaf76;
    border-radius: 12rpx 0px 12rpx 0px;
    padding: 2rpx 8rpx;
    right: 6rpx;
    /* top: 13rpx; */
    top: 8rpx;
}

.pop-lost-sec .coupon-container .coupon-left {
    width: 32%;
    color: #ff5210;
    font-size: 24rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    display: inline-flex;
    align-items: baseline;
    justify-content: center;
    position: relative;
}

.pop-lost-sec .coupon-container .coupon-left .num {

    font-size: 60rpx;
}

.pop-lost-sec .coupon-container .coupon-right {
    padding-left: 32rpx;
}

.pop-lost-sec .coupon-container .coupon-right .coupon-title {
    color: #ff5210;
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
}

.pop-lost-sec .coupon-container .coupon-right .coupon-desc {
    color: #ff6600;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: normal;
}

.coin-decoration {
    position: fixed;
    top: 19%;
    z-index: 2000;
    pointer-events: none;
}

.backmask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .8);
    z-index: 960;
    visibility: hidden;
    opacity: 0;
    transition: all .5s;
}

.backmask.active {
    visibility: visible;
    opacity: 1
}

.pop-lost-sec .assist-info {
    width: 300px;
    top: -20px;
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transform: translateY(-100%);
}

.pop-lost-sec .assist-info image {
    height: 26px !important;
    margin-bottom: 4px;
}

.pop-lost-sec .assist-info text {
    color: #cccccc;
    font-size: 14px;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    letter-spacing: -0.09px;
    line-height: 20px;
}