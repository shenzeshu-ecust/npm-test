@import '../../pop-box.wxss';
@import '../../iconfont.wxss';
@import '../../numberFont.wxss';
@import '../thenByTicket/thenByTicket.wxss';

.combi-pop-btm {
  background: linear-gradient(
    -180deg,
    rgb(245, 245, 245) 35.48%,
    rgb(255, 255, 255) 59.15%
  );
}
.combi-pop-botm-hd {
  line-height: normal;
  height: auto;
  padding-top: 32rpx;
  align-items: unset;
}
.combi-pop-botm-hd .tit {
  line-height: 42rpx;
  margin-bottom: 16rpx;
}
.combi-pop-botm-hd .btn-submit {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #999;
}
.combi-pop-btm .hd-pop-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.combi-pop-btm .hd-pop-center .center-box {
  background: #fff;
  border: 2rpx solid #bfe0fc;
  border-radius: 12rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  transform: scale(0.5);
  margin: -16rpx 0;
}
.combi-pop-btm .hd-pop-center .center-box .img {
  width: 148rpx;
  height: 64rpx;
}
.combi-pop-btm .hd-pop-center .center-box .txt {
  margin-left: 24rpx;
  color: #192964;
  font-size: 48rpx;
  margin-right: 16rpx;
  line-height: 64rpx;
}
.combi-pop-btm .pop-botm-bd {
  margin-top: 26rpx;
  padding: 0 16rpx;
}
.combi-pop-btm .pop-botm-bd .combi-info-box {
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
}
/* .combi-info-box .grey {
  color: #8f9fb5;
} */
.combi-info-box .combi-info-tit {
  color: #111111;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 36rpx;
  margin-bottom: 24rpx;
}
.combi-info-box .combi-info-time {
  display: flex;
  flex-direction: row;
  color: #111111;
  font-size: 38rpx;
  font-weight: 600;
  line-height: 48rpx;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.combi-info-box .combi-info-day {
  margin-bottom: 6rpx;
  line-height: 22rpx;
  font-size: 22rpx;
  font-weight: 400;
}
.combi-info-day .hide {
  opacity: 0;
}
.combi-info-time .middle-time {
  color: #8f9fb5;
  font-weight: 400;
}
.combi-info-box .journey-line {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 52rpx;
  justify-content: space-between;
  position: relative;
  z-index: 100;
}

.journey-line .journey {
  background: #ffffff;
  border: 2rpx solid #ccd6e5;
  border-radius: 40rpx;
  padding: 0rpx 16rpx;
  font-size: 24rpx;
  color: #111;
  height: 40rpx;
  line-height: 40rpx;
}
.journey-line .journey-two {
  background: #e2e9f2;
  font-weight: 600;
  border: 0rpx;
}
.journey-line .journey-circle {
  width: 12rpx;
  height: 12rpx;
  border-radius: 100%;
  background: #aabbd3;
  position: absolute;
}
.journey-line .journey-circle-one {
  left: 0;
}
.journey-line .journey-circle-two {
  right: 0;
}

.combi-info-box .station-info {
  font-size: 28rpx;
  line-height: 36rpx;
  margin-bottom: 24rpx;
}
.journey-line .journey-btm-line {
  width: 100%;
  height: 4rpx;
  background: #aabbd3;
  position: absolute;
  left: 0;
  z-index: -1;
}
.combi-info-box .then-by-remark .remark-info {
  border-radius: 0;
}
.combi-info-box .remark-info-box {
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  background-color: #f6f8fa;
}

.combi-info-box .remark-info-box .remark-left {
  flex: 1;
}
.combi-info-box .remark-info-box .remark-right {
  width: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left: 1rpx solid #e0e2e4;
  margin: 20rpx 0;
  padding: 24rpx;
  font-size: 26rpx;
  color: #5477a8;
  text-align: center;
}
.combi-info-box .remark-info-box .remark-right text:active {
  opacity: 0.7;
}
.combi-info-box .remark-info {
  background: #f6f8fa;
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  border-radius: 12rpx;
  align-items: center;
}
.combi-info-box .remark-info.then-by {
  padding-top: 0;
  padding-bottom: 12rpx;
}
.combi-info-box .then-by.remark-info:first-child {
  padding-top: 24rpx;
}
.combi-info-box .then-by.remark-info:last-child {
  padding-bottom: 24rpx;
}
.combi-info-box .remark-info .remark-circle {
  margin-right: 12rpx;
  width: 6rpx;
  height: 6rpx;
  background: #89a0c2;
  border-radius: 100%;
  left: 0;
}
.combi-info-box .remark-info .remark-tip {
  font-size: 26rpx;
  padding-left: 18rpx;
  position: relative;
}
.combi-info-box .remark-info .remark-tip::before {
  content: '';
  position: absolute;
  left: 0;
  top: 15rpx;
  width: 6rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #89a0c2;
}
.combi-pop-btm .pay-box {
  padding: 16rpx 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.combi-pop-btm .pay-box .price {
  color: #0086f6;
  font-size: 44rpx;
  flex: 1;
  display: flex;
  align-items: center;
}
.combi-pop-btm .pay-box .fuhao {
  font-size: 30rpx;
  margin-right: 6rpx;
}
.combi-pop-btm .pay-box .info {
  font-size: 24rpx;
  margin-left: 12rpx;
  padding-top: 2rpx;
}
.combi-pop-btm .pay-box .pay-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 224rpx;
  height: 88rpx;
  background: linear-gradient(
    90deg,
    rgb(255, 165, 10) 0%,
    rgb(255, 119, 0) 100%
  );
  border-radius: 12rpx;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
}
