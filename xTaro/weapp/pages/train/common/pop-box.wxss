.backmask {
  transition: all 300ms ease-in-out;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  background-color: rgba(0, 0, 0, 0);
}
.backmask.active {
  z-index: 960;
  background-color: rgba(0, 0, 0, 0.7);
}
.backmask.bargainRule.active {
  z-index: 1001;
}
.backmask.pay-detail-bd {
  bottom: calc(154rpx + env(safe-area-inset-bottom));
}
.pop-botm {
  position: fixed;
  left: 0;
  top: auto;
  right: 0;
  bottom: 0;
  z-index: 1000;
  transition: all ease-in-out 300ms;
  transform: translate3d(0, 200%, 0);
  background: #fff;
  border-radius: 16px 16px 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.pop-botm.cancelrob {
  z-index: 3002;
}
.pop-botm.active {
  transform: translate3d(0, 0, 0);
}
.pop-botm-hd {
  height: 104rpx;
  display: flex;
  align-items: center;
  line-height: 104rpx;
}
.pop-botm-hd .btn-cancel,
.pop-botm-hd .btn-submit {
  width: 120rpx;
  text-align: center;
  font-size: 30rpx;
}
.pop-botm-hd .lbox,
.pop-botm-hd .rbox {
  width: 120rpx;
  text-align: center;
}
.pop-botm-hd .btn-cancel {
  color: #999;
}
.pop-botm-hd .btn-submit {
  color: #0086F6;
  font-weight: 600;
}
.pop-botm-hd .tit {
  flex: 1;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}
.pop-botm-hd .tit.tleft {
  margin-left: 32rpx;
  text-align: left;
}
.pop-botm-hd .btn-closed {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  border: 3rpx solid #ccc;
  margin-right: 32rpx;
  position: relative;
}
.pop-botm-hd .btn-closed::before,
.pop-botm-hd .btn-closed::after {
  width: 24rpx;
  height: 4rpx;
  position: absolute;
  content: "";
  left: 50%;
  top: 50%;
  background: #999;
  margin: -2rpx 0 0 -12rpx;
}
.pop-botm-hd .btn-closed::before {
  transform: rotate(45deg);
}
.pop-botm-hd .btn-closed::after {
  transform: rotate(-45deg);
}
.pop-botm-hd .ifont-closed-line {
  font-style: 28rpx;
  color: #666;
}
