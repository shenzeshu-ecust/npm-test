.tip-txt {background: #fff;position: fixed;top: 0;right: 0;bottom: 0;left: 0;z-index: -1;padding: 30rpx;overflow-y: auto;color: #dbdbdb;opacity: 0;transition: all 0.3s ease-in-out;}
.tip-txt.active {z-index: 99999;opacity: 1;}
.tip-txt .txt-blue { margin-top: 30rpx;color: #0086F6;font-weight: bold;padding: 0.5em 0;}
.tip-txt .p {color:#000;padding: 0.5em 0;}
.tip-txt .s {color:#666666;font-size: 28rpx;}

.pop-zhongzhuan{padding:24rpx 30rpx 30rpx;}
.pop-zhongzhuan .intro{font-size: 22rpx;margin-bottom: 30rpx;}
.pop-zhongzhuan .intro .haoshi{color:#999;float:right;position: relative;}
.pop-zhongzhuan .intro .haoshi::before{width: 22rpx;height: 22rpx;position: absolute;content: "";border:1px solid #ccc;border-radius: 22rpx;box-sizing: border-box;left: -30rpx;top:50%;margin-top: -11rpx;}
.pop-zhongzhuan .intro .haoshi::after{width: 5rpx;height: 5rpx;position: absolute;content: "";border-left: 1px solid #ccc;border-bottom: 1px solid #ccc;bottom: 50%;left: -20rpx;}
.pop-zhongzhuan-bd .info{font-size: 24rpx;color:#666}
.pop-zhongzhuan-bd .info .num{width: 32rpx;height: 32rpx;display: inline-block;vertical-align: middle;background: #0086F6;color: #fff;line-height: 32rpx;font-size:24rpx;text-align: center;border-radius: 4rpx;margin:-4rpx 38rpx 0 0;}
.pop-zhongzhuan-bd .cont{margin: 10rpx 70rpx;display: flex;text-align: center;}
.pop-zhongzhuan-bd .from,.pop-zhongzhuan-bd .to{width: 120rpx;}
.pop-zhongzhuan-bd .time{font-size: 44rpx;}
.pop-zhongzhuan-bd .station{font-size: 30rpx;}
.pop-zhongzhuan-bd .haoshi{flex: 1;margin: 0 32rpx;position: relative}
.pop-zhongzhuan-bd .haoshi::before{width: 100%;height: 2rpx;background: #CBCBCB;position: absolute;top:22rpx;left: 0;content: "";}
.pop-zhongzhuan-bd .haoshi::after{width: 8rpx;height: 2rpx;background: #CBCBCB;position: absolute;content: "";transform: rotate(45deg);right: 0;top:18rpx;}
.pop-zhongzhuan-bd .haoshi text{position: relative;z-index: 2;background: #fff;font-size: 22rpx;color: #ccc;padding: 0 10rpx;}
.pop-zhongzhuan-info{margin: 40rpx 0;font-size: 22rpx;color: #0086F6;text-align: center;}
/* todo 优化 所有 pop-mid 中蒙层 z-index */
.pop-mid--zhongzhuan .backmask {
    z-index: 0;
}
.pop-zhongzhuan .small {font-size: 20rpx;right:-30rpx;font-weight: normal;}
