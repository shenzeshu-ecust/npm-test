    right: 0;
    z-index: 3000;
    background-color: rgba(0, 0, 0, 0.5);
}

.coupon-order-modal {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 3002;
    width: 100%;
    height: 100%;
    display: table
}

.coupon-order-modal .coupon-order-box {
    vertical-align: middle;
    display: table-cell;
}
.coupon-order-modal .coupon-box-img {
    background: url(https://images3.c-ctrip.com/train/2021/app/V8.44/jiaocha/xiaochengxujiaru_faquanzhitiaorukou/pop_toutu_jiaocha.png) no-repeat;
    background-size: 100% 100%;
    position: relative;
    width: 588rpx;
    height: 276rpx;
    margin: 0 auto;
}
.coupon-order-modal .coupon-box-piaodai {
    background: url(https://images3.c-ctrip.com/train/2021/app/V8.44/jiaocha/xiaochengxujiaru_faquanzhitiaorukou/pop_piaodai.png) no-repeat;
    background-size: 100% 100%;
    position: absolute;
    height: 220rpx;
    width: 108rpx;
    right: -30rpx;
    top: 52rpx;
}
.coupon-order-modal .coupon-order-img {
    width: 588rpx;
    max-height: 568rpx;
    overflow: auto;
    background-color: #ff3333;
    margin: 0 auto;
    padding: 0 20rpx 20rpx;
    position: relative;
    box-sizing: border-box;
}

.coupon-order-modal .coupon-order-btn {
    width: 588rpx;
    height: 156rpx;
    line-height: 92rpx;
    text-align: center;
    position: relative;
    bottom: 0rpx;
    font-size: 36rpx;
    font-weight: 600;
    left: 50%;
    transform: translateX(-50%);
    background: url(https://images3.c-ctrip.com/train/2021/app/V8.44/jiaocha/xiaochengxujiaru_faquanzhitiaorukou/pop_bt_kxsx.png) no-repeat;
    background-size: 100% 100%;
}

.coupon-order-modal .ifont-closed {
    position: absolute;
    bottom: -88rpx;
    font-size: 64rpx;
    color: #fff;
    left: 50%;
    transform: translateX(-50%);
}

.coupon-order-modal .coupon-bd {
    position: relative;
    overflow: hidden;
    border-radius: 16rpx;
    box-sizing: border-box;
    text-align: center;
    display: flex;
    background:url(https://images3.c-ctrip.com/train/2021/app/V8.44/jiaocha/xiaochengxujiaru_faquanzhitiaorukou/coupon_bg_normal.png) no-repeat;
    background-size: 100% 100%;
    margin-bottom: 8rpx;
}
.coupon-order-modal .coupon-bd-special {
    background:url(https://images3.c-ctrip.com/train/2021/app/V8.44/jiaocha/xiaochengxujiaru_faquanzhitiaorukou/coupon_bg_special.png) no-repeat;
    background-size: 100% 100%;
}
.coupon-order-modal .coupon-left {
    box-sizing: border-box;
    padding: 40rpx 0;
    width: 150rpx;
    height: 180rpx;
}

.coupon-order-modal  .coupon-left-txt {
    color: rgb(255, 255, 255);
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    line-height: 24rpx;
    margin-bottom: 14rpx;
}

.coupon-order-modal  .coupon-left-price {
    color: #b54920;
    font-size: 64rpx;
    font-weight: 500;
    line-height: 90rpx;
}
.coupon-order-modal  .coupon-left-long-price {
    color: #b54920;
    font-size: 44rpx;
    font-weight: 500;
    line-height: 90rpx;
}
.coupon-order-modal .coupon-left-price text {
    font-size: 28rpx;
    line-height: 32rpx;
}

.coupon-order-modal  .coupon-right {
    padding: 32rpx 24rpx 18rpx 24rpx;
    flex: 1;
    box-sizing: border-box;
    text-align: left;
    display: flex;
}

.coupon-order-modal  .coupon-right .txts-title {
    color: #333333;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 38rpx;
    padding-bottom: 10rpx;
}

.coupon-order-modal .coupon-right .txts-date {
    color: #666666;
    font-size: 26rpx;
    line-height: 32rpx;
    padding-bottom: 26rpx;
}
.coupon-order-modal .coupon-special .txts-title{
    color: #b54920;
}
.coupon-order-modal .coupon-special .txts-date{
    color: #b54920;
}
.coupon-order-modal .coupon-info {
    padding: 34rpx 36rpx 36rpx;
    font-size: 24rpx;
    line-height: 30rpx;
    color: rgb(102,102,102);
}
.coupon-order-modal .coupon-box.disabled .coupon-left{
  background: linear-gradient(-45.67deg, rgb(208, 208, 208) 0%, rgb(210, 210, 210) 100%);
}

.coupon-order-modal .coupon-btn{  
    background: linear-gradient(0deg, rgb(255, 195, 121) 0%, rgb(255, 226, 192) 100%);
    border-radius: 29rpx 29rpx 29rpx 29rpx;
    height: 116rpx;
    width: 58rpx;}
.coupon-order-modal  .coupon-used {
    color: #a85e3f;
    font-size: 24rpx;
    font-weight: 600;
    height: 84rpx;
    line-height: 28rpx;
    width: 58rpx;
    writing-mode: vertical-lr;
    text-align: center;
    /* margin: 0 auto; */
    padding: 14rpx 15rpx;
   }
.coupon-btn-special{
    background: #d55d30 !important;
   }
   .coupon-btn-special .coupon-used{
    color: #ffe5c3;
   }
.coupon-tag {
    background:url(https://images3.c-ctrip.com/train/2021/app/V8.44/jiaocha/xiaochengxujiaru_faquanzhitiaorukou/tag-highest.png) no-repeat;
    background-size: 100% 100%;
    font-size: 20rpx;color: #fff;position: absolute;line-height: 30rpx;top:0;margin: 1px 10rpx 0 0;width: 64rpx;}
