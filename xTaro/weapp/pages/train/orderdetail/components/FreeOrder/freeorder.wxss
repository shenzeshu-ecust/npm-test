.free-backmask {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 3000;
    background-color: rgba(0, 0, 0, 0.5);
}

.free-order-modal {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 3002;
    width: 100%;
    height: 100%;
    display: table
}

.free-order-box {
    vertical-align: middle;
    display: table-cell;
}

.free-order-img {
    width: 588rpx;
    height: 794rpx;
    background: url(https://images3.c-ctrip.com/train/2021/xiaochengxu/V8.39.6/gzh_popover@3x.png) no-repeat;
    background-size: 100% 100%;
    margin: 0 auto;
    padding: 0;
    position: relative;
    top: -90rpx;
}

.free-order-img .free-order-title {
    font-family: "PingFangSC-Medium";
    position: absolute;
    top: 128rpx;
    font-size: 32rpx;
    color: #fff;
    left: 50%;
    transform: translateX(-50%);
    line-height: 44rpx;
    width: 288rpx;
    text-align: center;
}

.free-order-img .free-order-btn {
    width: 472rpx;
    line-height: 92rpx;
    text-align: center;
    position: absolute;
    bottom: 82rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: #924000;
    left: 50%;
    transform: translateX(-50%);
    font-family: "PingFangSC-Semibold";
}

.free-order-img .ifont-closed {
    position: absolute;
    bottom: -140rpx;
    font-size: 64rpx;
    color: #fff;
    left: 50%;
    transform: translateX(-50%);
}

/* .free-icon-modal{
