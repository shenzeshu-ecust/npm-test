/* pages/train/testpage/testpage.wxss */
@import "../../common/iconfont.wxss";
page {
    width: calc(100% - 20rpx*2);
    margin: 20rpx;
    background-color: #eee;
    padding-bottom: calc(env(safe-area-inset-bottom) + 10rpx);
}

.page_title {
    margin-top: env(safe-area-inset-top);
    font-size: 48rpx;
    display: flex;
    justify-content: space-around;
    height: 120rpx;
    align-items: center;
}

.ifont-back{
    position: absolute;
    left: 0;
    padding: 20rpx
}

.block{
    background: #fff;
    border-radius: 24rpx;
    padding: 15rpx;
    margin-bottom: 20rpx;
}


.frow {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 0;
}

.frow text {
    max-width: 90%;
    overflow: hidden;
    word-wrap: break-word;
}

button {
    width: 100%;
    line-height: 2;
}
button::after, button::before {
    display: none;
}

.hd {
    font-size: 36rpx;
    margin-bottom: 20rpx;
}

.url-input{
    position: relative;
    height: 88rpx;
    border-bottom: #0086F6 1rpx solid;
}

.scan-code{
    position: absolute;
    right: 0;
    bottom: 0;
    line-height: 88rpx;
    text-align: center;
    height: 88rpx;
    width: 88rpx;
    color: #0086F6;
}

.url-record {
    max-height: 140rpx;
    transition: all 0.5s ease-in-out;
    overflow: hidden;
}

.url-record.open{
    max-height: 1000rpx;
}

.url-item{
   
    border-bottom: 1rpx #ddd solid;
    overflow: scroll;
}

.url-item::-webkit-scrollbar {
    display: none;
}
  
.url{
    padding: 20rpx 0;
    white-space: nowrap;
}

.store-res{
    word-break: break-word;
    margin-bottom: 20rpx;
}

.store-input{
    border: #0086F6 1rpx solid;
    border-radius: 12rpx;
    height: 88rpx;
    padding: 0 10rpx;
    margin-bottom: 10rpx;
}
.store-textarea{
    width: 100%;
}

.store-common{
    overflow-x: scroll;
    overflow-y: hidden;
    font-size: 0;
    margin-bottom: 20rpx;
}

.store-common text{
    font-size: 18rpx;
    color:#0086F6;
    margin-right: 20rpx;
    padding: 15rpx 0;
}


.store-common::-webkit-scrollbar {
    display: none;
}