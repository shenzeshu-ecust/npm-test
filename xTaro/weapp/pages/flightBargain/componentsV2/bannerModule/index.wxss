.banner {
  height: 400rpx;
  position: relative;
}
.banner-icon {
  position: absolute;
  left: 300rpx;
  top: 100rpx;
  width: 50rpx;
  height: 50rpx;
}
.slogan {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx auto 0;
}
.slogan-img {
  height: 224rpx;
}
.countdown {
  width: 416rpx;
  height: 76rpx;
  /* margin: -16rpx auto 0; */
  position: absolute;
  left: 32rpx;
  bottom: -12rpx;
  text-align: center;
  border-radius: 24rpx;
  background-image: url('https://pic.c-ctrip.com/pic/AssetCatalog/wx/bargainActivity/timer_bg.png');
  background-size: cover;

}
.countdownText {
  color: #f75454;
  font-size: 24rpx;
  line-height: 60rpx;
  font-weight: 400;
}
.boldText {
  margin: 0 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  vertical-align: -2rpx;
}
.firstBoldText {
  margin-left: 0;
}