}

.counpon-bg {
    position: absolute;
    z-index: -1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.coupon {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 686rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background-color: transparent;
  box-shadow: 0 6rpx 16rpx 2rpx rgba(211, 0, 0, .24);
}
.coupon-price {
  height: 140rpx;
  width: 193rpx;
  margin-left: 13rpx;
  display: flex;
  flex-direction: column;
  background-color: transparent;
}
.coupon-info {
  height: 140rpx;
  width: 416rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.basic-text {
  color: #FF6600;
  font-size: 24rpx;
  line-height: 30rpx;
  font-weight: 300;
  margin-top: 24rpx;
}
.coupon-price .price {
    color: #FF6600;
    font-size: 56rpx;
    font-weight: 500;
  }
.coupon-price .dfn {
    font-size: 40rpx;
    line-height: 48rpx;
    color: #FF6600;
    font-weight: normal;
}
.coupon-status {
    position: absolute;
    top: 46rpx;
    right: 16rpx;
    height: 48rpx;
    width: 116rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2rpx solid #cccccc;
    border-radius: 25rpx 25rpx 25rpx 25rpx;
    z-index: 5;
}
.status-button {
  position: relative;
  padding: 0;
  background-color: transparent;
  color: #cccccc;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  font-weight: 500;
}
.gouse-status{
  position: absolute;
  top: 46rpx;
  right: 16rpx;
  height: 48rpx;
  width: 116rpx;
  border-radius: 25rpx 25rpx 25rpx 25rpx;
  z-index: 5;
}
.gouse-button{
  position: relative;
  padding: 0;
  width: 100%;
  height: 100%;
  border-radius: 25rpx 25rpx 25rpx 25rpx;
  background: linear-gradient(0deg, rgb(255, 52, 52) 0%, rgb(255, 161, 161) 100%);
  color: #ffffff;
  display: flex;  
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}
.validity {
    font-size: 24rpx;
    margin-top: 8rpx;
    color: #999;
    font-weight: 300;
}

.coupon-info .title {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 38rpx;
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
}
.coupon-info .title-text {
    max-width: 250rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.coupon-info .title-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.icon-info {
    margin-left: 8rpx;
    width: 28rpx;
    height: 28rpx;
}
.goto-use {
    background-image: linear-gradient(90deg, #FFA50A, #FF7700);
    line-height: 48rpx;
    font-weight: 500;
    font-size: 24rpx;
    color: #fff;
    border-radius: 25rpx;
    width: 116rpx;
    height: 48rpx;
}
.showMore {
    display: flex;
    line-height: 38rpx;
    flex-direction: row;
    font-size: 30rpx;
    color: #fff;
    font-weight: 300;
    margin-top: 3rpx;
    margin-bottom: 10rpx;
}
.arrow {
    margin-left: 12rpx;
    margin-top: 10rpx;
    height: 12rpx;
    width: 12rpx;
    border: 1rpx solid #fff;
    border-width: 0 1rpx 1rpx 0;
    transform: rotate(45deg);
}


.modal {
  z-index: 99;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal .mask {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.7);
}
.modal-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 576rpx;
  background: #fff;
  border-radius: 16rpx;
}
.modal-title {
  padding: 40rpx 48rpx 30rpx;
  text-align: center;
  font-size: 40;
  color: #333;
  font-weight: 500;
  line-height: 48rpx;
}
.modal-detail-list {
  width: 100%;
  max-height: 500rpx;
}
.modal-list-item {
  padding: 0 48rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 300;
  line-height: 40rpx;
}
.modal-btn-box {
  padding: 48rpx;
}
.modal-btn {
  width: 480rpx;
  height: 72rpx;
  font-size: 30;
  font-weight: 300;
  color: #0086F6;
  line-height: 72rpx;
  background: transparent;
  border: 1px solid #0086F6;
  border-radius: 8rpx;
}
.modal-btn:after {
  border: none;
}
