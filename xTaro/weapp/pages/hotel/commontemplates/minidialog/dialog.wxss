@import "../../common/common.wxss";
.popbox-thead {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    background: #4289ff;
    border-radius: 16rpx 16rpx 0 0;
}
.popbox-thead .tit {
    font-size: 30rpx;
    font-weight: 500;
    line-height: 30rpx;
    color: #fff;
    padding: 25rpx;
}
.popbox-thead .close-icon {
    color: #fff;
    padding: 25rpx;
}
.popbox-tbody {
    width: 562rpx;
    max-height: 800rpx;
    background: #fff;
    padding: 20rpx 30rpx 30rpx 30rpx;
    border-radius: 0 0 16rpx 16rpx;
    text-align: justify;
    font-size: 28rpx;
}