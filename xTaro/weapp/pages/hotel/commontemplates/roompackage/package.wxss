/* 套餐菜单 */
.pac-menu {
    font-size: 24rpx;
    margin: 16rpx 24rpx 28rpx;
}
.pac-menu-border {
    border-radius: 8rpx;
    margin: 14rpx 23rpx 28rpx;
    border: 1rpx solid #ffdcbf;
}
.pac-menu-tit {
    display: flex;
    padding: 20rpx 24rpx;
    border-radius: 8rpx;
    background: url(https://pages.c-ctrip.com/hotels/wechat/img/suite-menu-title-bg.png);
    background-size: 100% 100%;
}
.pac-menu-tit .title {
    flex: 1;
    color: #d96500;
    font-weight: 500;
    font-family: PingFangSC-Medium;
}
.pac-menu-tit .fold-up {
    color: #555555;
}
.pac-menu-con {
    margin: 32rpx 20rpx;
}
.pac-menu-subtit {
    font-weight: 500;
    margin-bottom: 12rpx;
    font-family: PingFangSC-Medium;
}
.pac-menu-single {
    color: #555555;
    display: flex;
}
.pac-menu-single:before {
    content: '·';
    font-size: 36rpx;
    margin-right: 10rpx;
}
.pac-menu-single .menu-name {
    flex: 1;
    text-align: justify;
}
.x-item {
    color: #555555;
    font-family: "PingFang SC";
    font-size: 24rpx;
    font-weight: normal;
    padding-bottom: 12rpx;
}
.x-item .name {
    min-width: 120rpx;
}
.x-item .desc {
    display: inline-block;
    max-width: calc(100% - 120rpx);
}
.x-item .hide-height {
    height: 28rpx;
    overflow: hidden;
}
.x-item .base-more-fold {
    font-size: 24rpx;
    color: #555555;
    padding: 8rpx 0 32rpx;
    margin-top: 16rpx;
    text-align: center;
}
