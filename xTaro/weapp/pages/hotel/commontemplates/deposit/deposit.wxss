.deposit-policy-head{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f7fa;
  font-size: 24rpx;
  font-weight: 600;
  border-right: 1rpx solid #B8C6D9;
  font-family: PingFangSC-Medium;
  flex: 1;
  padding: 20rpx 0;
}

.deposit-policy-desc{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  border-right: 1rpx solid #B8C6D9;
  flex: 1;
  padding: 28rpx 0;
}
.deposit-head{
  display: flex;
}
.deposit-desc{
  display: flex;
  border-bottom: 1rpx solid #B8C6D9;
}
.deposit-policy-table{
  border: 1rpx solid #B8C6D9;
  border-radius: 12rpx;
  color: #111;
  margin-left: 48rpx;
  line-height: 1;
  margin-bottom: 43rpx;
}
.deposit-policy-table :last-child{
  border-bottom: none;
}

.deposit-head :first-child{
  border-top-left-radius: 12rpx;
}
.deposit-head :last-child{
  border-right: none;
  border-top-right-radius: 12rpx;
}
.deposit-desc :last-child{
  border-right: none;
}
.mb12{
  margin-bottom: 12rpx;
}
.mt16{
  margin-top: 16rpx;
}