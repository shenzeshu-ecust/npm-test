.travel-title {
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #111;
    font-weight: 500;
    margin-bottom: 24rpx;
    margin-top: 30rpx;
}
.travel-content {
    font-family: PingFangSC-Medium;
    display: flex;
    flex-wrap: wrap;  
}
.travel-item {
    padding: 16rpx 24rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
    flex-shrink: 0;
    font-size: 28rpx;
    color: #555;
}
.current {
    background: #ebf3ff;
    color: #0066f6;
    font-weight: 500;
}