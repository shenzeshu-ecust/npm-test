@import '../../../common/common.wxss';
/* 强制登录 */
.login-layer {
    background: #fff;
    width: 640rpx;
    border-radius: 8rpx;
    padding: 80rpx 10rpx;
    text-align: center;
}
.login-layer .text-title {
    font-size: 32rpx;
    color: #111111;
    font-weight: 500;
    line-height: 32rpx;
    padding: 20rpx 40rpx;
}
.login-layer .text-crude {
    font-size: 24rpx;
    color: #555555;
    font-weight: 500;
    line-height: 32rpx;
    padding: 20rpx 40rpx;
}
.login-layer .text-line {
    width: 500rpx;
    height: 2rpx;
    margin: 0 auto;
    margin-bottom: 30rpx;
    background-color: #111111;
}
.login-layer .agree-btn {
    margin-top: 40rpx;
    width: 500rpx;
    height: 82rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    line-height: 82rpx;
    font-weight: 500;
    background-image: linear-gradient(-134deg, #FFC649 0%, #FFA000 99%);
    box-shadow: 0 8rpx 16rpx 0 rgba(255,160,0,0.30);
}
