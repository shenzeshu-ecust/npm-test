@import "../../../common/common.wxss";
.process-bar {
    padding: 24rpx 32rpx 16rpx;
    color: #111111;
    font-size: 24rpx;
    background: #fff;
    box-shadow: 0 4rpx 6rpx 0 rgba(0, 0, 0, 0.06);
    border-radius: 0 0 24rpx 24rpx;
    position: sticky;
    top: 0;
    z-index: 9;
}
.pb-title {
    display: flex;
    align-items: center;
}
.pb-left {
    flex: 1;
}
.pb-left .desc {
    margin-right: 4rpx;
}
.high-light {
    color: #FF7700;
}
.pb-left .icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
    vertical-align: text-bottom;
}
.process-line {
    font-size: 0;
    margin-top: 23rpx;
    height: 10rpx;
    border-radius: 12rpx;
    background: #ebeff5;
    position: relative;
}
.process-line .dot {
    position: absolute;
    bottom: 0;
    width: 8rpx;
    height: 100%;
    background: #fff;
}
.process-img {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 50%;
    transform: translate(-50%, -50%);
}
.pl-highlight {
    height: 100%;
    display: inline-block;
    background: linear-gradient(-90deg, rgb(255, 102, 0) 0%, rgb(255, 153, 0) 100%);
}
