@import "../../../common/common.wxss";
.upload-img-show {
    margin-top: 24rpx;
}
.u-img-status {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    height: 147rpx;
    color: #fff;
    background: rgba(0,0,0,0.5);
    text-align: center;
    font-size: 24rpx;
    line-height: 147rpx;
}
.upload-img-show .u-img-thumbnail:nth-child(4n) {
    margin-right: 0;
}
.u-img-thumbnail {
    position: relative;
    width: 23.5%;
    margin-right: 2%;
    height: 147rpx;
    border-radius: 16rpx;
    overflow: hidden;
    display: inline-block;
}
.u-img-thumbnail .img {
    width: 100%;
    height: 100%;
}
.u-img-thumbnail .img-close {
    position: absolute;
    font-size: 12rpx;
    background: rgba(0,0,0,0.5);
    padding: 8rpx;
    border-radius: 0 0 0 8rpx;
    color: #fff;
    top: 0;
    right: 0;
}
.upload-img {
    margin-top: 24rpx;
    display: inline-block;
}
.u-img-icon {
    margin: 0 auto;
    display: block;
    width: 42rpx;
    height: 37rpx;
}
.u-img-desc {
    color: #888888;
    font-size: 22rpx;
    margin-top: 10rpx;
}