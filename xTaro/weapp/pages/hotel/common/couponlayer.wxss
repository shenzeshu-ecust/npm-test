/* 优惠券layer css */
.coupon-box {
  padding-bottom: 48rpx;
}
.coupon-box .z-index-10 {
    z-index: 10;
}
.coupon-box .mt-28 {
  margin-top: 28rpx;
}
.coupon-box .bottom-24 {
  position: absolute;
  bottom: 24rpx;
}
.coupon-box .mt-16 {
  margin-top: 16rpx;
}
.coupon-box .ht-64 {
  height: 64rpx;
}
.coupon-box .clamp2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.coupon-box .coupon .disabled .item .cp-price{
    background-image: linear-gradient(-45deg, #D0D0D0 0%, #D2D2D2 100%);
}
.coupon-box .coupon .disabled .item .midbox .tit{
    color: #888888;
}
.coupon-box .coupon .disabled .item .midbox .subtit{
    color: #888888;
}
.coupon-box .bg-icon {
  position: absolute;
  width: 160rpx;
  height: 90rpx;
  right: 0;
  bottom: 0;
}
.coupon-box .red-bg-icon {
  background-image: url(https://pages.c-ctrip.com/hotels/wechat/img/icons/red-bg-icon.png);
}
.coupon-box .gray-bg-icon {
  background-image: url(https://pages.c-ctrip.com/hotels/wechat/img/icons/gray-bg-icon.png);
}
.coupon-box .cp-price{
  position: relative;
}
.coupon-box .coupon-extra-remark .item {
    margin-bottom: 0;
    box-shadow: unset;
    border-radius: 16rpx 16rpx 0 0;
}
.coupon-box .coupon-extra-remark .get {
    padding: 7rpx 16rpx;
    width: unset;
}
.coupon-box .coupon-extra-remark .item {
  z-index: 5;
}
.coupon-box .coupon-extra-remark .extra-remark {
  color: #ff7700;
  font-size: 24rpx;
  padding: 16rpx 15rpx;
  background: linear-gradient(-180deg, rgb(255, 244, 235) 19.23%, rgb(255, 250, 245) 50%);
  border-radius: 0 0 16rpx 16rpx;
  margin-top: -4rpx;
}
.promotion-item {
  margin-bottom: 48rpx;
}
.promotion-item .pro-title {
  color: #111111;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 40rpx;
  margin-bottom: 24rpx;
}
.promotion-item .card {
  margin-bottom: 16rpx;
  overflow: hidden;
  background: #ffffff;
  border-radius: 16rpx;
}
.promotion-item .item {
  border-radius: 16rpx;
  background: #ffffff;
}
.promotion-item .item .cp-price .bold {
  font-size: 64rpx;
  font-weight: 500;
}
.promotion-item .item .cp-price .discont {
  margin-left: 10rpx;
  font-size: 28rpx;
}
.promotion-item .item .midbox {
  background: #ffffff;
  position: relative;
  min-height: 150rpx;
}
.coupon-box .discont .item .midbox {
  padding: 40rpx 32rpx 40rpx 32rpx;
}
.coupon-box .coupon .item .midbox {
  padding: 24rpx 24rpx 24rpx 32rpx;
}
.coupon-box .coupon .hook-icon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 16rpx;
}
.coupon-box .coupon .reason {
    background: linear-gradient(-180deg, rgb(255, 244, 235) 19.23%, rgb(255, 250, 245) 50%);
    border: 4rpx solid #ffffff;
    border-radius: 0rpx 0rpx 16rpx 16rpx;
    color: #ff7700;
    font-size: 24rpx;
    padding: 6rpx 20rpx 16rpx 20rpx;
}
.promotion-item .item .tit {
  font-size: 28rpx;
  line-height: 36rpx;
  color: #111111;
  font-weight: 600;
  margin-bottom: 8rpx;
}
.promotion-item .item .subtit {
  font-size: 22rpx;
  color: #555555;
  line-height: 32rpx;
}
.coupon-box .discont .item {
  border: 2rpx solid #157b9d;
}
.coupon-box .promotion-item .item .cp-price {
  display: flex;
  min-width: 200rpx;
  font-weight: 500;
  align-self: stretch;
  align-items: center;
  justify-content: center;
}
.coupon-box .discont .item .cp-price {
  background: linear-gradient(
    90deg,
    rgb(234, 250, 255) 0%,
    rgb(216, 245, 255) 100%
  );
  border-radius: 16rpx 0rpx 0rpx 16rpx;
  color: #157b9d;
}
.coupon-box .coupon {
  position: relative;
}
.coupon-box .coupon .item .cp-price {
  flex-direction: column;
  font-size: 32rpx;
  background: linear-gradient(
    -225deg,
    rgb(255, 153, 0) -0%,
    rgb(255, 102, 0) 100%
  );
  border-radius: 16rpx 16rpx 48rpx 16rpx;
  color: #fff;
}
.coupon-box .coupon .item .cp-price .subtitle {
  color: #55555;
  font-size: 22rpx;
  line-height: 30rpx;
  font-weight: 400;
}
.coupon-box .button-box {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  padding: 40rpx 0 0 40rpx;
}
.coupon-box .button-contain {
  padding: 0rpx 16rpx;
  background: #ff7700;
  color: #ffffff;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  font-size: 24rpx;
  line-height: 48rpx;
}
.coupon-box .coupon .get-box {
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  width: 100rpx;
  height: 100rpx;
}
.coupon-box .coupon .got-img {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}
.coupon-box .coupon .got-img image {
  width: 100rpx;
  height: 100rpx;
}

/* 会员权益 */
.coupon-box .member {
  padding-bottom: 48rpx;
}
.coupon-box .member .member-title {
  color: #555555;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  margin-bottom: 16rpx;
}
.coupon-box .member text {
  padding: 0rpx;
}
.coupon-box .member .member-box {
  background: #ffffff;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  padding: 24rpx;
}
.coupon-box .member-box .member-item {
  margin-bottom: 12rpx;
  line-height: 42rpx;
  display: flex;
}
.coupon-box .member .desc {
  height: 72rpx;
  color: #555555;
  font-size: 20rpx;
  padding-top: 8rpx;
  box-sizing: border-box;
  background-size: 100%;
  background-image: url(https://pages.c-ctrip.com/hotels/wechat/img/layer-right-bg.png);
}
.coupon-box .member .member-tit {
  flex-shrink: 0;
  margin-right: 16rpx;
  color: #f70;
  padding: 2rpx 12rpx;
  background-color: #fff1e6;
  border-radius: 4rpx;
  max-height: 40rpx;
  font-size: 24rpx;
}
.coupon-box .member-box .member-item .txt{
  color: #555555;
  font-size: 24rpx;
}
.coupon-box .member .desc .p-icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #fff1e6;
  text-align: center;
  margin-top: 14rpx;
  line-height: 37rpx;
}
.coupon-box .member .desc .p-icon image {
  padding: 0;
  width: 20rpx;
  height: 14rpx;
}
.member-btn {
  display: flex;
  justify-content: flex-end;
}
