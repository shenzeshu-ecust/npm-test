
.speacial-room {
  width: 100%;
}

.speacial-room .head-line {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background-size: 100% auto;
  background-repeat: no-repeat;
}
.speacial-room .head-line .title {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 48rpx;
}
.speacial-room .head-line .title-small {
  height: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  line-height: 40rpx;
}
.speacial-room .head-line .tag {
  width: 144rpx;
  height: 32rpx;
  margin-left: 8rpx;
  margin-bottom: -5rpx;
}
.speacial-room .vertical-box {
  padding: 0 30rpx 10rpx 30rpx;
  position: relative;
}
.speacial-room .vertical-box .item {
  display: flex;
  margin-bottom: 23rpx;
}
.speacial-room .vertical-box .left-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 18rpx;
  margin-top: -2rpx;
}
.speacial-room .vertical-box .right {
  flex: 1;
  z-index: 1;
}
.speacial-room .vertical-box .right .title {
  color: #111111;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 500;
}
.speacial-room .vertical-box .right .desc{
  color: #555555;
  font-size: 22rpx;
  line-height: 32rpx;
  margin-top: 9rpx;
}
.speacial-room .vertical-box .bottom-img {
  width: 206rpx;
  height: 94rpx;
  bottom: 0;
  right: 0;
  position: absolute;
  background-size: cover;
  background-repeat: no-repeat;
}
.speacial-room .horizontal-box {
  display: flex;
  white-space: nowrap;
  overflow-x: auto; /* 启用横向滚动 */
  height: 126rpx;
  width: 95%;
  padding: 0rpx 24rpx 12rpx 24rpx;
}
.speacial-room .horizontal-box .item {
  width: 124rpx;
  text-align: center;
  display: inline-block;
  vertical-align: top;
  height: 110rpx;
}
.speacial-room .horizontal-box .item .highlight {
  color: #ff7700;
  font-size: 20rpx;
  line-height: 24rpx;
}
.speacial-room .horizontal-box .item:not(:last-child) {
  border-right: 1px solid rgba(0, 0, 0, 0.08);
}
.speacial-room .horizontal-box .item .icon {
  width: 40rpx;
  height: 40rpx;
}
.speacial-room .horizontal-box .item .desc {
  padding-top: 8rpx;
  color: #111111;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 28rpx;
}

/* 套餐房和特色房并存场景样式兼容 */
.speacial-room .pac-icon {
  height: 48rpx;
  min-width: 48rpx;
  max-width: 48rpx;
  margin-right: 16rpx;
  background: unset;
  color: unset;
  line-height: 1;
}
.speacial-room .r-num {
  color: #888888;
  font-size: 20rpx;
  text-align: right;
  padding-right: 15rpx;
}
.sp-live {
  border-top: 8rpx solid #f8f8f8;
}
