page {height:100%;}
.share-bg {height:100%;background-size:cover;background-repeat:no-repeat;background-position:center top;}
.cmask {
	position: fixed;
	z-index: 1000;
	background-color: rgba(0, 0, 0, 0.6);
	top: 0;
	bottom: 0;
	right: 0;
	left: 0;
}
/*朋友圈*/
.share-wechat {position:fixed;bottom:0;left:0;right:0;background-color:#fff;color:#111111;font-size:28rpx;z-index:1100;text-align:center;padding:50rpx 0;}
.share-wechat .close {position:absolute;right:0;top:0;width:24rpx;height:24rpx;padding:30rpx;background:url(https://pages.ctrip.com/hotel_h5/wechat/duanwu/dw-close2.png) center center no-repeat;background-size:24rpx 24rpx;}
.share-wechat .img {width:120rpx;height:120rpx;margin-bottom:10rpx;}
.share-wechat .reset-button {line-height:inherit;background:#fff;font-size:inherit;border:none;padding:0;margin: 0}
.share-wechat .reset-button:after{display:none;}

/*分享二维码*/
.share-layer{position:fixed;transform:translateY(50%) translateX(-50%);left:50%;z-index:1100;box-sizing:border-box;text-align:center;}
.share-layer .close{position:absolute;top:-80rpx;right:-25rpx;padding:30rpx;width:24rpx;height:24rpx;background:url(https://pages.ctrip.com/hotel_h5/wechat/duanwu/dw-close-white.png) center center no-repeat;background-size:24rpx 24rpx}
.share-layer .txt{color:#fff;font-size:40rpx}
.share-layer .txt2{color:#fff;font-size:24rpx}
.share-layer .color1{color:#888888;font-size:22rpx;text-align: center;margin-top:20rpx;margin-bottom:35rpx}
.share-layer .qr-code{margin:10rpx auto 0;width:200rpx;height:200rpx}
.share-layer .share-bottom {width:458rpx;margin:20rpx auto;}
.share-layer .btn{margin-top: 880rpx;padding:0 20rpx;line-height: 88rpx;border-radius: 12rpx;background-color:#f9ac46;background-image:linear-gradient(to right,#f9ac46 0,#f87d2b 100%);color:#fff;font-size:34rpx;
	font-weight: 500;}
.share-layer .img{position:absolute; top: 20rpx; left: 50%; width: 458rpx;height:814rpx;transform:translateX(-50%);box-shadow:0 0 0.5rem rgba(0,0,0,.15);border-radius:4rpx;}
.share-wx {display: flex;justify-content:space-around;}
.bot50 {bottom: 50%;}
.bot45 {bottom: 45%;}
.share-layer .ch-btn {
    margin-top: 880rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border: none;
    padding: 0 20rpx;
	height: 88rpx;
	background: url('https://pages.c-ctrip.com/hotels/wechat/market/newcouponhelp/share-btn.png');
	filter: drop-shadow(0 9px 16px rgba(3,0, 30,1));
	background-size: 458rpx 88rpx;
	transform: translate3d(0,0,0);
	color: #3931AF;
    font-size: 34rpx;
	font-weight: 500;
}
.ch-btns {margin-bottom: -50rpx;justify-content: center;}
.ch-btn .mbt10 {margin-bottom: 10rpx;}
