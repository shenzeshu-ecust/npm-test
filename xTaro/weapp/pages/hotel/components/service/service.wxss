@import '../../common/common.wxss';
.service-img{ width: 100%; height: 342rpx; display: block; }
/* 弹窗 */
.assurance {
	width: 606rpx;
	background: #FFF;
    border-radius: 8rpx;
}
.assurance-close {
	font-size: 60rpx;
	text-align: center;
	margin-top: 40rpx;
	color: #fff;
}
.ass-head {
    width: 606rpx;
    height: 200rpx;
}
.ass-body {
    padding: 56rpx 40rpx;
}
.ass-body-tit {
    height: 48rpx;
    position: relative;
    margin-bottom: 8rpx;
}
.ass-body-tit .ass-img {
    width: 48rpx;
    height: 48rpx;
    background-image: url("https://pages.c-ctrip.com/hotels/wechat/img/servicepop-safe.png");
    background-repeat: no-repeat;
    background-size: cover;
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
}
.ass-body-tit .ass-txt {
    height: 48rpx;
    font-size: 38rpx;
    font-weight: bold;
    color: #006FF6;
    line-height: 48rpx;
    display: inline-block;
    position: absolute;
    top: 0;
    left: 56rpx;
}
.bd-content-tit {
    font-size: 30rpx;
    font-weight: bold;
    color: #111111;
    line-height: 38rpx;
    margin-top: 40rpx;
}
.bd-content-txt {
    display: block;
    font-size: 24rpx;
    line-height: 36rpx;
    margin-top: 16rpx;
}
