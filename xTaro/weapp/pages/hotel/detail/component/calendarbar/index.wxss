@import "../../../common/colormap.wxss";
/* 入离日期 */
.ft32 { font-size: 32rpx; }
.ft40 { font-size: 40rpx; }
.mr8 { margin-right: 8rpx }
.bold { font-weight: bold }
.dt-date {
    background-color: #fff;
}
.dt-date.border {
    border-radius: 24rpx 24rpx 0 0;
    overflow: hidden;
}
.dt-date .date-box {
    border-radius: 8rpx;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    padding: 32rpx 24rpx;
    margin: 0;
    background: #fff;
    height: 40rpx;
    line-height: 40rpx;
}
.dt-date .date-box .date-left {
    display: flex;
    align-items: center;
    flex: 1;
}
.dt-date .date-box .cust { font-weight: 300; font-size: 24rpx;}
.dt-date .date-box .cell-end { padding-left: 24rpx; }
.dt-date .date-box .date-line {
    display: inline-block;
    height: 2rpx;
    width: 16rpx;
    overflow: hidden;
    background-color: #c5c5c5;
    margin: 0 16rpx;
    vertical-align: super;
}
.dt-date-days {
    font-size: 26rpx;
    font-family: PingFangSC-Medium;
}
.dt-date .moning-out-tips {
    padding: 0 16rpx;
    background: #006FF6;
    border-radius: 4rpx;
    font-size: 24rpx;
    line-height: 56rpx;
    color: #fff;
    margin-left: 270rpx;
    position: relative;
    display: inline-block;
}
.dt-date .moning-out-tips:before {
    top: -10rpx;
    left: 170rpx;
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    border-bottom: 10rpx solid #006FF6;
    border-left: 10rpx solid #fff;
    border-right: 10rpx solid #fff;
}
