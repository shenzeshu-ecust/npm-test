@import '../../../../../common/common.wxss';
.head-box {
    display: flex;
    margin-right: 24rpx;
    align-items: flex-end;
    margin-left: 28rpx;
    margin-bottom: 31rpx;
}
.center-line {
    width: 1rpx;
    height: 116rpx;
    background: #e5e5e5;
    margin-right: 32rpx;
    margin-left: 105rpx;
}
.commnent-container {
    flex-direction: column;
    display: flex;
    justify-content: space-between;
}
.comment-title {
    font-size: 36rpx;
    font-family: PingFangSC-Medium;
    font-weight: 600;
    height: 32rpx;
    margin: 40rpx 0rpx 24rpx 0rpx;
    line-height: 32rpx;
}
.comment-info {
    display: flex;
    font-size: 20rpx;
    color: #111;
    height: 46rpx;
    align-items: center;
}
.comment-info .score {
    width: 66rpx;
    height: 46rpx;
    line-height: 46rpx;
    background: #0066f6;
    border-radius: 8rpx 8rpx 24rpx 8rpx;
    font-family: TRIPNUMBER-BOLD;
    font-size: 28rpx;
    color: #fff;
    position: relative;
    text-align: center;
}
.comment-info .score .bg-icon {
    position: absolute;
    right: -2rpx;
    bottom: -1rpx;
    margin: auto;
    height: 31rpx;
}
.comment-info .detail {
    margin-left: 9rpx;
}
.comment-info .level {
    margin-right: 7rpx;
}
.comment-info .center {
    vertical-align: middle;
}
.comment-info .tip {
    color: #0066f6;
}
.desc {
    display: grid;
    grid-template-columns: 50% 50%;
    grid-template-rows: 50% 50%;
    grid-row-gap: 12rpx;
    grid-column-gap: 24rpx;
    height: 34rpx;
    margin-left: 49rpx;
}
.desc-item {
    display: flex;
    align-items: center;
}
.desc-score {
    margin-left: 8rpx;
}
.desc-container {
    display: inline-block;
    width: 70rpx;
    height: 10rpx;
    background: #93bcf5;
    border-radius: 5rpx;
    margin-left: 8rpx;
    position: relative;
}
.desc-progress {
    height: 10rpx;
    background: #0066f6;
    border-radius: 5rpx;
}
.full-score {
    width: 54rpx !important;
    border-radius: 5rpx 0rpx 0rpx 5rpx !important;
    margin-right: 2rpx;
}
.great-score {
    position: absolute;
    right: -14rpx;
    top: -5rpx;
    color: #0066f6;
    font-size: 15rpx;
}