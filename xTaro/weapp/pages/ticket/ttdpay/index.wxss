.pay-index-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background-color: rgb(239,239,239);
  }
  
  .pay-order-detail {
    margin: 0 0 40rpx;
    padding: 34rpx 30rpx;
    background-color: rgb(255,255,255);
    border-bottom: 1px solid rgb(223,223,223);
    box-shadow: 0 0 5px rgba(223, 223, 223, .5);
  }
  
  .pay-order-detail .title {
    font-size: 48rpx;
    color: rgb(0,0,0);
  }
  
  .pay-order-detail .other {
    margin: 26rpx 0;
    font-size: 32rpx;
    color: rgb(153,153,153);
  }
  
  .pay-order-detail .price {
    margin: 26rpx 0 0;
  }
  
  .pay-order-detail .price-title {
    font-size: 32rpx;
    color: rgb(51,51,51);
  }
  
  .pay-order-detail .price-content {
    font-size: 48rpx;
    font-weight: 700;
    color: rgb(255,125,19);
  }
  
  .pay-order-method {
    padding: 34rpx 30rpx;
    background-color: rgb(255,255,255);
    border: 1px solid rgb(223,223,223);
    box-shadow: 0 0 5px rgba(223, 223, 223, .5);
  }
  
  .pay-order-item {
    display: flex;
    align-items: center;
    width: 100%;
    flex-direction: row;
  }
  .pay-order-item:active {
    background-color: rgba(0,0,0,.6);
  }
  
  .pay-order-item .icon {
    display: flex;
    width: 88rpx;
    height: 88rpx;
    max-width: 88rpx;
    max-height: 88rpx;
    margin: 0 40rpx 0 0;
    background: url(https://webresource.c-ctrip.com/resh5paymentcommononline/R9/dest/res/h5/webchatprogram/icon-wechatPay.png) no-repeat;
    background-size: 100% 100%;
  }
  
  .pay-order-item .info {
    display: flex;
    flex-direction: column;
    color: rgb(51,51,51);
  }
  
  .pay-order-item .name {
    color: rgb(0,0,0);
  }
  
  .pay-order-item .marketing {
    margin: 20rpx 0 0 0;
    font-size: 26rpx;
  }
  
  .pay-order-item .name {
    font-size: 40rpx;
  }
  
  .pay-order-item1 .icon {
    opacity: .6;
    color: rgb(187,187,187);
  }
  
  .pay-button-full {
    margin: 80rpx 30rpx 0;
  }
  .pay-button-full button {
    height: 94rpx;
    width: 100%;
    background-color: rgb(229,138,17);
    font-size: 36rpx;
    color: rgb(255, 255, 255);
    text-align: center;
  }
  .pay-button-full button[loading] {
    background-color: rgb(229,138,17);
    color: rgba(255, 255, 255, .6);
  }
  .pay-button-full .hover {
    background-color: rgba(229,138,17,.6);
    color: rgba(255, 255, 255, .6);
  }
  .pay-button-bottom {
    display: flex;
    justify-content: flex-end;
    padding: 10rpx 30rpx;
  }
  .pay-intro-link {
    margin:28rpx 0 0;
    font-size:28rpx;
    color: rgb(9, 159, 222);
  }
  
  .modalview {
    text-align: center
  }
  
  .hnopay{
      background: #F3F5F8;
      width: 100%;
      height: 100%;
      position: absolute;
      display: flex;
      flex-direction: column;
      align-items: center
  }
  
  .hpayeicon{
      width:124px;
      height:124px;
      background: url("https://pic.c-ctrip.com/picaresonline/h5paymentsdk/smallprogram/img/holderr.86ab12be.png") no-repeat 0 0;
      background-size: 124px 124px;
      margin-top: 125px;
  }
  
  .hpayetext{
      font-size: 20px;
      color: #474747;
      padding: 0 30px;
      line-height: 30px;
      text-align: center;
  }
  
  .price-ncy{
      font-size: 12px;
      color: #ff8c00;
  }
  
  .hideview{
      display:none;
  }
  
  .pay-modal-mask {
    position: fixed;
    left:0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
    z-index: 1000;
  }
  
  .pay-modal {
    box-sizing: border-box;
    position: fixed;
    left: 50%;
    top: 50%;
    width: 100%;
    transform: translate(-50%, -50%);
    padding: 0 40rpx;
    z-index: 1001;
  }
  
  .pay-modal-content {
    position: relative;
    padding: 40rpx 70rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    word-wrap:break-word;
    word-break: break-all;
    color: rgb(153,153,153);
    background-color: rgb(255,255,255);
  }
  
  .pay-modal-header {
    padding: 0 0 30rpx;
    color: rgb(0,0,0);
    text-align: center;
  }
  .pay-modal-title {
    font-size: 48rpx;
  }
  .pay-modal-close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
  }
