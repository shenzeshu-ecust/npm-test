page{
  position:relative;
  width: 100%;
  height: 100%;
  background-color: white;

}
.page-view{
  display:flex;
  flex-direction:column;
  width: 100%;
  height: 100%;
}
.title-text{
  text-align: center;
  font-size: 66rpx;
  color:#222;
  margin-top: 92rpx;
  width:100%;
}
.subtitle-text{
  text-align: center;
  margin-top: 16rpx;
  font-size: 32rpx;
  color:#222;
}
.big-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex:1
}
.bigimage{
  /* width: 547rpx;
  height:353rpx; */
}
.small-view{
  margin: 0 auto;
  width:270rpx;
  height: 76rpx;
}
.smallimage{

  width:270rpx;
  height: 76rpx;
}
.content{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 16rpx;
  font-family:PingFangSC-Light;
  font-size: 32rpx;
  color: #3F3F3F;
  text-align: center;
  line-height: 46rpx;
}
.number{
  color:#222;
  font-family: PingFangSC-Regular;
}
.sub-content{
  color: #3F3F3F;
}
.upload-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 88rpx;
  margin-top: 64rpx;
  margin-bottom: 88rpx;
}
.upload-image{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 280rpx;
  background-color: #2FCFBB;
  border-radius: 64rpx;
  align-items: center;
}
.upload-video{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 280rpx;
  background-color: #2FCFBB;
  margin-left: 50rpx;
  border-radius: 42rpx;
  align-items: center;
  line-height:88rpx;
}
.icon{
  width: 48rpx;
  height: 48rpx;
}
.upload-text{
  color:white;
  font-size: 34rpx;
  margin-left: 16rpx;
  line-height:88rpx;
}
