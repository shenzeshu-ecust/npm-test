/* pages/category/components/Video/video.wxss */

.videoBody {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  height: 100%;
  width: 100%;
  z-index: 1000;
  background: transparent;
}

.videoView {
  position: absolute;
  height: 100%;
  width: 100%;
}

.v-controls-close {
  position: fixed;
  z-index: 99999;
  top: 80rpx;
  right: 41rpx;
  width: 48rpx;
  height: 48rpx;
}

.v-close-img {
  width: 48rpx;
  height: 48rpx;
}

.v-controls-next {
  position: fixed;
  z-index: 99999;
  left: 32rpx;
  bottom: 92rpx;
}

.v-controls-next {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 12rpx;
  height: 88rpx;
  background-color: rgba(0, 0, 0, 0.45);
  border-radius: 8rpx;
}

.v-address-img {
  width: 32rpx;
  height: 32rpx;
}

.v-controls-inner-view {
  flex: 1;
  color: #fff;
  font-size: 28rpx;
}

.v-next-img {
  width: 44rpx;
  height: 44rpx;
}
