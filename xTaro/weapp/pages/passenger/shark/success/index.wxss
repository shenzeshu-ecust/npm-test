/* pages/success/index.wxss */
.successBox {
  padding:40rpx 30rpx 20rpx;
  box-shadow: 0 2rpx 6rpx 0 #e0e0e1;
  background-color: #fff;
}

.successBox .successTips {
  padding-bottom:40rpx; 
  font-size:28rpx;
  color: #666;
  display:flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.successBox .successTips .icon_success {
  position: relative; 
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  background-color: #35cf4d;
}

.successBox .successTips .icon_success:after {
  content: "";
  height: 22rpx;
  width: 54rpx;
  border: 1rpx solid #fff;
  border-width: 0 0 8rpx 8rpx;
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.successBox .successTips .successTipsH3{
  font-size: 32rpx;
}

.travellerList{
  font-size: 32rpx;
  color: #666;
}

.travellerList .travellerListH3{
  font-size: 28rpx; 
  color: #999;
}
 
.travellerListBox{ 
  padding-left:16rpx;
  border: 1px solid #ececec;
  margin-top:10rpx;
}

.travellerListBox .travellerListBoxLi{
  display:flex;
  align-items: center;
  justify-content:space-between;
  width: 100%;
  height: 68rpx; 
  line-height: 68rpx;
  border-bottom: 1px solid #e0e0e0;
  font-size:28rpx;
  color: #333;
  box-sizing: border-box;
  padding-right:16rpx; 
} 
.travellerListBox .travellerListBoxLi:last-child {
  border-bottom: 0 none;
}

.travellerListBox .travellerListBoxLi text:last-child{ 
  color: #999; 
}  
.travellerListBtn{
  padding: 60rpx 30rpx 20rpx;    
  display:flex;
  align-items: center;
  justify-content: center;
}
.travellerListBtn button{
  display:flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 70rpx; 
  margin-bottom: 6rpx; 
  font-size:30rpx;
  color: #fff;
  border: 0 none;
  background: #52BCE8;
  -webkit-appearance: none;
  border-radius:6rpx;
}
.travellerListBtn button .icon-add{
  width: 34rpx;
  height: 34rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  box-sizing: border-box;
  margin-right:10rpx;
  position: relative;
}
.travellerListBtn button .icon-add::before,.travellerListBtn button .icon-add::after{
  position: absolute;
  left: 14rpx;
  top:4rpx;
  display: block;
  content: "";
  width: 1rpx;
  height:22rpx;
  background-color: #fff; 
  transform: rotate(90deg);
}
.travellerListBtn button .icon-add::after{ 
  transform: rotate(180deg);
}