/*选择旅客*/
.button-add-passenger{
	margin:40rpx;
	background: #fff;
	height: 94rpx;
	line-height: 94rpx;
	border-radius:10rpx;
	color: #009fde;
	font-size: 36rpx;
	text-align: center;
}
.ico-add:before{
	font-size: 36rpx;
}
.passenger-box{
	position: absolute;
	top: 174rpx;
	bottom: 98rpx;
	border: 1rpx solid #E5E5E5;
	border-width: 1rpx 0;
}
.passenger-list{
	position: relative;
	padding: 30rpx 30rpx 30rpx 96rpx;
	background: #fff;
}
.passenger-list:after{
	content: '';
	position: absolute;
	background: #E5E5E5;
	left: 30rpx;
	right: 0;
	bottom:0;
	height:1rpx;
}
.passenger-list:last-of-type:after{
	display: none;
}
.passenger-list_selected{
	background: #FFF9E6;
}
.ico-edit:before{
	font-size: 36rpx;
	color: #999;
}
.ico-pos{
	position: absolute;
	top: 0;
	left: 30rpx;
}
.ico-pos:before {
	position: absolute;
	top: 30rpx;
	left: 0;
}
.ico-pos_circle{
	position: absolute;
	top:50%;
	right: 30rpx;
	transform: translateY(-50%);
}
.ico-circle_active{
	color: #099fde;
}
.passenger-name,
.passenger-info{
	display: block;
	padding-right: 50rpx;
	white-space: nowrap;
	text-overflow:ellipsis;
	overflow: hidden;
	box-sizing:border-box;
}
.passenger-name{
	color: #333;
	font-size: 32rpx;
}
.passenger-info{
	margin-top: 20rpx;
	color: #999;
	font-size: 28rpx;
}
.passenger-info_blue{
	color: #099FDE;
	margin-top: 22rpx;
	font-size: 26rpx;
}
.passenger-info_error{
	color:#F43530;
}
.section-fixed_bottom{
	position: fixed;
	bottom:0;
	left: 0;
	right: 0;
}
.btn-primary,
.btn-disabled{
	border-radius:0;
	border:0 none;
}


.section-add-scroll{
	height: 1072rpx;
}
.section-add{
	margin-top: 30rpx;
}
.passenger-add-list{
	margin-bottom:20rpx;
	background:#fff;
}
.passenger-item_input-name{
	padding-right:150rpx;
}
.switch-country{
	position:absolute;	
	top:50%;
	margin-top:-25rpx;
	width: 130rpx;
	height: 50rpx;
	right:30rpx;
}
.switch-country .cn,
.switch-country .en{
	display:inline-block;
	float:left;
	width: 63rpx;
	height: 50rpx;
	line-height:50rpx;
	text-align:center;
	border:1px solid #999;
	background:#fff;
	color:#999;
}
.switch-country .cn{
	border-width:1px 0 1px 1px;
}
.switch-country .en{
	border-width:1px 1px 1px 0;
}
.switch-country .cn.current,
.switch-country .en.current{
	border-color:#099fde;
	background:#099fde;
	color:#fff;
}
.passenger-add-button{
	position:fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 134rpx;
	padding:0 30rpx;
	box-sizing:border-box;
	border-top: 1px solid #ccc;
}
.passenger-add-button button:first-of-type{
	margin-right:30rpx;
}
.passenger-add-button button{
	display:inline-block;
	margin-top:20rpx;
}
.passenger-add-button .btn-minor{
	box-sizing:border-box;
	width: 238rpx;
	border: 1px solid #dbdbdb;
}
.passenger-add-button .btn-primary{
	width: 423rpx;
	border-radius:10rpx;
}
.section-hd{
	padding-left: 30rpx;
	font-size: 26rpx;
	color: #999;
}

.section-bd{
	margin-top: 20rpx;
}
.ico-info{
	margin-left: 10rpx;
}
.ico-info:before{
	font-size: 26rpx;
	vertical-align: middle;
}

/*表单样式*/
.passenger-form_list {
	position: relative;
	overflow: hidden;
}
.passenger-item {
	position: relative;
	height: 88rpx;
	padding-left: 190rpx;
	margin-left: 30rpx;
	margin-top: -1px;
	border-top: 1rpx solid #e5e5e5;
	color: #333;
	background-color: #fff;
}
.passenger-item:first-of-type{
	border: none;
}
.passenger-item:before {
	content: "";
	position: absolute;
	top: 0;
	left: -30rpx;
	width: 30rpx;
	height: 88rpx;
	overflow: hidden;
	background-color: #fff;
}
.passenger-item_title {
	position: absolute;
	top: 0;
	left: 0;
	width: 190rpx;
	height: 88rpx;
	overflow: hidden;
	line-height: 88rpx;
	font-size: 32rpx;
}
.passenger-item_input {
	display: block;
	width: 98%;
	height: 88rpx;
	line-height: 88rpx;
	font-size: 32rpx;
	box-sizing: border-box;
}
.passenger-item_input-arrow{
	position: relative;
	line-height: 88rpx;
	color: #333;
}
.passenger-item_input-arrow:after{
	position: absolute;
	content:'';
	top:50%;
	right: 30rpx;
	width: 20rpx;
	height: 20rpx;
	border: 4rpx solid #c7c7c7;
	transform: translateY(-50%) rotate(45deg);
	border-width:4rpx 4rpx 0 0;
}
.passenger-item_input-placeholder,
.passenger-item_input-picker,
.passenger-item_input-sex,
.sex-text{
	color: #bbb;
	font-size: 32rpx;
	line-height: 88rpx;
	display: inline-block;
}
.divider{
	margin:0 20rpx;
	color:#e5e5e5;
}
.sex-text_selected{
	position: relative;
	color:#099FDE;
}
.sex-text_selected:after{
	position: absolute;
	content:'';
	height: 4rpx;
	bottom: 0;
	left: 0;
	right: 0;
	background: #099FDE;
}

.btn-area{
	margin:60rpx 40rpx;
}


/*error*/
.passenger-item_title-error{
	color:#F43530;
}

.mask{
	position: absolute;
	z-index: 99;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background: rgba(0,0,0,.5);
}
.idcard-list{
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 99;
}
.idcard-item{
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	font-size: 36rpx;
	color: #000;
	border-bottom: 1rpx solid #E5E5E5;
	background: #fff;
}
.idcard-item_selected{
	color:#099FDE;
}
.icon-selected{
	position: absolute;
	right: 30rpx;
	font-size: 22rpx;
}

/*姓名填写说明页*/
.section-text-warp{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 99;
	background: #fff;
	box-sizing:border-box;
	border-radius: 8rpx;
	overflow: hidden;
}
.section-text-scroll{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	padding-top: 0;
	box-sizing:border-box;
	background: #EFEFEF;
}
.section-text-hd{
	color: #333;
	font-size: 28rpx;
}
.section-text-bd{
	color: #666;
	font-size: 26rpx;
}
.section-text-list{
	margin-top: 40rpx;
}


.section-text-item{
	display: block;
	line-height: 1.5;
}
.section-text-item_square{
	position: relative;
	padding-left: 16rpx;
}
.section-text-item_square:before{
	position: absolute;
	content: '▪';
	color: #666;
	left: 0;
	vertical-align: middle;
}
.section-title{
	position: relative;
	display: block;
	color: #099FDE;
	font-size: 30rpx;
	line-height: 1;
	padding-left: 40rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}
.section-title:before{
	position: absolute;
	top: 50%;
	left: 0;
	width: 30rpx;
	height: 30rpx;
	line-height: 30rpx;
	color: #fff;
	font-size: 20rpx;
	background: #52BCE8;	
	border-radius:4rpx; 
	text-align: center;
	transform: translateY(-50%);
}
.section-title_cn:before{
	content:'中';
}
.section-title_en:before{
	content:'英';
}

.section-text-demo{
	padding-left: 30rpx;
	height: 88rpx;
	line-height: 88rpx;
	text-align: left;
	margin:20rpx 0 30rpx 0;
	background: #EFEFEF;
	color: #333;
}
.space-nomargin-top{
	margin-top: 0;
}
.space-nomargin-bottom{
	margin-bottom: 0;
}
.section-text-demo_name{
	display: inline-block;
	width: 160rpx;	
}
.border-top{
	border-top: 1rpx solid #e5e5e5;
}

.section-img-wrap{
	margin-top: 60rpx;
}
.section-img-title{
	position: relative;
	color: #333;
	font-size: 28rpx;
	text-align: center;
}
.section-img-title:before{
	position: absolute;
	z-index:-1;
	content:'';
	left: 0;
	top:50%;
	right: 0;
	height: 1px;
	background: #bbb;
	transform: translateY(-50%);
}
.section-img-title-span{
	display: inline-block;
	padding: 0 20rpx;
	background: #fff;
}
.image{
	margin-top: 20rpx;
}
.passenger-view-hide{
	display: none;
}
.passenger-view-show{
	display: block;
}
  