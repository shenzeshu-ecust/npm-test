@import '../bus.wxss';
@import '../common/template/shareMenu.wxss';
@import '../common/template/shareModal.wxss';
@import './components/ActivityAward/index.wxss';

page {
    overflow-x: hidden;
    background: #bcf4fc;
    height: 100%;
}

.page-container {
    background-repeat: no-repeat;
    padding-bottom: 50rpx;
    overflow: hidden;
    position: relative;
    min-height: 100%;
    background-image: url('https://pages.c-ctrip.com/bus-images/order-axtrefund/avtivity_back.png');
    background-size: 100% auto;
}
.page-container:after {
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background: linear-gradient(
        -181.12deg,
        #bcf4fc 0%,
        #bcf4fc 30.62%,
        #bcf4fc 100%
    );
}
.page-container .tip-button {
    background-repeat: no-repeat;
    color: #0bba8d;
    position: fixed;
    z-index: 10;
    right: 0;
    top: 360rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    height: 88rpx;
    width: 32rpx;
    font-weight: 500;
    text-align: center;
    padding-left: 10rpx;
    writing-mode: vertical-rl;
    background: linear-gradient(
        0deg,
        rgb(241, 255, 252) 0%,
        rgba(147, 255, 246, 1) 100%
    );
    border-radius: 12rpx 0rpx 0rpx 12rpx;
    z-index: 1;
}

.ad-back {
    position: absolute;
    width: 384rpx;
    height: 196rpx;
    top: 100rpx;
    left: 50rpx;
    background-size: 100% 100%;
}
.ad-back .time-message {
    color: white;
    font-size: 22rpx;
    font-weight: 600;
    line-height: 50rpx;
    width: 347rpx;
    position: absolute;
    bottom: 6rpx;
    left: 0;
    text-align: center;
}
.ad-back .owner-message {
    left: 20rpx;
}
.page-container .tip-button .inner {
    position: absolute;
    left: 3rpx;
    top: 3rpx;
    right: 0;
    bottom: 3rpx;
    writing-mode: vertical-rl;
    background: linear-gradient(
        -180deg,
        rgb(241, 255, 252) 0%,
        rgba(147, 255, 246, 1) 100%
    );
    background-color: red;
    border-radius: 12rpx 0px 0px 12rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.page-container .main-container {
    margin: 340rpx 24rpx 0;
    display: flex;
    flex-direction: column;
    position: relative;
}
.page-container .main-container .activity-name {
    padding-top: 20rpx;
    font-size: 24rpx;
    color: #aa2717;
    margin-bottom: 5rpx;
}
.page-container .main-container .activity-total .descline {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.page-container .main-container .activity-total {
    font-size: 24rpx;
    width: 351rpx;
    height: 104rpx;
    color: #aa2717;
    box-sizing: border-box;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: url('https://pages.c-ctrip.com/bus-images/rn_bus/share/share_total_container.png?v=2');
    background-size: 100% 100%;
    background-repeat: no-repeat;
    margin-top: 20rpx;
}
.page-container .main-container .activity-total .highlight {
    color: #fa341d;
    font-weight: 600;
}
.page-container .main-container .share-coin {
    z-index: 3;
    position: absolute;
    left: 0;
    width: 174rpx;
    height: 155rpx;
    background-image: url('https://s.qunarzz.com/nnc_module_qunar_bus/share_money.png');
    background-size: 100%;
    background-repeat: no-repeat;
}
.page-container .main-container .share-red-bag-logo {
    z-index: 2;
    position: absolute;
    top: 28rpx;
    right: 106rpx;
    width: 116rpx;
    height: 65rpx;
    background-image: url('https://s.qunarzz.com/nnc_module_qunar_bus/share_red_smallbag2.png');
    background-size: 100%;
    background-repeat: no-repeat;
}
.page-container .customer-protect {
    width: 600rpx;
    height: 209rpx;
    margin: 60rpx auto 100rpx;
    background-image: url('https://s.qunarzz.com/nnc_module_qunar_bus/share_safety.png');
    background-size: contain;
    background-repeat: no-repeat;
}

.block-container {
    background: #ffffff;
    border-radius: 28rpx;
    box-shadow: 0px 0px 12px 0px rgba(133, 237, 223, 0.5);
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 32rpx;
    z-index: 0;
    padding-top: 24rpx;
}
.block-container:after {
    position: absolute;
    content: '';
    z-index: -2;
    top: -8rpx;
    left: -8rpx;
    bottom: -8rpx;
    right: -8rpx;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 34rpx;
}
.block-header-bg {
    background: linear-gradient(
        -90deg,
        rgba(163, 250, 228, 0.3) 0%,
        rgb(254, 246, 196) 100%
    );
    border-radius: 24rpx 24rpx 0px 0px;
    box-shadow: inset 0px 2rpx 16rpx 2rpx rgba(255, 255, 255, 0.5);
    height: 158rpx;
    position: absolute;
    z-index: -1;
    top: 4rpx;
    left: 4rpx;
    right: 4rpx;
}
.block-header-bg:after {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    content: '';
    background: linear-gradient(
        -180deg,
        rgb(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 0.95) 100%
    );
}

.block-container .title {
    color: #333333;
    font-size: 34rpx;
    font-weight: 600;
}
.block-container .title .high-light {
    color: #ff7700;
}
.block-container .title:after,
.block-container .title:before {
    content: '';
    background-size: 100%;
    background-repeat: no-repeat;
    background-image: url('https://pages.c-ctrip.com/bus-images/order-axtrefund/title-star.png');
    display: inline-block;
    vertical-align: middle;
    margin: 0 16rpx 6rpx;
    height: 28rpx;
    width: 28rpx;
}

.block-container .sub-title {
    color: #333333;
    font-size: 28rpx;
    font-weight: 600;
}
.block-container .sub-title .high-light {
    color: #ff7700;
}
.block-container .title-line {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-bottom: 24rpx;
}
.block-container .title-line .line {
    width: 80rpx;
    height: 3rpx;
    background: linear-gradient(
        -90deg,
        rgb(151, 233, 225) 0%,
        rgb(151, 233, 225, 0.1) 100%
    );
    border-radius: 2rpx;
}
.block-container .title-line .line.right {
    background: linear-gradient(
        90deg,
        rgb(151, 233, 225) 0%,
        rgb(151, 233, 225, 0.1) 100%
    );
}
.process-button {
    margin-bottom: 50rpx;
    font-size: 36rpx;
    text-align: center;
    height: 100rpx;
    width: 570rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    font-weight: 500;
    color: #ffffff;
    background-size: 100% 100%;
    background: linear-gradient(
        -90deg,
        rgb(255, 135, 103) 0%,
        rgb(255, 122, 38) 45.98%,
        rgb(255, 210, 139) 100%
    );
    box-shadow: 0px 8rpx 10rpx 5rpx rgb(255, 122, 38, 0.4);
    border-radius: 50rpx;
    border: solid #f8f8d7;
    border-top-width: 1rpx;
    border-bottom-width: 2rpx;
    border-left-width: 1.5rpx;
    border-right-width: 1.5rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.process-button:after {
    border: none;
}
.process-button.disabled {
    opacity: 0.5;
}

.process-button .inner {
    background: linear-gradient(
        180deg,
        rgb(255, 255, 255, 0.6) 0%,
        rgba(255, 255, 255, 0.1) 35%,
        rgba(255, 255, 255, 0) 90%,
        rgba(255, 255, 255, 0.1) 100%
    );
    filter: blur(20%);
    border-radius: 44rpx;
    height: 88rpx;
    width: 558rpx;
    line-height: 88rpx;
}

/** timer */
.timer {
    width: 272rpx;
    -webkit-line-break: 37rpx;
    margin-bottom: 20rpx;
    font-size: 22rpx;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
}
.timer-bg {
    background: linear-gradient(
        -90deg,
        rgba(147, 254, 212, 0.4) 0%,
        rgba(217, 255, 247, 0.4) 50.71%,
        rgba(181, 249, 255, 0.4) 100%
    );
    border-radius: 20rpx;
    border: 1rpx solid #3cdcaa;
    height: 40rpx;
}
.timer .timer-section {
    padding: 0rpx 2rpx;
    text-align: center;
    border-radius: 4rpx;
    display: inline-block;
    color: #20bb8e;
    font-weight: 500;
}
.timer .timer-section.flash {
    /* animation: flash 2s ease-in-out infinite; */
}
@keyframes flash {
    0% {
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.steps-image {
    width: 650rpx;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}

.ctripSlogan {
    z-index: 2;
    background-image: url('https://pages.c-ctrip.com/bus-images/order-axtrefund/share-brand-logo.png');
}

.reward-contaienr {
    display: flex;
    flex-direction: row;
    width: 100%;
    padding: 0 32rpx 12rpx;
    box-sizing: border-box;
    align-items: center;
    flex-wrap: wrap;
}
.reward-contaienr .reward-item {
    flex: 1;
    display: flex;
    flex-direction: row;
    background: linear-gradient(
        90deg,
        rgb(255, 250, 233) 0%,
        rgb(255, 232, 216) 100%
    );
    border-radius: 16rpx;
    height: 144rpx;
    min-width: 45%;
    margin-bottom: 20rpx;
}
.reward-contaienr .reward-item .image {
    height: 144rpx;
    width: 106rpx;
    margin-right: 10rpx;
}
.reward-contaienr .reward-item.next {
    background: linear-gradient(
        90deg,
        rgb(255, 250, 233) 0%,
        rgb(255, 232, 216) 100%
    );
}

.reward-contaienr .reward-item .reward-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}
.reward-contaienr .reward-item .reward-title {
    color: #ff7700;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 37rpx;
    letter-spacing: 0px;
    margin-bottom: 16rpx;
}
.reward-contaienr .reward-item .reward-sub-title {
    color: #666666;
    font-size: 24rpx;
    font-weight: normal;
    line-height: 30rpx;
}

.reward-contaienr .reward-split {
    background: linear-gradient(
        -90deg,
        rgb(255, 135, 103) 0%,
        rgb(255, 122, 38) 100%
    );
    border: 2rpx solid #ffffff;
    height: 36rpx;
    width: 36rpx;
    margin-left: -8rpx;
    margin-right: -8rpx;
    margin-bottom: 8rpx;
    z-index: 2;
    border-radius: 36rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    opacity: 0.5;
}
.reward-contaienr .reward-split .icon-plus {
    font-size: 20rpx;
    font-weight: 600;
    color: white;
    margin-left: 1rpx;
}
