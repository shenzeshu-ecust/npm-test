.qrcode-container {
    background: linear-gradient(
        0deg,
        rgb(255, 203, 166) 0%,
        rgb(255, 238, 187) 100%
    );
    border-radius: 20rpx;
    height: 300rpx;
    width: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    position: relative;
}
.qrcode-container .qrcode {
    height: 268rpx;
    width: 268rpx;
    background-color: #f4f4f4;
}
.qrcode-container .qrcode image {
    width: 100%;
    height: 100%;
}
.qrcode-container .hand {
    height: 161rpx;
    width: 173rpx;
    position: absolute;
    bottom: -60rpx;
    right: -118rpx;
}
.qrcode-container .hand image{
    width: 100%;
    height: 100%;
}
.award-title {
    color: #333333;
    font-size: 28rpx;
    font-weight: 500;
    line-height: 36rpx;
    letter-spacing: 0px;
}
.award-title .high-light {
    color: #ff7700;
}
