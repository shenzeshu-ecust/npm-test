.empty-view {
    padding-top: 120rpx;
    font-size: 28rpx;
    color: #999999;
    text-align: center;
}

.city-module_name1,
.city-module_name-road {
    float: left;
    width: 200rpx;
    height: 60rpx;
    overflow: hidden;
    margin: 0 20rpx 20rpx 0;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #666;
    border: 1px solid #dbdbdb;
    border-radius: 8rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.city-module_name {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #333;
    border-bottom: 1px solid #e5e5e5;
}
.city-module_items .distance-tag {
    font-size: 24rpx;
    color: #999999;
    margin-left: 20rpx;
}
.city-module_items .station-tag {
    color: #00b87a;
    text-align: center;
    word-wrap: none;
    white-space: nowrap;
    background-color: #bfe0fc;
    margin-left: 20rpx;
    font-size: 24rpx;
    line-height: 30rpx;
    box-sizing: border-box;
    border-radius: 4rpx;
    padding: 0 3rpx;
    background-color: #ffffff;
    min-width: 80rpx;
    border: 1rpx solid;
}

.city-module_items icon {
    display: none;
    position: absolute;
    top: 50%;
    right: 60rpx;
    transform: translateY(-50%);
}

.city-module_items.selected .city-module_name {
    color: #0086f6;
}

.selected .city-module_name {
    color: #0086f6;
}

.city-module_items.selected icon {
    display: block;
}

.letter-select_tips {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
    transform: translate(-50%, -50%);
    text-align: center;
    line-height: 160rpx;
    border-radius: 50%;
    font-size: 72rpx;
    color: #fff;
    background-color: rgba(82, 188, 232, 0.8);
}

