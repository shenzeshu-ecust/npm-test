/* tab 选项卡与公共部分不同的部分 */
/* tab选项卡的样式 */
.tab-module {
    position: relative;
    display: flex;
    width: 100%;
    height: 94rpx;
    border-bottom: 1px solid #e5e5e5;
    background-color: #fafafa;
    color: #333;
    z-index: 90;
}
.tab-item {
    flex: 1 1 auto;
    height: 94rpx;
    padding-top: 14rpx;
    line-height: 70rpx;
    box-sizing: border-box;
}
.tab-item_current {
    color: #0086f6 !important;
    border-bottom: 3px solid #0086f6 !important;
}

.tab-text {
    display: block;
    text-align: center;
    font-size: 28rpx;
}

.tab-item {
    line-height: 70rpx;
    background-color: #fafafa;
    border-bottom: 1px solid #e5e5e5;
}

.city-module_letter {
    position: fixed;
    top: 74rpx;
    right: 0;
    bottom: 0;
    width: 40rpx;
    padding-top: 130rpx;
    /* background-color: #fff; */
    z-index: 10;
    box-sizing: border-box;
}
.city-module_letter-item1,
.city-module_letter-item {
    display: block;
    height: 28rpx;
    overflow: hidden;
    line-height: 28rpx;
    white-space: nowrap;
    font-size: 22rpx;
    color: #0086f6;
    text-align: center;
}
.city-module_letter-item1 {
    font-size: 18rpx;
}
.city-module_list {
    position: fixed;
    top: 182rpx;
    left: 0;
    right: 40rpx;
    bottom: 0;
    background-color: #fff;
}

.city-module_type {
    clear: both;
    position: sticky;
    top: 0;
    z-index: 5;
    height: 56rpx;
    overflow: hidden;
    line-height: 60rpx;
    text-indent: 30rpx;
    font-size: 26rpx;
    color: #666;
    background-color: #efefef;
}
.city-module_items {
    display: block;
    margin-bottom: -1px;
    overflow: visible;
    padding: 0 30rpx;
}

.city-module_items .expand-text {
    color: #0086f6;
    border-bottom: 1rpx solid #e5e5e5;
}
.city-module_items .expand-text.close:after,
.city-module_items .expand-text.open:after {
    position: relative;
    content: '';
    display: inline-block;
    width: 9rpx;
    height: 9rpx;
    border-top-width: 3rpx;
    border-top-style: solid;
    border-right-width: 3rpx;
    border-right-style: solid;
    -webkit-transform: rotate(135deg);
    transform: rotate(135deg);
    vertical-align: middle;
    margin: -9rpx 0 0 15rpx;
    transition: all 200ms ease-in-out;
}
.city-module_items .expand-text.close:after {
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    margin: 0rpx 0 0 15rpx;
}

.city-module_items.block {
    margin-top: 20rpx;
}
.city-module_items .station-v-line.first {
    top: 0;
    height: 50%;
}
.city-module_items .station-v-line {
    left: 0;
    width: 0;
    top: -50%;
    height: 100%;
    border-left: 1rpx solid #e5e5e5;
    position: absolute;
}
.city-module_items .station-line {
    width: 30rpx;
    margin-right: 20rpx;
    height: 0;
    border-top: 1rpx solid #e5e5e5;
}
.city-module_items .station {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    margin-left: 10rpx;
}

.city-module_items .city-module_name-road.selected {
    color: #0086f6;
    border-color: #0086f6;
}

