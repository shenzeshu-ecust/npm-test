page {
    font-size: 32rpx;
    color: #333333;
    background-color: #f8f8f8;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.book-modal {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 100;
}

.flex-row-center {
    display: flex;
    align-items: center;
}

.book-modal-content {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    animation: slideUp 500ms;
    font-size: 0;
    background: #ffffff;
}

.book-modal-content .more-line-item {
    padding-left: 32rpx;
    padding-right: 32rpx;
    box-sizing: border-box;
    height: 96rpx;
    justify-content: space-between;
}

.book-modal-content .more-line-item .icon {
    width: 32rpx;
    height: 32rpx;
}

.book-modal-content .more-line-item .line {
    font-size: 34rpx;
    color: #333333;
    font-weight: bold;
}

.more-line-item .price .txt {
    color: #999999;
    font-size: 24rpx;
    margin-right: 16rpx;
    margin-left: 4rpx;
}

.more-line-item .price .num {
    color: #FF7700;
    font-size: 44rpx;
    font-weight: bold;
}

.more-line-item .price .rmb{
    font-size: 30rpx;
    color: #FF8B26;
    margin-left: 4rpx;
}

.book-btn {
    width: 164rpx;
    height: 60rpx;
    background: linear-gradient(90deg, #FFA50A 0%, #FF7700 100%);
    border-radius: 10rpx;
    color: #ffffff;
    justify-content: center;
    font-size: 26rpx;
}

@keyframes slideUp {
    from {
        bottom: -200rpx;
    }
    to {
        bottom: 0;
    }
}