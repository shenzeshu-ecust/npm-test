.tip-bot {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 3002;
    transition: all ease-in-out 300ms;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
}
.tip-bot.active {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}

.cui-hd {
    color: #fff;
    font-size: 34rpx;
    display: table;
    width: 100%;
    padding: 16rpx 0;
    height: 56rpx;
    overflow: hidden;
    min-width: 640rpx;
}
.cui-hd .cell {
    display: table-cell;
    line-height: 60rpx;
    text-align: center;
}
.cui-hd .cancel-btn,
.cui-hd .ok-btn {
    width: 20%;
}
.cui-hd .cancel-btn {
    padding-left: 30rpx;
    text-align: left;
}
.cui-hd .ok-btn {
    padding-right: 30rpx;
    text-align: right;
}
.cui-bg {
    background: #f4f4f4;
    overflow: hidden;
    height: 100%;
}

.tip-addpas {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.train-list {
    background: #fff;
    line-height: 86rpx;
}
.train-list .item {
    border-style: solid;
    border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;
    border-width: 0;
    border-bottom-width: 1px;
    padding-right: 30rpx;
    padding-left: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.train-list .item .info {
    flex: 1;
}
.train-list .item:last-child {
    border-bottom: 0;
}
.train-list .add-box {
    position: relative;
    padding-left: 160rpx;
    min-height: 88rpx;
    font-size: 28rpx;
}
.train-list .add-box.greyarr {
    padding-right: 60rpx;
}

tip-pass-list .greyarr::after {
    width: 12rpx;
    height: 12rpx;
    border-top: 2rpx solid #ccc;
    border-right: 2rpx solid #ccc;
    transform: rotate(45deg);
    position: absolute;
    content: '';
    right: 36rpx;
    top: 50%;
    margin-top: -8rpx;
}
.train-list .label {
    margin-left: 30rpx;
    width: 160rpx;
    left: 0;
    top: 0;
    position: absolute;
    color: #666;
    font-size: 28rpx;
}

.tip-pass-list .item {
    line-height: 22px;
    position: relative;
    margin-left: 0;
    height: 44px;
}

.item-edit {
    padding: 8px 60px;
}
.item-noedit {
    padding: 8px 60px 8px 15px;
}

.tip-pass-list .disabled {
    color: #b2b2b2;
}

.backmask {
    transition: all 300ms ease-in-out;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
}
.backmask.active {
    z-index: 3000;
    background-color: rgba(0, 0, 0, 0.5);
}

.add-btn {
    display: inline-block;
    width: calc(100% - 2rem);
    text-align: center;
    position: relative;
    border-radius: 4px;
    border: solid 1px white;
    background-color: white;
    margin: 0 15px 10rpx;
    line-height: 40px;
    font-size: 28rpx;
}
.add-btn:after {
    display: none;
}

.edit {
    width: 60px;
    height: 100%;
    position: absolute;
    left: 0;
    right: auto;
    top: 0;
}

.edit::after {
    width: 18px;
    height: 18px;
    position: absolute;
    content: '';
    background-image: url(//pic.c-ctrip.com/h5/train/train-icon.png?v=20160629);
    background-repeat: no-repeat;
    background-size: 200px;
    background-position: -100px -40px;
    left: 50%;
    top: 50%;
    margin: -9px 0 0 -9px;
}

.choose {
    width: 46px;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
}
.choose::after {
    width: 14px;
    height: 14px;
    position: absolute;
    content: '';
    border: 1px solid #b2b2b2;
    left: 50%;
    top: 50%;
    margin: -8px 0 0 -8px;
}
.tip-pass-list .current .choose::after {
    width: 18px;
    height: 16px;
    border: 0;
    background-image: url(//pic.c-ctrip.com/h5/train/train-icon.png?v=20160629);
    background-repeat: no-repeat;
    background-size: 200px;
    background-position: -81px -42px;
}
.tag-grey {
    color: #999;
    font-size: 26rpx;
    margin: -2px 6px 0;
}
.identity {
    font-size: 24rpx;
    color: #666;
}
.icon-edit-noborder {
    margin-right: 20rpx;
}
.icon-edit-noborder:before {
    font-size: 25px;
}

.tip-pass-none {
    height: 400rpx;
    text-align: center;
}

.tip-text {
    font-size: 0.75rem;
    color: #999;
    line-height: 1.5rem;
    text-align: center;
    margin-bottom: 8rpx;
}
