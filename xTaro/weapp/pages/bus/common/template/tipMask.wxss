/* pages/bus/common/template/tipMask.wxss */
.tipmask {

  position: fixed;
  z-index: 1000;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);

}

.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tipMaskBtnImage {
  width: 669rpx;
  height: 335rpx;
  margin-top: 40rpx;
}
.tipMaskBtn {
  background-color: transparent;
  background-image: url('http://images3.c-ctrip.com/BUS/wechatapp/mask_tip_button.png');
  background-position: 0;
  background-repeat: no-repeat;
  background-size: 100%;
  width: 309rpx;
  height: 70rpx;
  margin-top: 120rpx;
}

.tipmask .button-hover {
  transform: scale(0.95);
}