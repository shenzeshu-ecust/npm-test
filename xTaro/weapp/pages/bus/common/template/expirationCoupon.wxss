.coupon-container {
    position: relative;
    background: linear-gradient(-90deg, rgb(255, 255, 255) 0%, rgba(255, 223, 224, 0.6) 100%);
    border-radius: 8rpx;
    height: 68rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    overflow: hidden;
}

.tip-content {
    display: flex;
    align-items: center;
}

.tip-content .index-coupon-redbag {
    height: 24rpx;
    width: 24rpx;
    padding-left: 20rpx;
    padding-right: 8rpx;
}

.point-text {
    color: #333333;
    font-size: 24rpx;
    font-weight: normal;
    width: 378rpx;
}

.point-text .price {
    font-weight: 600;
    color: #f63b2e;
}

.interval-content {
    display: flex;
    align-items: center;
    font-size: 0;
    width: 248rpx;
    overflow: hidden;
    background: url('//pic.c-ctrip.com/bus/resource/index/interval_bg.png') no-repeat;
    background-size: 100% 100%;
    justify-content: flex-end;
    padding-right: 10rpx;
}

.interval-time-wrap {
    width: 28rpx;
    height: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 6rpx;
    background: #F85E53;
}

.interval-time {
    font-size: 20rpx;
    font-weight: 500;
    color: #FFFFFF;
}

.interval-colon {
    padding: 0 5rpx;
    font-size: 20rpx;
    font-weight: 500;
    color: #F63B2E;
}

.interval-time-tip {
    font-size: 24rpx;
    margin-left: 10rpx;
    color: #333333;
}

