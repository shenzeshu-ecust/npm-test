.price-detail {
    line-height: 85rpx;
    color: #333;
    position: absolute;
    z-index: 11;
    bottom: 100%;
    background-color: #fff;
    width: 100%;
    font-weight: 400;
    animation: transIn 250ms linear forwards;
    padding-top: 16rpx;
    border-radius: 16rpx 16rpx 0 0;
    white-space: nowrap;
    font-size: 28rpx;
}

@keyframes transIn {
    0% {
        transform: translate(0, 100%);
    }
    100% {
        transform: translate(0, 0);
    }
}

.price-detail .left {
    width: 45%;
}

.cancelButton-placeholder {
    width: 146rpx;
    padding: 0 0 0 24rpx;
}
.price-detail .cancelButton {
    background-color: white;
    font-size: inherit;
    padding-left: 0;
    padding-right: 0;
    pointer-events: auto;
}
.price-detail .cancelButton[disabled]:not([type]) {
    color: #999999;
    background-color: white;
}

.price-detail .cancelButton:after {
    display: none;
}

.price-detail > view:last-child {
    padding-bottom: 30rpx;
}
.price-detail view {
    border-top: 1px solid #f3f3f3;
}
.price-detail view:first-child {
    border-top: none;
}
.price-detail .margin {
    margin: 0 32rpx;
}
.price-detail .discount {
    margin-left: 40rpx;
    position: relative;
    overflow: visible;
}
.price-detail .discount .left {
    width: 42%;
}

.price-detail .discount:after {
    content: '';
    position: absolute;
    width: 0rpx;
    border-left: 1rpx solid #f3f3f3;
    height: 60%;
    top: -10%;
    left: -30rpx;
}

.price-detail .discount:before {
    content: '';
    position: absolute;
    height: 0;
    border-top: 1rpx solid #f3f3f3;
    width: 20rpx;
    top: 50%;
    left: -30rpx;
}
.price-detail .nobr {
    border-top: none;
}

.price-detail .service {
    font-size: 24rpx;
    color: #999999;
    font-weight: normal;
    line-height: 24px;
    margin-top: 30rpx;
    white-space: initial;
    word-break: break-all;
    pointer-events: auto;
}

.price-detail .service .desc {
    color: #0086f6;
}
