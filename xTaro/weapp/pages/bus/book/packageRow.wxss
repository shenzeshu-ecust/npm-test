@import   "../bus.wxss";
.packagerow-insurance {
  position: relative;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: #ffffff;
  margin-top: 16rpx;
  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx;
}



.ico-info:before {
  font-size: 32rpx;
}

.packagerow-insurance .title {
  margin-right: 10rpx;
}

.big-hot {
  padding: 10rpx;
  margin: -10rpx;
}

.packagerow-insurance .select:first-child {
  padding-right: 30rpx;
  background-position: 0 0;
}
.packagerow-insurance .select:last-child {
  padding-left: 30rpx;
  background-position: 30rpx 0;
}

.packagerow-insurance .tag {
  /* border:  1rpx solid #FFAD7F; */
  /* font-size: 22rpx; */
  font-size: 20rpx;
  border-top-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  margin-left: 10rpx;
  line-height: 28rpx;
  padding: 0 8rpx;
  color: #ffffff;
  background: linear-gradient(left,#FF7700, #FFA50A);
  background: -webkit-linear-gradient(left,#FF7700, #FFA50A);
}

.packagerow-insurance .tag.new {
   background: #52B47F;
}

.packagerow-insurance .bus-ins-explain.color-green {
  color: #52B47F;
}

.packagerow-insurance .bus-ins-explain {
  padding-top: 16rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #999999;
  line-height: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.packagerow-insurance .bus-ins-explain .subtitle {
  vertical-align: middle;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break:break-all;
  overflow: hidden;
  max-height: 64rpx;
}

.packagerow-insurance .flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.packagerow-insurance .select:active {
  opacity: 0.7;
}

.packagerow-insurance .select  {
  width: 44rpx;
  height: 44rpx;
  background-repeat: no-repeat;
  background-size: 44rpx 44rpx;
  font-size: 44rpx;
  margin-top: 5rpx;
}

.packagerow-insurance .select.padding-margin {
  padding-bottom: 20rpx;
  padding-top: 30rpx;
  margin-top: -25rpx;
}
.icon-checked-round:before, .icon-check-round:before {
  font-size: 44rpx;
  vertical-align: top;
}
.packagerow-insurance .bus-b-m {
}
.packagerow-insurance .bus-discount {
  color: #999999;
  text-decoration: line-through;
}
.packagerow-insurance .bus-unit {
  font-size: 24rpx;
}

.packagerow-insurance .giveTag {
  font-size: 22rpx;
  color: #FF9913;
  border: 1rpx solid #FF9913;
  border-radius: 4rpx;
  margin-left: 20rpx;
  padding: 2rpx 5rpx;
}

.packagerow-insurance .free-text {
    padding-left: 30rpx;
    background-position: 30rpx 0;
    color: #ff6600;
    font-size: 30rpx;
    font-weight: 500;
}

