    width: 345rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.instantDeductionCard .deduction-coupou-box .value text {
    color: #ffffff;
    font-size: 24rpx;
    letter-spacing: 4px;
}
.instantDeductionCard .deduction-coupou-box .value{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 188rpx;
}
.instantDeductionCard .deduction-coupou-box .coupon .spec {
    font-size: 40rpx;
    font-weight: bold;
    letter-spacing: normal;
        padding: 0 4px;
}
.instantDeductionCard .deduction-coupou-box .tag{
    width: 155rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}
.instantDeductionCard .deduction-coupou-box .tag text {
    color: #ffffff;
    font-size: 24rpx;
}
.instantDeductionCard .deduction-coupou-box .price{
    display: inline-flex;
    align-items: baseline;
}
.instantDeductionCard .deduction-coupou-box .green{
    color: #00B87A;
    font-size: 24rpx;
}
.instantDeductionCard .deduction-coupou-box .price .old {
    color: #999999;
    font-size: 24rpx;
    font-weight: normal;
    letter-spacing: -1rpx;
}
.instantDeductionCard .deduction-coupou-box .price .old  text{
    text-decoration: line-through
}
.instantDeductionCard .deduction-coupou-box .price .now {
    color: #333333;
