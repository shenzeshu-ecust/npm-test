page {
	height: 100%
}

.realname-box{
	height: 100%;
    background-image: linear-gradient(-180deg, rgb(252, 252, 252) -48.77%, rgb(238, 238, 238) 100%);
    color: #333;
}

.rn-paytext{
	height: 16px;
	line-height: 16px;
    padding: 20rpx 0;
    font-size: 14px;
    color: #333;
    text-align: center;
    overflow: hidden;
}

.rn-paystate{
    line-height: 16px;
    position: relative;
}

.rn-paystate::before{
    content: '';
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background-color: #4A4A4A;
    display: inline-block;
    vertical-align: top;
    margin-right: 6px;
}

.rn-paystate::after{
    content: '';
    position: absolute;
    width: 7px;
    height: 3px;
    border-left: 2px solid #fff;
    border-top: none;
    border-bottom: 2px solid #fff;
    border-right: none;
    transform: rotate(-45deg);
    left: 3px;
    top: 4px;
}

.rn-cbox{
    background-color: #fff;
    border-radius: 5px;
    overflow: hidden;
    margin: 0 21rpx;
    padding: 0 27rpx
}

