.g-toastbox{
    display: flex;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    align-items:center;/*垂直居中*/
    justify-content: center;/*水平居中*/
}

.g-toastmain{
    min-width: 100px;
    padding: 20px 15px;
    background: rgba(0,0,0, .8);
    color: #fff;
    border-radius: 5px;
    text-align: center;
    transform: translateY(-15%);
}