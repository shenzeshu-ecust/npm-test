/* pages/noLogin/noLogin.wxss */
.back_view {
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-items: center;
  justify-content: space-around;
}

.content_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.reminder_icon {
  width: 200rpx;
  height: 200rpx;
}

.reminder_text {
  text-align: center;
  margin-top: 60rpx;
  color: #999999;
  font-size: 28rpx;
  line-height: 150%;
}

.line {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: #999999;
}

.reminder_text2 {
  font-size: 24rpx;
  color: #999999;
}

.login_action {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40px;
  width: 570rpx;
  height: 98rpx;
  background-color: #1980fe;
  border-radius: 49rpx;
  font-size: 36rpx;
  color: #ffffff;
}