/* pages/cardShare/trainShare/trainShare.wxss */
page {
  height: 100%;
}
.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f8fafe;
}

.city-map-back{
  display: flex;
  position: absolute;
  flex-direction: column;
  width: 100%;
}
.destination-image {
  width: 100%;
  height: 750rpx;
  margin-bottom: 1rpx;
}
.image-cover {
  /* position: absolute; */
  margin-top: -750rpx;
  width: 100%;
  height: 750rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.header-back{
  display: flex;
  flex-direction: column;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.destination-title {
  color: #fff;
  font-size: 56rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
.header-sub-back {
  display: flex;
  margin-top: 22rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.header-sub-number {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}
.header-sub-text {
  color: #eee;
  font-size: 24rpx;
}
.header-sub-date {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.overview-back {
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  overflow: hidden;
}
.overview-title {
  font-size: 34rpx;
  color: #fff;
  margin: 24rpx 0 24rpx 24rpx;
}
.overview-day-tag {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  flex-shrink: 0;
  width: 72rpx;
  margin-top: 6rpx;
  margin-left: 24rpx;
}
.overview-day-back {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-right: 24rpx;
}
.overview-connect-line {
    height: 2rpx;
    width: 24rpx;
    background-Color: #666
}
.overview-poi-name {
  font-size: 28rpx;
  color: #fff;
  padding: 8rpx 12rpx 8rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid #666;
  /* margin-bottom: 16rpx; */
}
.overview-no-poi {
  color: #fff;
  font-size: 28rpx;
  margin-top: 8rpx;
}
.overview-show-all {
  display: flex;
  justify-content: center;
  background-color: rgba(4, 38, 50, 0.8);
  height: 73rpx;
  margin-top: -73rpx;
}
.overview-show-text {
  color: #0196FF;
  font-size: 14px;
  margin-top: 16rpx
}

.list {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #f8fafe;
  position: relative;
  margin-top:30rpx;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  overflow: hidden;
}
.daily-back-image {
  width: 100%;
  height: 106rpx;
}
.daily-title {
  color: #333;
  font-size: 40rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  display: block;
  padding-left: 24rpx;
}

.daily-no-data {
  color: #666;
  font-size: 28rpx;
  margin-left: 48rpx;
  margin-top: 24rpx;
}

.distance-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-left: 80rpx; */
}
.distance-cion {
  width: 26rpx;
  height: 21rpx;
  min-height: 21rpx;
  min-width: 26rpx;
}
.distance-text {
  color: #999999;
  font-size: 26rpx;
  margin-left: 5rpx;
}

.card-row-view-poi {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
}
.card-content-view {
  margin: 20rpx 24rpx 20rpx 0rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 20rpx 1rpx #e9e9e9;
  border-radius: 10rpx;
  position: relative;
  padding: 20rpx;
}
.card-rank-route-card {
  margin-top: 10px;
  font-size: 15px;
  /* border: 1px solid red; */
  /* padding-left: 20px; */
}
.row-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.column-view{
  display: flex;
  flex-direction: column;
}

.line-icon-poi {
  width: 44rpx;
  height: 44rpx;
}
.line-icon-point_wrapper {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  /* margin-top: -26rpx; */
}
.line-icon-point {
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background-color: #CCC;
}
.line-up_4001 {
  height: 38rpx !important;
}
.line-up {
  width: 2rpx;
  height: 65rpx;
  background-color: #eee;
}
.line-down {
  width: 2rpx;
  flex-grow: 1;
  background-color: #eee;
}

.hotel-name-text {
  color: #333333;
  font-size: 34rpx;
  font-weight: bold;
}
.buttom-out-view {
  width:96%;
  height: 128rpx;
  padding-bottom: 10rpx;
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.buttom-view {
  width: 95%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #0086f6;
  border-radius: 12rpx;
}
.buttom-text {
  color: #fff;
  width: 95%;
  height: 88rpx;
  font-size: 34rpx;
  font-weight: bold;
  background-color: #0086f6;
}
.no-poi-text {
  color: #999999;
  font-size: 26rpx;
  margin-left: 70rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.no-poi-line {
  height: 2rpx;
  width: 40rpx;
  background-color: #999999;
}
.no-poi-line-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.no-poi-line-text {
  color: #999999;
  font-size: 26rpx;
  margin: 8rpx;
}

.no-poi-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* width: 100%; */
  /* height:400rpx; */
}
.travel-bottom {
  margin: 20rpx 0 200rpx 0; width: 100%; color: #999; font-size: 28rpx; text-align: center;
}

.fail-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:100%;
}

.fail-icon {
  width: 400rpx;
  height: 400rpx;
}

.fail-text {
  color: #333333;
  font-size: 34rpx;
}
.try-agin {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  text-align: center;
  height: 60rpx;
  width: 250rpx;
  background-color: #0086f6;
  border-radius: 8rpx;
}
.try-agin-text {
  color: #eee;
  font-size: 30rpx;
}
.save-route{
  position: fixed;
  width: 100%;
  height: 138rpx;
  background-color: white;
  bottom: 0;
  display: flex;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
.save-route-container{
  background-color: #0086F6;
  height: 88rpx;
  width: 100%;
  margin: 16rpx 32rpx 0rpx 32rpx;
  border-radius: 12rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}
.save-text{
  font-size: 34rpx;
  color: white;
  line-height: 42rpx;
}
.go-to-details{
  height: 88rpx;
  width: 100%;
  margin: 16rpx 32rpx 0rpx 32rpx;
  border-radius: 12rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  background-color: white;
  border: 1px solid #0086F6;
}
.go-to-details-text{
  font-size: 34rpx;
  color: #0086F6;
  line-height: 42rpx;
}