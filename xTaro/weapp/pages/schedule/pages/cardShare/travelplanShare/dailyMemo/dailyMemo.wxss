.card-content-view {
    margin: 20rpx 24rpx 20rpx 24rpx;
    background-color: #fff;
    box-shadow: 0rpx 0rpx 20rpx 1rpx #e9e9e9;
    border-radius: 10rpx;
    position: relative;
    padding: 24rpx;
}

.row-view{
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .memo-icon-image {
    width: 28rpx;
    height: 33rpx;
  }
  
  .memo-name-text {
    color: #333333;
    font-size: 28rpx;
    font-weight: bold;
    margin-left: 10rpx;
  }
  
  .memo-content-text {
    color: #666666;
    font-size: 28rpx;
    margin-top: 20rpx;
  }

  .max-two-line {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}