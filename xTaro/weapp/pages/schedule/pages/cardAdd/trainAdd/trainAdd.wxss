.input-box {
  width: 100%;
  height: 224rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-shadow: 0px 4rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.input-box-fixed {
  width: 100%;
  height: 224rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-shadow: 0px 4rpx 10rpx 0 rgba(0, 0, 0, 0.1);
  background-color: #fff;
  z-index: 999;
  animation: fadeIn 0.5s;
  position: fixed;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

