
page {
  background-color:#ffffff;
}

.top-shadow {
  height: 10rpx;
  border: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.show-top-shadow {
  box-shadow: 0 4rpx 5rpx 0 rgba(0, 0, 0, 0.10) inset;
}

.search-header {
  display: flex;
  flex-direction: row;
  padding-top: 24rpx;
  height: 95rpx;
  box-sizing: border-box;
  border-bottom: 1rpx #f0f0f0 solid;
}

.fixed-search-header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 95rpx;
  z-index: 999;
  background: #fff;
  animation: fadeIn 0.5s;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.flight-no-search-title, .airport-name-search-title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  height: 70rpx;
}

.flight-no-search-title text, .airport-name-search-title text {
  margin: 0rpx;
  box-sizing: border-box;
  line-height: 42rpx;
}

.search-title-container {
  height: 70rpx;
  width: auto;
  display: inline-block;
  box-sizing: border-box;
}

.search-title-container view {
  height: 4rpx;
  margin-top: 24rpx;
}

.search-title-select {
  color: #1980fe;
  font-weight: 700;
}

.bottom-border-select {
  background: #1980fe;
}

.cutting-line {
  height: 1rpx;
  background-color: #f0f0f0;
  transform: scaleY(0.5);
  transform-origin: 0 0;
  border: none;
}

.hidden-search {
  display: none;
}

/* 航班号搜索样式 */

.search-by-flight-no .flight-no-search-condition {
  display: flex;
  flex-direction: row;
  padding: 30rpx 22rpx;
  box-shadow: 0 4rpx 5rpx 0 rgba(0, 0, 0, 0.10);
}

.search-by-flight-no .select-flight-no-container,
.search-by-flight-no  .select-date {
  border: 2rpx solid #f0f0f0;
  border-radius: 4rpx;
}

.search-by-flight-no .flight-no-search-condition input {
  height: 72rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 42rpx;
}

.search-by-flight-no .segment-selected {
  background-color: #e8f2fe;
}

.search-by-flight-no .condition-selected {
  background-color: rgba(0, 0, 0, 0.06);
}

.search-by-flight-no .select-flight-no-container {
  display: flex;
  flex-direction: row;
  flex: 1;
  margin-right: 10rpx;
  height: 76rpx;
  padding: 0 20rpx;
}

.search-by-flight-no .flight-no-search-condition .select-date {
  margin-left: 10rpx;
  flex: 1;
  padding: 0rpx 20rpx;
  height: 76rpx;
}

.search-by-flight-no .clear-flight-no-search-container {
  width: 92rpx;
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: -20rpx;
}

.search-by-flight-no .clear-flight-no-search {
  width: 36rpx;
  height: 36rpx;
}

.search-by-flight-no .segment-search-result {
  padding: 0rpx 30rpx;
  margin-bottom: 150rpx;
}

.search-by-flight-no .mul-segment-reminder {
  text-align: center;
  margin: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

.search-by-flight-no .mul-segment {
  display: flex;
  flex-direction: column;
  margin: 40rpx 0;
}

.search-by-flight-no .segment {
  border-radius: 10rpx;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  padding: 0 30rpx;
  color: #333;
}

.search-by-flight-no .segment image {
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.search-by-flight-no .right {
  text-align: right;
}

.search-by-flight-no .search-placeholder {
  color: #999;
}

/* 起降地搜索样式 */

.search-by-airport-name .fix-condition {
  position: fixed;
  left: 0;
  top: 95rpx;
  height: 234rpx;
  z-index: 998;
  background: #fff;
  animation: fadeIn 0.5s;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.search-by-airport-name .shift-for-fix-top {
  margin-top: 344rpx;
}

.search-by-airport-name .airport-name-search-condition input {
  height: 72rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 42rpx;
}

.search-by-airport-name .clear-depart-airport-name-search-container,
.search-by-airport-name .clear-arrive-airport-name-search-container {
  width: 92rpx;
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: -20rpx;
}

.search-by-airport-name .clear-depart-airport-name-search,
.search-by-airport-name  .clear-arrive-airport-name-search {
  width: 36rpx;
  height: 36rpx;
}

.search-by-airport-name .airport-name-search-condition {
  height: 174rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx 22rpx;
  box-shadow: 0 4rpx 5rpx 0 rgba(0, 0, 0, 0.10);
}

.search-by-airport-name .select-airport-name {
  display: flex;
  flex-direction: row;
  position: relative;
}

.search-by-airport-name .switch-airport-name {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -28rpx;
  margin-left: -28rpx;
  z-index: 999;
}

.search-by-airport-name .select-date-container {
  height: 76rpx;
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
}

.search-by-airport-name .airport-name-search-result {
  display: flex;
  flex-direction: column;
  margin: 25rpx 50rpx;
}

.search-by-airport-name .airport-name-search-result text {
  font-size: 30rpx;
  color: #333;
  margin: 15rpx 0rpx;
}

.search-by-airport-name .flight-search-result {
  margin-left: 22rpx;
  margin-right: 22rpx;
  height: 100%;
  margin-bottom: 150rpx;
}

.search-by-airport-name .flight {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  padding: 30rpx 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.search-by-airport-name .left-part, .search-by-airport-name  .right-part {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.search-by-airport-name .flight-first-part {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.search-by-airport-name .flight-second-part {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.search-by-airport-name .flight-second-part text {
  text-align: right;
}

.search-by-airport-name .flight-third-part {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 0rpx 10rpx;
}

.search-by-airport-name .fill-blank-dot {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-by-airport-name .line-container {
  padding-top: 14rpx;
}

.search-by-airport-name .hollow-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
}

.search-by-airport-name .connect-line {
  background-color: #ccc;
  height: 2rpx;
  width: 40rpx;
}

.search-by-airport-name .filled-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  background-color: #ccc;
}

.search-by-airport-name .flight-forth-part {
  flex: 2;
  display: flex;
  flex-direction: column;
  position: relative;
}

.search-by-airport-name .flight-fifth-part {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.search-by-airport-name .flight-selected-img {
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.search-by-airport-name .first-line {
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
  font-weight: 600;
}

.search-by-airport-name .second-line {
  font-size: 26rpx;
  color: #666;
  margin-top: 6rpx;
  line-height: 37rpx;
}

.search-by-airport-name .add-travel {
  height: 90rpx;
  width: 100%;
  position: absolute;
  bottom: 30rpx;
  left: 0rpx;
}

.search-by-airport-name .add-travel text {
  margin: 0rpx 50rpx;
  height: 100%;
  display: block;
  font-weight: 500;
  font-size: 34rpx;
  border-radius: 49px;
  background: #1980fe;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 0;
}

.search-by-airport-name .condition-selected {
  background-color: rgba(0, 0, 0, 0.06);
}

.search-by-airport-name .select-depart-airport-name-container,
.search-by-airport-name  .select-arrive-airport-name-container,
.search-by-airport-name .select-date-container {
  border: 2rpx solid #f0f0f0;
  border-radius: 4rpx;
}

.search-by-airport-name .select-depart-airport-name-container {
  margin-right: 48rpx;
  display: flex;
  flex-direction: row;
  flex: 1;
  height: 76rpx;
  padding: 0 20rpx;
}

.search-by-airport-name .select-arrive-airport-name-container {
  margin-left: 48rpx;
  display: flex;
  flex-direction: row;
  flex: 1;
  height: 76rpx;
  padding: 0 20rpx;
}

.search-by-airport-name .flight-selected {
  background-color: #e8f2fe;
}

.search-by-airport-name .search-placeholder {
  color: #999;
}

.search-result-title {
  font-size: 26rpx;
  color: #999;
  line-height: 37rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}