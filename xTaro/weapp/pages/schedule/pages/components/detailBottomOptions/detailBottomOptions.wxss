
.flight-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  z-index: 100;
}
.iPhoneXStyle{
  height: 17px;
  background-color:white;
}

.flight-bottom-wrap {
  height: 106rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  position:relative;
}

.custom-button-for-compt {
  z-index: 10;
  width:100%;
  height:100%;
}

.custom-button {
  flex: 1;
  align-items: center;
  display: flex;
  justify-content: center;
  background-color: #fff;
  height: 100%;
}

.custom-button::after {
  border: none;
}

.add-view {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.add-btn {
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #000;
}
.ctrip-icon {
  margin-right: 10rpx;
  vertical-align: middle;
  width: 33rpx;
  height: 33rpx;
}
.share-icon {
  margin-right: 10rpx;
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
}
.horizon-bottom {
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
}
.vertical-bottom {
  z-index: 100;
  position: absolute;
  left: 50%;
  background-color: #f5f5f5;
  height: 106rpx;
  width: 2rpx;
}
.add-sucess-view{
  height: 90rpx;
  background-color: #030303;
  opacity: 0.7;
  position:relative;
  transform:translateY(50px);
}
.add-sucess-text{
  color: white;
  font-size: 32rpx;
}
.private-button{
  background-color: #030303;
  height: 90rpx;
}
.white-arrow-icon{
  width: 20rpx;
  height: 20rpx;
}
.bottom-realname {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  padding-top: 19rpx;
}
.share-list-add-btn {
  margin: 25rpx 0 58rpx;
  color: #fff;
  font-weight: 600;
  font-size: 34rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(-90deg, rgb(0, 118, 245) 0%, rgb(0, 167, 250) 100%);
  text-align: center;
  border-radius: 12rpx;
}
.btn-disable {
  background: #ccc;
}
.share-list-bottom-wrapper {
  background: #fff;
  box-sizing: border-box;
  padding: 0 32rpx;
}
.share-list-bottom-wrapper button {
  padding-left: 0 !important;
  padding-right: 0 !important;
}
.realname-link {
  color: #037fe9;
  font-size: 24rpx;
  vertical-align: middle;
  margin-left: 9rpx;
}
.relname-forward-icon {
  margin-top: 3rpx;
}
.realname-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}