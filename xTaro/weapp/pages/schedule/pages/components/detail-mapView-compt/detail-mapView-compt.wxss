/* pages/components/detail-mapView-compt/detail-mapView-compt.wxss */

.map-view-container{
  width: 100%;
  min-height:274rpx;
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: center;
}

.map-view-bgimg{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.map-view-content{
  background-color: #FFFFFF;
  width: 650rpx;
  min-height: 132rpx;
  margin-top: 71rpx;
  margin-bottom: 71rpx;
  display: flex;
  justify-items: center;
  flex-direction: column;
  z-index: 2;
}

.map-view-content-box{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.map-view-content-btns{
  display: flex;
  margin-left: 30rpx;
  margin-bottom: 32rpx;
}

.btn-item-box{
  display: flex;
  align-items: center;
}

.btn-item-icon{
  width: 36rpx;
  height: 36rpx;
}

.btn-item-text{
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #1980FE;
}

.btn-item-space{
  margin-left: 100rpx;
}

.cutting-line {
  margin: 0 0 32rpx 0;
  height: 2rpx;
  background-color: #f5f5f5;
}

.map-view-content-detail{
  margin-left: 30rpx;
  margin-top: 31rpx;
  margin-bottom: 20rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  width: 505rpx;
}

.map-view-title{
  font-size: 16px;
  color: #333333;
}

.map-view-desc{
  margin-top: 10rpx;
  font-size: 13px;
  color: #999999;
}

.map-view-nav{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.map-view-nav-img{
  width: 100rpx;
  height: 100rpx;
}