view {
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
}

.card-container {
  /* padding: 0 24rpx 0 28rpx; */
}
.card-top {
  height: 80rpx;
  display: flex;
  align-items: center;
}
.card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 24rpx 0 28rpx;
}
.hotel-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}

.hotel-text {
  color: #666;
  font-size: 26rpx;
  margin-right: 8rpx;
}

.info-container {
  display: flex;
  flex-direction: column;
  margin-right: 12rpx;
}
.hotel-name-wrapper {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  max-width: 514rpx;
}
.hotel-name-wrapper__title {
  display: flex;
  flex-direction: column;
}
.hotel-name-wrapper__forward {
  margin-top: 8rpx;
  font-weight: bold;
  margin-left: 3rpx;
}
.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}
.hotel_sub_name {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #999;
}
.room-info {
  color: #999;
  font-size: 26rpx;
  line-height: 30rpx;
  margin-top: 12rpx;
}
.check-view {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
}
.check-date {
  color: #333;
  font-size: 26rpx;
}
.check-time {
  color: #333;
  font-size: 26rpx;
}
.check-duration {
  color: #999;
  font-size: 22rpx;
  margin: 0 12rpx;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 6rpx;
  border: 1px solid #ddd;
  border-radius: 16rpx;
  position: relative;
}
.check-duration::before, .check-duration::after {
  content: '';
  width: 6rpx;
  height: 1rpx;
  background-color: #ddd;
}
.check-duration::before {
  position: absolute;
  left: -6rpx;
  top: 50%;
}
.check-duration::after {
  position: absolute;
  right: -6rpx;
  top: 50%;
}
.map_img {
  width: 182rpx;
  height: 240rpx;
}
.share_bottom {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-right: 24rpx;
  padding-left: 24rpx;
}

.share_bottom_left {
  color: #666;
  font-size: 26rpx;
}
.share_bottom_right {
  color: #0086f6;
  font-size: 26rpx;
}
.only-two-line {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}