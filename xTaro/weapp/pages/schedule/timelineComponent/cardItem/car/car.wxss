
.container{
  padding-left: 36rpx;
  padding-right: 36rpx;
  padding-bottom: 30rpx;
  padding-top: 12rpx;
}
.row{
  display: flex;
  flex-direction: row;
}
.text-color-333{
  color: #333;
}
.text-color-999{
  color: #999;
}
.font-size-36{
  font-size: 36rpx;
}
.font-size-26{
  font-size: 26rpx;
}
.font-bold{
  font-weight: bold;
}
.car-icon{
  width: 42rpx;
  height: 42rpx;
}
.title-view{
    justify-content: space-between;
}
.car-info-view{
  padding-top: 14rpx;
  padding-bottom: 2rpx;

  /* display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: horizontal; */
}

.depart-view{
  padding-top: 26rpx;
}
.depart-address{
  padding-left: 14rpx;
}
.arrival-address{
  padding-left: 14rpx;
}
.arrival-view{
  padding-top: 14rpx; 
}
.car-num{
  padding: 2rpx 10rpx;
  border: solid 2rpx #ccc;
  background-color: #f5f5f5;
  border-radius: 4rpx;
  flex-shrink: 0;
}
.car-info{
  padding-left: 14rpx;
}
.driverName{
  flex-shrink: 0;
}
.hollow-circle{
  border: solid 2rpx #1980fe;
  width: 12rpx;
  height: 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}
.solid-circle{
  background-color: #1980fe;
  border-radius: 8rpx;
  width: 16rpx;
  height: 16rpx;
  flex-shrink: 0;
}
.vertical-center{
  align-items: center;
}
.ellipsis {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.arrival-address, .depart-address{
  line-height: 1.25;
}

.chartered-container{
  display: flex;
  flex-direction: column;
  padding: 18rpx 36rpx;
  margin-bottom: 10rpx;
}
.chartered-title_back {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.chartered-title {
  font-size: 36rpx;
  color: #333333;
}

.chartered-vendorLogo {
  flex-shrink: 0;
  width: 100rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

.chartered-tip {
  color: #999999;
  font-size: 22rpx;
}

.chartered-tip_content {
  margin-top: 8rpx;
  color: #333333;
  font-size: 26rpx;
  line-height: 1.25;
}

/** 两行省略号 **/
.ellipsis-2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}