/* pages/timeLine/flight/flight.wxss */
.container{
  padding: 10rpx 28rpx 0;
  margin-bottom: 30rpx;
}
.row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.column{
  display: flex;
  flex-direction: column;
}
.depart-item-view {
  justify-content: center;
}
.flight-icon {
  width: 40rpx;
  height: 40rpx;
}
.flight-change-icon{
  width: 26rpx;
  height: 26rpx;
  flex-shrink: 0;
  align-self: flex-start;
  margin-top: 2px;
}
.change-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.change-item-view{
  margin-left: 14rpx;
}
.align-right{
  text-align: right;
}
.white-color{
  color: #fff;
}
.font-size-22{
  font-size: 22rpx;
}
.font-size-24{
  font-size: 24rpx;
}
.font-size-26{
  font-size: 26rpx;
}
.font-size-32{
  font-size: 32rpx;
}
.font-size-36{
  font-size: 36rpx;
}
.font-size-48{
  font-size: 48rpx;
}
.font-bold{
  font-weight: bold;
}
.font-thin{
  font-weight: lighter;
}
.helvetica-bold{
  font-family: Helvetica-Bold;
}
.helvetica{
  font-family: Arial, Helvetica, sans-serif;
}
.text-color-666{
  color: #666;
}
.text-color-333{
  color: #333;
}
.text-color-999{
  color: #999;
}
.text-color-aaa{
  color: #aaa;
}
.maintime-tip{
}
.maintime{
  padding-top: 0rpx;
}
.time-padding-bottom {
  padding-bottom: 8rpx;
}
.secondtime{
  padding-top: 0rpx;
  color: #999;
}
.checkin-info{
  margin: 0 16rpx;
  display: flex;
  justify-content: space-between;
}
.item-text{
  margin-left: 16rpx;
  color: #333;
  font-weight: 500;
}
.depart-item-view{
  flex: 4;
}
.arrival-item-view{
  flex: 4;
}
.flight-basic-info {
  align-items: center;
}
.flight-status{
  align-items: center;
  /* height: 53rpx; */
}
.flight-state-label{
  border-radius: 5rpx;
  padding: 2rpx 8rpx 3rpx;
}
.checkin-info-left .item-text {
  max-width: 150rpx;
}
.checkin-info-middle{
  align-items: center;
}
.notice-tip-label{
  color: #ED494B;
  font-weight: 500;
}
.notice-view{
  padding: 0 28rpx;
  max-height: 40rpx;
}
.normal-tip {
  line-height: 24rpx;
}
.maybe-delay-view{
  align-items: center;
}
.commonHeight{
  height: 72rpx;
}
.checkin-item-wrapper{
  border-radius: 12rpx;
  background: #f8fafd;
  margin: 0 16rpx;
}
.passenger-view{
  display: flex;
  align-items: center;
  justify-self: flex-start;
}
.mid-line {
  border-top: 1rpx solid #eee;
}
.padding-lr-16{
  padding-left: 16rpx;
  padding-right: 16rpx;
}
.passenger-label{
  font-weight: 500;
}
.line{
  height:2rpx;
  background-color:#f5f5f5;
  margin: 0 36rpx;
  flex: 1;
}
.arrow-size{
  width: 26rpx;
  height: 26rpx;
  flex-shrink: 0;
}
.passenger-tip-label{
  min-width: 94rpx;
}
.flight-change-notice{
  align-items: center;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  position: relative;
  height: 72rpx;
  padding-left: 28rpx;
  padding-right: 16rpx;
}
.color-red {
  color: #ED494B;
}
.change-notice-tip{
  font-weight: 500;
}
.change-notice{
  line-height: 1.25;
}
.notice-label{
  /* margin-right: 40px; */
}
.checkin-item{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.flight-duty-line {
  background-color: rgba(255, 255, 255, 0.5);
  height: 60rpx;
  width: 2rpx;
  transform: rotate(10deg);
  -webkit-transform: rotate(10deg);
}
.ellipsis {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
/** 两行省略号 **/
.ellipsis-2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cts_icon_arrow_line1 {
  width: 160rpx;
  height: 21rpx;
  margin-top: 2rpx;
}
.flight-tip-wrapper {
  font-size: 24rpx;
  color: #666;
  margin: 0 28rpx 20rpx;
}
.normal-height {
  height: 46rpx;
}
.font-icon-error {
  margin-top: 3rpx;
}
.tips-content {
  margin: 0 28rpx 20rpx;
}