.master-recommend {
  position: absolute;
  right: 24rpx;
  bottom: 178rpx;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 102;
}
.mr-head-image {
  width: 200rpx;
  height: 53rpx;
}
.mr-backround-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 105;
  object-fit: contain;
}
.mr-card-content {
  margin-left: 8rpx;
}
.mr-card-image {
  width: 184rpx;
  height: 134rpx;
  border-radius: 8rpx;
  background: url(https://pages.c-ctrip.com/livestream/live/live_grey_placeholder.png) 50% repeat;
  background-size: 50%;
  position: relative;
  overflow: hidden;
}
.mr-price-btn {
  background: linear-gradient(-90deg, #ff001b 0%, #ff6600 100%);
  border-radius: 0px 0px 8rpx 8rpx;
  height: 42rpx;
  width: 184rpx;
  position: absolute;
  left: 0;
  top: 95rpx;
  color: #ffffff;
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  font-weight: 500;
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  align-items: center;
  display: flex;
  justify-content: center;
  margin-left: 8rpx;
}
.mr-goods-price {
  font-family: PingFangSC-Semibold;
  font-size: 26rpx;
  font-weight: 600;
  margin-left: 2rpx;
  margin-right: 2rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.mr-goods-title {
  color: #ffffff;
  font-family: PingFangSC-Semibold;
  font-size: 22rpx;
  font-weight: 600;
  width: 184rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 32rpx;
  text-align: center;
  z-index: 111;
}
.swiper{
  margin-top: 23rpx;
  position: relative;
  height: 185rpx;
  width: 100%;
  z-index: 110;
}
.dots{ 
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 12rpx; 
  display: flex; 
  justify-content: center; 
  z-index: 110;
} 
.dots .dot{ 
  margin: 0 8rpx; 
  width: 10rpx; 
  height: 10rpx; 
  background:rgba(255,255,255,1); 
  border-radius: 100rpx; 
  opacity: .5;
} 
.dots .dot.active{ 
  opacity: 1;
  width: 24rpx; 
  background:white; 
}

