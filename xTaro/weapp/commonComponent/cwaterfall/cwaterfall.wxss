}

.loading-state .loading-txt {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
  margin-left: 12rpx;
}

.loading-state .loading-txt.all {
  position: relative;
  background: #F8F8F8;
  margin-left: 0;
  padding: 0 10rpx;
  z-index: 2;
}

